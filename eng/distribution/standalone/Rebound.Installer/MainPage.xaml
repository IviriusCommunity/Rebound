<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.Installer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rebound.Installer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BoolToVisibilityConverter
            x:Key="BoolToInverseVisibilityConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
    </Page.Resources>
    <Grid>
        <StackPanel
            Margin="12,8"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Spacing="8">
            <TextBlock FontSize="12" Text="Rebound Installer" />
            <Border
                Padding="6,2,6,3"
                VerticalAlignment="Center"
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                CornerRadius="2">
                <TextBlock
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                    Text="BETA" />
            </Border>
            <Border
                Padding="6,2,6,3"
                VerticalAlignment="Center"
                Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                CornerRadius="2"
                Visibility="Collapsed">
                <TextBlock
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Text="FORCE" />
            </Border>
        </StackPanel>
        <controls:SwitchPresenter Value="{x:Bind ViewModel.CurrentPage, Mode=OneWay}">
            <controls:Case Value="Main">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Margin="32,40,32,24">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="24"
                                FontWeight="SemiBold"
                                Text="Welcome to the Rebound installer!" />
                            <TextBlock
                                Margin="0,8,0,24"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Text="Replace old Win32 apps with UWP alternatives. Better UI, improved functionality, well integrated ecosystem, centralized environment, deep customization."
                                TextAlignment="Center"
                                TextWrapping="WrapWholeWords" />
                        </StackPanel>
                        <InfoBar
                            Title="Rebound is a Windows mod. Proceed only if you have sufficient knowledge of Windows internals."
                            VerticalAlignment="Bottom"
                            IsClosable="False"
                            IsOpen="True"
                            Severity="Warning" />
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Padding="24"
                        Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
                        <StackPanel
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Width="120"
                                Command="{x:Bind CancelCommand}"
                                Content="Cancel" />
                            <Button
                                Width="120"
                                Command="{x:Bind BeginCommand}"
                                Content="Begin"
                                Style="{ThemeResource AccentButtonStyle}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </controls:Case>
            <controls:Case Value="Second">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Margin="32,40,32,24">
                        <StackPanel>
                            <TextBlock
                                FontSize="24"
                                FontWeight="SemiBold"
                                Text="Select an action" />
                            <ComboBox
                                Margin="0,8"
                                HorizontalAlignment="Stretch"
                                SelectedIndex="{x:Bind ViewModel.SelectedAction, Mode=OneWay}">
                                <ComboBoxItem Visibility="{x:Bind ViewModel.IsOldReboundInstalled, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="Install Rebound" />
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            FontSize="12"
                                            Opacity="0.5"
                                            Text="Install Rebound Hub alongside Rebound. You can configure Rebound later."
                                            TextWrapping="WrapWholeWords" />
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem Visibility="{x:Bind ViewModel.IsOldReboundInstalled, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="Install Rebound Hub" />
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            FontSize="12"
                                            Opacity="0.5"
                                            Text="Install only Rebound Hub."
                                            TextWrapping="WrapWholeWords" />
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem Visibility="{x:Bind ViewModel.IsOldReboundInstalled, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="Upgrade or repair" />
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            FontSize="12"
                                            Opacity="0.5"
                                            Text="Upgrade Rebound to a newer version or repair the current installation."
                                            TextWrapping="WrapWholeWords" />
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem Visibility="{x:Bind ViewModel.IsOldReboundInstalled}">
                                    <StackPanel>
                                        <TextBlock Text="Upgrade from Rebound v0.0.10" />
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            FontSize="12"
                                            Opacity="0.5"
                                            Text="Upgrade from Rebound v0.0.10. You will have to install individual apps later."
                                            TextWrapping="WrapWholeWords" />
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem Visibility="{x:Bind ViewModel.IsOldReboundInstalled}">
                                    <StackPanel>
                                        <TextBlock Text="Uninstall Rebound v0.0.10" />
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            FontSize="12"
                                            Opacity="0.5"
                                            Text="Uninstall Rebound v0.0.10 and all of its components."
                                            TextWrapping="WrapWholeWords" />
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem Visibility="{x:Bind ViewModel.IsOldReboundInstalled, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="Uninstall" />
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            FontSize="12"
                                            Opacity="0.5"
                                            Text="Uninstall both Rebound Hub and Rebound."
                                            TextWrapping="WrapWholeWords" />
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            FontSize="12"
                                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                            Text="Store apps will be managed as per current settings."
                                            TextWrapping="WrapWholeWords" />
                                    </StackPanel>
                                </ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <InfoBar
                            Title="Rebound v0.0.10 detected."
                            VerticalAlignment="Bottom"
                            IsClosable="False"
                            IsOpen="{x:Bind ViewModel.IsOldReboundInstalled}"
                            Severity="Warning" />
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Padding="24"
                        Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
                        <CheckBox Content="Delete data (uninstall only)" IsChecked="{x:Bind ViewModel.DeleteAppData, Mode=TwoWay}" />
                        <StackPanel
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Width="120"
                                Command="{x:Bind CancelCommand}"
                                Content="Cancel" />
                            <Button
                                Width="120"
                                Command="{x:Bind StartCommand}"
                                Content="Start"
                                Style="{ThemeResource AccentButtonStyle}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </controls:Case>
            <controls:Case Value="Third">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Margin="32,40,32,24">
                        <StackPanel>
                            <TextBlock
                                FontSize="24"
                                FontWeight="SemiBold"
                                Text="{x:Bind ViewModel.CurrentTaskText, Mode=OneWay}" />
                            <ProgressBar
                                Margin="0,16"
                                Maximum="{x:Bind ViewModel.TotalTasks, Mode=OneWay}"
                                Value="{x:Bind ViewModel.CurrentTaskProgress, Mode=OneWay}" />
                        </StackPanel>
                        <InfoBar
                            Title="All done!"
                            VerticalAlignment="Bottom"
                            IsClosable="False"
                            IsOpen="{x:Bind ViewModel.Success, Mode=OneWay}"
                            Severity="Success" />
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Height="80"
                        Padding="24"
                        Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
                        <StackPanel
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Width="120"
                                Command="{x:Bind CancelCommand}"
                                Content="Close"
                                IsEnabled="{x:Bind ViewModel.Success, Mode=OneWay}"
                                Style="{ThemeResource AccentButtonStyle}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </controls:Case>
        </controls:SwitchPresenter>
    </Grid>
</Page>
