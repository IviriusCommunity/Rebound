<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.Updater.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rebound.Updater"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <StackPanel>
                <TextBlock
                    Margin="24,24,0,0"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="Updating..." />
                <TextBlock Margin="24,32,24,0" Text="{x:Bind ViewModel.CurrentTaskText, Mode=OneWay}" />
                <ProgressBar
                    Margin="24,8,24,0"
                    Maximum="{x:Bind ViewModel.TotalTasks, Mode=OneWay}"
                    Value="{x:Bind ViewModel.CurrentTaskProgress, Mode=OneWay}" />
            </StackPanel>
            <Grid
                Height="80"
                VerticalAlignment="Bottom"
                Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}" />
        </Grid>
    </Grid>
</Page>
