                            Padding="8,3,8,5"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="Button_Click"
                            Content="System and Security" />
                        <Button
                            Height="32"
                            Padding="3"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <FontIcon FontSize="11" Glyph="" />
                            <Button.Flyout>
                                <MenuFlyout Placement="Bottom">
                                    <MenuFlyoutItem Text="Security and Maintenance"/>
                                    <MenuFlyoutItem Text="Windows Defender Firewall" IsEnabled="False">
                                        <interactivity:Interaction.Behaviors>
                                            <core:EventTriggerBehavior EventName="Click">
                                                <behaviors:NavigateToUriAction NavigateUri="ms-settings:firewall" />
                                            </core:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="System">
                                        <interactivity:Interaction.Behaviors>
                                            <core:EventTriggerBehavior EventName="Click">
                                                <behaviors:NavigateToUriAction NavigateUri="ms-settings:system" />
                                            </core:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="Power Options">
                                        <interactivity:Interaction.Behaviors>
                                            <core:EventTriggerBehavior EventName="Click">
                                                <behaviors:NavigateToUriAction NavigateUri="ms-settings:powersleep" />
                                            </core:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="File History" IsEnabled="False" />
                                    <MenuFlyoutItem Text="Windows Backup">
                                        <interactivity:Interaction.Behaviors>
                                            <core:EventTriggerBehavior EventName="Click">
                                                <behaviors:NavigateToUriAction NavigateUri="ms-settings:backup" />
                                            </core:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="BitLocker Drive Encryption" IsEnabled="False" />
                                    <MenuFlyoutItem Text="Storage Spaces">
                                        <interactivity:Interaction.Behaviors>
                                            <core:EventTriggerBehavior EventName="Click">
                                                <behaviors:NavigateToUriAction NavigateUri="ms-settings:storagepolicies" />
                                            </core:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="Work Folders (Deprecated)" IsEnabled="False" />
                                    <MenuFlyoutItem Text="Windows Tools" Click="MenuFlyoutItem_Click_3"/>
                                    <MenuFlyoutItem Text="Updates">
                                        <interactivity:Interaction.Behaviors>
                                            <core:EventTriggerBehavior EventName="Click">
                                                <behaviors:NavigateToUriAction NavigateUri="ms-settings:windowsupdate" />
                                            </core:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                    <StackPanel x:Name="WindowsTools" Orientation="Horizontal">
                        <Button
                            Height="32"
                            Padding="8,3,8,5"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="Button_Click"
                            Content="Windows Tools" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <AutoSuggestBox
                x:Name="AddressBox"
                Grid.Column="1"
                Height="32"
                Margin="10,0"
                x:FieldModifier="public"
                FontWeight="Bold"
                KeyUp="AddressBox_KeyUp"
                LostFocus="TextBox_LostFocus"
                SuggestionChosen="AddressBox_SuggestionChosen"
                Visibility="Collapsed" />
            <AutoSuggestBox
                Grid.Column="3"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                PlaceholderText="Search">
                <AutoSuggestBox.QueryIcon>
                    <FontIcon FontSize="14" Glyph="" />
                </AutoSuggestBox.QueryIcon>
            </AutoSuggestBox>
        </Grid>
        <Frame
            x:Name="RootFrame"
            Margin="0,80,0,0"
            x:FieldModifier="public" />
        <Border
            x:Name="AccentStrip"
            Height="30"
            VerticalAlignment="Top"
            Background="{ThemeResource SystemAccentColor}"
            Visibility="Collapsed" />
        <Image
            x:Name="TitleBarIcon"
            Width="16"
            Margin="8,7"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            x:FieldModifier="public"
            Source="ms-appx:///AppRT/Exported/rcontrol.ico" />
        <StackPanel
            Margin="29,7,140,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <TextBlock
                x:Name="WindowTitle"
                x:FieldModifier="public"
                FontFamily="Segoe UI"
                FontSize="12"
                FontWeight="Normal"
                TextTrimming="CharacterEllipsis" />
            <TextBlock
                x:FieldModifier="public"
                FontFamily="Segoe UI"
                FontSize="12"
                FontWeight="Normal"
                Foreground="{Binding Foreground, ElementName=WindowTitle}"
                Opacity="0.5"
                Text="  -  Rebound 11"
                TextTrimming="CharacterEllipsis" />
