<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.About.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:environment="using:Rebound.Core.Helpers.Environment"
    xmlns:local="using:Rebound.About"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:viewModels="using:Rebound.About.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///CommunityToolkit.WinUI.Controls.Segmented/Segmented/Segmented.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="PanelStyle" TargetType="StackPanel">
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="16" />
                <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
                <Setter Property="Orientation" Value="Horizontal" />
                <Setter Property="Spacing" Value="8" />
                <Setter Property="animations:Implicit.HideAnimations" Value="{StaticResource ShowTransitions}" />
            </Style>
            <animations:ImplicitAnimationSet x:Name="ShowTransitions">
                <animations:OffsetAnimation
                    EasingMode="EaseOut"
                    From="0,24,0"
                    To="0"
                    Duration="0:0:0.4" />
                <animations:OpacityAnimation
                    EasingMode="EaseOut"
                    From="0"
                    To="1"
                    Duration="0:0:0.2" />
            </animations:ImplicitAnimationSet>
            <animations:ImplicitAnimationSet x:Name="HideTransitions">
                <animations:OffsetAnimation
                    EasingMode="EaseOut"
                    From="0"
                    To="0,24,0"
                    Duration="0:0:0.2" />
                <animations:OpacityAnimation
                    EasingMode="EaseOut"
                    From="1"
                    To="0"
                    Duration="0:0:0.1" />
            </animations:ImplicitAnimationSet>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Blur logo  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,52,0,24"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Spacing="24">
            <Grid VerticalAlignment="Center">
                <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68">
                    <Path.Fill>
                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Color="{ThemeResource SystemAccentColorLight3}" />
                                <GradientStop Offset="1" Color="{ThemeResource SystemAccentColor}" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Path.Fill>
                </Path>
            </Grid>
            <TextBlock
                Margin="0,-8,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Variable"
                FontSize="54"
                FontWeight="SemiBold"
                Text="{x:Bind viewModels:MainViewModel.WindowsVersionName}">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Offset="1" Color="{ThemeResource SystemAccentColorLight3}" />
                            <GradientStop Color="{ThemeResource SystemAccentColorLight1}" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
        </StackPanel>

        <!--  Blur  -->
        <Grid Visibility="{x:Bind ViewModel.ShowBlurAndGlow, Mode=OneWay}">
            <Grid.Background>
                <media:BackdropBlurBrush Amount="36.0" />
            </Grid.Background>
        </Grid>

        <!--  Logo  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,52,0,24"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Spacing="24">
            <Grid VerticalAlignment="Center">
                <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68">
                    <Path.Fill>
                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Color="{ThemeResource SystemAccentColorLight3}" />
                                <GradientStop Offset="1" Color="{ThemeResource SystemAccentColor}" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Path.Fill>
                </Path>
            </Grid>
            <TextBlock
                Margin="0,-8,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Variable"
                FontSize="54"
                FontWeight="SemiBold"
                Text="{x:Bind viewModels:MainViewModel.WindowsVersionName}">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Offset="1" Color="{ThemeResource SystemAccentColorLight3}" />
                            <GradientStop Color="{ThemeResource SystemAccentColorLight1}" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
        </StackPanel>

        <!--  Title bar  -->
        <StackPanel
            Margin="12,8"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Spacing="8">
            <TextBlock x:Uid="Title" FontSize="12" />
            <Border
                Padding="6,2,6,3"
                VerticalAlignment="Center"
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                CornerRadius="2"
                Visibility="Collapsed">
                <TextBlock
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                    Text="BETA" />
            </Border>
        </StackPanel>

        <!--  Glow line  -->
        <Grid Margin="0,142,0,0" Visibility="{x:Bind ViewModel.ShowBlurAndGlow, Mode=OneWay}">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Color="{ThemeResource SystemAccentColorLight2}" />
                        <GradientStop Offset="1" Color="{ThemeResource SystemAccentColor}" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Grid.Background>
            <ui:Effects.Shadow>
                <media:AttachedCardShadow Color="{ThemeResource SystemAccentColorLight2}" />
            </ui:Effects.Shadow>
        </Grid>

        <!--  Tabs  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <controls:Segmented
                x:Name="segmentedControl"
                Padding="8"
                HorizontalAlignment="Stretch"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                CornerRadius="0"
                SelectedIndex="0"
                Style="{StaticResource PivotSegmentedStyle}">
                <controls:SegmentedItem
                    Content="Information"
                    Icon="{ui:FontIcon Glyph=&#xE946;}"
                    Tag="information" />
                <controls:SegmentedItem
                    Content="License"
                    Icon="{ui:FontIcon Glyph=&#xEEA1;}"
                    Tag="specifications" />
            </controls:Segmented>
            <controls:SwitchPresenter Grid.Row="1" Value="{Binding SelectedItem.Tag, ElementName=segmentedControl}">
                <controls:Case Value="information">
                    <Grid animations:Implicit.HideAnimations="{StaticResource HideTransitions}" animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Windows version  -->
                        <Border
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0,1,0,0">
                            <Grid Padding="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    VerticalAlignment="Top"
                                    FontSize="16"
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    Glyph="&#xF167;" />
                                <StackPanel Grid.Column="2" Spacing="10">
                                    <TextBlock
                                        Margin="0,-3,0,8"
                                        FontWeight="SemiBold"
                                        Text="Microsoft Windows"
                                        TextWrapping="WrapWholeWords" />
                                    <TextBlock Text="{x:Bind viewModels:MainViewModel.DetailedWindowsVersion}" TextWrapping="WrapWholeWords" />
                                    <TextBlock x:Uid="CopyrightLabel" />
                                    <TextBlock Text="{x:Bind viewModels:MainViewModel.LegalInfo}" TextWrapping="WrapWholeWords" />
                                </StackPanel>
                                <Button
                                    Grid.Column="2"
                                    Margin="-8"
                                    Padding="8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Command="{x:Bind CopyWindowsVersionCommand}">
                                    <FontIcon FontSize="16" Glyph="&#xE8C8;" />
                                </Button>
                            </Grid>
                        </Border>

                        <!--  Rebound version  -->
                        <Border
                            Grid.Row="2"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0"
                            Visibility="{x:Bind ViewModel.IsReboundOn, Mode=OneWay}">
                            <Grid Padding="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    VerticalAlignment="Top"
                                    FontSize="16"
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    Glyph="&#xF167;" />
                                <StackPanel Grid.Column="2" Spacing="10">
                                    <TextBlock
                                        Margin="0,-3,0,8"
                                        FontWeight="SemiBold"
                                        Text="Rebound"
                                        TextWrapping="WrapWholeWords" />
                                    <TextBlock Text="{x:Bind environment:ReboundVersion.REBOUND_VERSION}" />
                                    <TextBlock x:Uid="ReboundInfo" TextWrapping="WrapWholeWords" />
                                </StackPanel>
                                <Button
                                    Grid.Column="2"
                                    Margin="-8"
                                    Padding="8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Command="{x:Bind CopyReboundVersionCommand}">
                                    <FontIcon FontSize="16" Glyph="&#xE8C8;" />
                                </Button>
                            </Grid>
                        </Border>

                        <!--  Specs cards  -->
                        <Grid
                            Grid.Row="1"
                            MinHeight="120"
                            Padding="12"
                            Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                            BorderThickness="0,1"
                            ColumnSpacing="12"
                            RowSpacing="12"
                            Visibility="{x:Bind ViewModel.IsSidebarOn, Mode=OneWay}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid Padding="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <FontIcon FontSize="16" Glyph="&#xEEA1;" />
                                    <TextBlock FontWeight="SemiBold" Text="CPU" />
                                </StackPanel>
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    HorizontalTextAlignment="Center"
                                    Text="{x:Bind viewModels:MainViewModel.CPUName}"
                                    TextWrapping="WrapWholeWords" />
                            </Grid>
                            <Grid
                                Grid.Column="1"
                                Width="1"
                                Margin="4,8"
                                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                CornerRadius="0.5" />
                            <Grid Grid.Column="2" Padding="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <FontIcon FontSize="16" Glyph="&#xE7F7;" />
                                    <TextBlock FontWeight="SemiBold" Text="GPU" />
                                </StackPanel>
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    HorizontalTextAlignment="Center"
                                    Text="{x:Bind viewModels:MainViewModel.GPUName}"
                                    TextWrapping="WrapWholeWords" />
                            </Grid>
                            <Grid
                                Grid.Column="3"
                                Width="1"
                                Margin="4,8"
                                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                CornerRadius="0.5" />
                            <Grid Grid.Column="4" Padding="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel
                                    Grid.ColumnSpan="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <FontIcon FontSize="16" Glyph="&#xEEA0;" />
                                    <TextBlock FontWeight="SemiBold" Text="RAM" />
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="4">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="Physical" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Opacity="0.75"
                                        Text="{x:Bind viewModels:MainViewModel.RAM}"
                                        TextWrapping="WrapWholeWords" />
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="4">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="Usable" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Opacity="0.75"
                                        Text="{x:Bind viewModels:MainViewModel.UsableRAM}"
                                        TextWrapping="WrapWholeWords" />
                                </StackPanel>
                            </Grid>
                        </Grid>

                    </Grid>
                </controls:Case>
                <controls:Case Value="specifications">
                    <Grid animations:Implicit.HideAnimations="{StaticResource HideTransitions}" animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Windows version  -->
                        <Border
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0,1,0,0">
                            <Grid Padding="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    VerticalAlignment="Top"
                                    FontSize="16"
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    Glyph="&#xF167;" />
                                <StackPanel Grid.Column="2" Spacing="10">
                                    <TextBlock
                                        Margin="0,-3,0,8"
                                        FontWeight="SemiBold"
                                        Text="License information"
                                        TextWrapping="WrapWholeWords" />
                                    <TextBlock TextWrapping="WrapWholeWords">
                                        <Run x:Uid="LicensedUnderLabel" />
                                        <Hyperlink NavigateUri="https://support.microsoft.com/en-us/windows/microsoft-software-license-terms-e26eedad-97a2-5250-2670-aad156b654bd">
                                            <Run x:Uid="MicrosoftLicenseTermsLabel" />
                                        </Hyperlink>
                                        <Run x:Uid="ToLabel" />
                                    </TextBlock>
                                    <TextBlock Text="{x:Bind viewModels:MainViewModel.LicenseOwners}" />
                                </StackPanel>
                                <Button
                                    Grid.Column="2"
                                    Margin="-8"
                                    Padding="8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Command="{x:Bind CopyLicenseOwnersCommand}">
                                    <FontIcon FontSize="16" Glyph="&#xE8C8;" />
                                </Button>
                            </Grid>
                        </Border>

                        <!--  Rebound version  -->
                        <Border Grid.Row="1">
                            <muxc:InfoBar IsOpen="True" IsClosable="False"
                                Title="Activation state"
                                BorderThickness="0"
                                CornerRadius="0"
                                Message="{x:Bind viewModels:MainViewModel.WindowsActivationInfo, Mode=OneWay}"
                                Severity="{x:Bind WindowsActivationSeverity, Mode=OneWay}" />
                        </Border>

                        <!--  Specs cards  -->
                        <Grid
                            Grid.Row="2"
                            MinHeight="120"
                            Padding="12"
                            Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                            BorderThickness="0,1"
                            ColumnSpacing="12"
                            RowSpacing="12"
                            Visibility="{x:Bind ViewModel.IsSidebarOn, Mode=OneWay}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid Padding="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <FontIcon FontSize="16" Glyph="&#xEEA1;" />
                                    <TextBlock FontWeight="SemiBold" Text="CPU" />
                                </StackPanel>
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    HorizontalTextAlignment="Center"
                                    Text="{x:Bind viewModels:MainViewModel.CPUName}"
                                    TextWrapping="WrapWholeWords" />
                            </Grid>
                            <Grid
                                Grid.Column="1"
                                Width="1"
                                Margin="4,8"
                                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                CornerRadius="0.5" />
                            <Grid Grid.Column="2" Padding="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <FontIcon FontSize="16" Glyph="&#xE7F7;" />
                                    <TextBlock FontWeight="SemiBold" Text="GPU" />
                                </StackPanel>
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    HorizontalTextAlignment="Center"
                                    Text="{x:Bind viewModels:MainViewModel.GPUName}"
                                    TextWrapping="WrapWholeWords" />
                            </Grid>
                            <Grid
                                Grid.Column="3"
                                Width="1"
                                Margin="4,8"
                                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                CornerRadius="0.5" />
                            <Grid Grid.Column="4" Padding="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel
                                    Grid.ColumnSpan="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <FontIcon FontSize="16" Glyph="&#xEEA0;" />
                                    <TextBlock FontWeight="SemiBold" Text="RAM" />
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="4">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="Physical" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Opacity="0.75"
                                        Text="{x:Bind viewModels:MainViewModel.RAM}"
                                        TextWrapping="WrapWholeWords" />
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="4">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="Usable" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Opacity="0.75"
                                        Text="{x:Bind viewModels:MainViewModel.UsableRAM}"
                                        TextWrapping="WrapWholeWords" />
                                </StackPanel>
                            </Grid>
                        </Grid>

                    </Grid>
                </controls:Case>
            </controls:SwitchPresenter>
        </Grid>

        <!--  Bottom bar  -->
        <Grid
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Height="80"
            Padding="24"
            Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Button
                x:Uid="OKButton"
                Width="120"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Command="{x:Bind CloseWindowCommand}"
                Style="{StaticResource AccentButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Escape" />
                </Button.KeyboardAccelerators>
            </Button>
            <muxc:PersonPicture
                Width="28"
                HorizontalAlignment="Left"
                ProfilePicture="{x:Bind UserPicture, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.ShowHelloUser, Mode=OneWay}" />
            <TextBlock
                Margin="40,0,180,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Text="{x:Bind viewModels:MainViewModel.CurrentUser, Mode=OneWay}"
                TextWrapping="WrapWholeWords"
                Visibility="{x:Bind ViewModel.ShowHelloUser, Mode=OneWay}" />
        </Grid>

    </Grid>
</Page>