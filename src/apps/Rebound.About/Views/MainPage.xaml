<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.About.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:core="using:Rebound.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rebound.About"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:mica="using:MicaForUWP.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:sysinfoHardware="using:Rebound.Core.SystemInformation.Hardware"
    xmlns:sysinfoSoftware="using:Rebound.Core.SystemInformation.Software"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:viewModels="using:Rebound.About.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    Loaded="Page_Loaded"
    SizeChanged="Page_SizeChanged"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///CommunityToolkit.WinUI.Controls.Segmented/Segmented/Segmented.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:FileSizeToFriendlyStringConverter x:Key="FileSizeToFriendlyStringConverter" />
            <converters:BoolToVisibilityConverter
                x:Key="BoolToInverseVisibilityConverter"
                FalseValue="Visible"
                TrueValue="Collapsed" />
            <Style x:Key="PanelStyle" TargetType="StackPanel">
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="16" />
                <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
                <Setter Property="Orientation" Value="Horizontal" />
                <Setter Property="Spacing" Value="8" />
                <Setter Property="animations:Implicit.HideAnimations" Value="{StaticResource ShowTransitions}" />
            </Style>
            <animations:ImplicitAnimationSet x:Name="ShowTransitions">
                <animations:OffsetAnimation
                    EasingMode="EaseOut"
                    From="0,24,0"
                    To="0"
                    Duration="0:0:0.4" />
                <animations:OpacityAnimation
                    EasingMode="EaseOut"
                    From="0"
                    To="1"
                    Duration="0:0:0.2" />
            </animations:ImplicitAnimationSet>
            <animations:ImplicitAnimationSet x:Name="HideTransitions">
                <animations:OffsetAnimation
                    EasingMode="EaseOut"
                    From="0"
                    To="0,24,0"
                    Duration="0:0:0.2" />
                <animations:OpacityAnimation
                    EasingMode="EaseOut"
                    From="1"
                    To="0"
                    Duration="0:0:0.1" />
            </animations:ImplicitAnimationSet>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <!--  Compact layout  -->
        <Grid Visibility="{x:Bind ViewModel.ShowExpandedView, Mode=OneWay, Converter={StaticResource BoolToInverseVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Blur logo  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,52,0,24"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="24">
                <Grid VerticalAlignment="Center">
                    <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68">
                        <Path.Fill>
                            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Color="{ThemeResource SystemAccentColorLight3}" />
                                    <GradientStop Offset="1" Color="{ThemeResource SystemAccentColor}" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Path.Fill>
                    </Path>
                </Grid>
                <TextBlock
                    Margin="0,-8,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Variable"
                    FontSize="54"
                    FontWeight="SemiBold"
                    Text="{x:Bind sysinfoSoftware:WindowsInformation.GetOSDisplayName()}">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="1" Color="{ThemeResource SystemAccentColorLight3}" />
                                <GradientStop Color="{ThemeResource SystemAccentColorLight1}" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>

            <!--  Blur  -->
            <Grid Visibility="{x:Bind ViewModel.ShowBlurAndGlow, Mode=OneWay}">
                <Grid.Background>
                    <media:BackdropBlurBrush Amount="36.0" />
                </Grid.Background>
            </Grid>

            <!--  Logo  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,52,0,24"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="24">
                <Grid VerticalAlignment="Center">
                    <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68">
                        <Path.Fill>
                            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Color="{ThemeResource SystemAccentColorLight3}" />
                                    <GradientStop Offset="1" Color="{ThemeResource SystemAccentColor}" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Path.Fill>
                    </Path>
                </Grid>
                <TextBlock
                    Margin="0,-8,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Variable"
                    FontSize="54"
                    FontWeight="SemiBold"
                    Text="{x:Bind sysinfoSoftware:WindowsInformation.GetOSDisplayName()}">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="1" Color="{ThemeResource SystemAccentColorLight3}" />
                                <GradientStop Color="{ThemeResource SystemAccentColorLight1}" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>

            <!--  Title bar  -->
            <StackPanel
                Margin="12,8"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="8">
                <TextBlock x:Uid="Title" FontSize="12" />
                <Border
                    Padding="6,2,6,3"
                    VerticalAlignment="Center"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    CornerRadius="2"
                    Visibility="Collapsed">
                    <TextBlock
                        FontSize="10"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                        Text="BETA" />
                </Border>
            </StackPanel>

            <!--  Glow line  -->
            <Grid Margin="0,142,0,0" Visibility="{x:Bind ViewModel.ShowBlurAndGlow, Mode=OneWay}">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Color="{ThemeResource SystemAccentColorLight2}" />
                            <GradientStop Offset="1" Color="{ThemeResource SystemAccentColor}" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Grid.Background>
                <ui:Effects.Shadow>
                    <media:AttachedCardShadow Color="{ThemeResource SystemAccentColorLight2}" />
                </ui:Effects.Shadow>
            </Grid>

            <!--  Tabs  -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <controls:Segmented
                    x:Name="segmentedControl"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource ControlOnImageFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0"
                    SelectedIndex="0"
                    Style="{StaticResource PivotSegmentedStyle}"
                    Visibility="{x:Bind ViewModel.ShowTabs, Mode=OneWay}">
                    <controls:SegmentedItem
                        Content="Information"
                        Icon="{ui:FontIcon Glyph=&#xE946;}"
                        Tag="information" />
                    <controls:SegmentedItem
                        Content="License"
                        Icon="{ui:FontIcon Glyph=&#xEB95;}"
                        Tag="specifications" />
                </controls:Segmented>
                <Button
                    Margin="8,0"
                    Padding="8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Visibility="{x:Bind ViewModel.ShowTabs, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xE8A7;" />
                        <TextBlock Text="View more" />
                    </StackPanel>
                </Button>
                <controls:SwitchPresenter Grid.Row="1" Value="{Binding SelectedItem.Tag, ElementName=segmentedControl}">
                    <controls:Case Value="information">
                        <Grid animations:Implicit.HideAnimations="{StaticResource HideTransitions}" animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Windows version  -->
                            <Border
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="0,1,0,0">
                                <Grid Padding="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="16" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        VerticalAlignment="Top"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Glyph="&#xF167;" />
                                    <StackPanel Grid.Column="2" Spacing="10">
                                        <TextBlock
                                            Margin="0,-3,0,8"
                                            FontWeight="SemiBold"
                                            Text="Microsoft Windows"
                                            TextWrapping="WrapWholeWords" />
                                        <Grid ColumnSpacing="16" RowSpacing="4">

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Version" TextWrapping="WrapWholeWords" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Text="Edition"
                                                TextWrapping="WrapWholeWords" />
                                            <TextBlock
                                                Grid.Row="2"
                                                Text="Installed on"
                                                TextWrapping="WrapWholeWords" />
                                            <TextBlock
                                                Grid.Row="3"
                                                Text="Computer name"
                                                TextWrapping="WrapWholeWords" />

                                            <TextBlock
                                                Grid.Column="1"
                                                Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind viewModels:MainViewModel.DetailedWindowsVersion}"
                                                TextWrapping="WrapWholeWords" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind sysinfoSoftware:WindowsInformation.GetOSName()}"
                                                TextWrapping="WrapWholeWords" />
                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind sysinfoSoftware:WindowsInformation.GetInstalledOnDateString()}"
                                                TextWrapping="WrapWholeWords" />
                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind sysinfoSoftware:WindowsInformation.GetComputerName()}"
                                                TextWrapping="WrapWholeWords" />

                                        </Grid>
                                    </StackPanel>
                                    <Button
                                        Grid.Column="2"
                                        Margin="-8"
                                        Padding="8"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Command="{x:Bind CopyWindowsVersionCommand}">
                                        <FontIcon FontSize="16" Glyph="&#xE8C8;" />
                                    </Button>
                                </Grid>
                            </Border>

                            <!--  Rebound version  -->
                            <Border
                                Grid.Row="2"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="0"
                                Visibility="{x:Bind ViewModel.IsReboundOn, Mode=OneWay}">
                                <Grid Padding="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="16" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        VerticalAlignment="Top"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Glyph="&#xF167;" />
                                    <StackPanel Grid.Column="2" Spacing="10">
                                        <TextBlock
                                            Margin="0,-3,0,8"
                                            FontWeight="SemiBold"
                                            Text="Rebound"
                                            TextWrapping="WrapWholeWords" />
                                        <TextBlock Text="{x:Bind core:Variables.ReboundVersion}" />
                                        <TextBlock x:Uid="ReboundInfo" TextWrapping="WrapWholeWords" />
                                    </StackPanel>
                                    <Button
                                        Grid.Column="2"
                                        Margin="-8"
                                        Padding="8"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Command="{x:Bind CopyReboundVersionCommand}">
                                        <FontIcon FontSize="16" Glyph="&#xE8C8;" />
                                    </Button>
                                </Grid>
                            </Border>

                            <!--  Specs cards  -->
                            <Grid
                                Grid.Row="1"
                                MinHeight="120"
                                Padding="12"
                                Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                BorderThickness="0,1"
                                ColumnSpacing="12"
                                RowSpacing="12"
                                Visibility="{x:Bind ViewModel.IsSidebarOn, Mode=OneWay}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid Padding="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <FontIcon FontSize="16" Glyph="&#xEEA1;" />
                                        <TextBlock FontWeight="SemiBold" Text="CPU" />
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Row="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        HorizontalTextAlignment="Center"
                                        Text="{x:Bind sysinfoHardware:CPU.GetCPUName()}"
                                        TextWrapping="WrapWholeWords" />
                                </Grid>
                                <Grid
                                    Grid.Column="1"
                                    Width="1"
                                    Margin="4,8"
                                    Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                    CornerRadius="0.5" />
                                <Grid Grid.Column="2" Padding="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <PathIcon
                                            Width="16"
                                            Height="16"
                                            Data="F1 M 0 5 C 0 4 1 3 2 3 L 14 3 C 15 3 16 4 16 5 L 16 9 C 16 10 15 11 14 11 L 2 11 C 1 11 0 10 0 9 M 1 5 L 1 9 C 1 9.5 1.5 10 2 10 L 14 10 C 14.5 10 15 9.5 15 9 L 15 5 C 15 4.5 14.5 4 14 4 L 2 4 C 1.5 4 1 4.5 1 5 M 14 11 L 14 13 L 6 13 L 6 11 M 7 11 L 7 12 L 13 12 L 13 11 M 4 5 A 1 1 0 0 0 4 9 A 1 1 0 0 0 4 5 M 4 6 A 1 1 0 0 1 4 8 A 1 1 0 0 1 4 6 M 12 5 A 1 1 0 0 0 12 9 A 1 1 0 0 0 12 5 M 12 6 A 1 1 0 0 1 12 8 A 1 1 0 0 1 12 6 M 8 6 A 1 1 0 0 1 8 8 A 1 1 0 0 1 8 6 M 8 5 A 1 1 0 0 0 8 9 A 1 1 0 0 0 8 5" />
                                        <TextBlock FontWeight="SemiBold" Text="GPU" />
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Row="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        HorizontalTextAlignment="Center"
                                        Text="{x:Bind sysinfoHardware:GPU.GetGPUName()}"
                                        TextWrapping="WrapWholeWords" />
                                </Grid>
                                <Grid
                                    Grid.Column="3"
                                    Width="1"
                                    Margin="4,8"
                                    Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                    CornerRadius="0.5" />
                                <Grid Grid.Column="4" Padding="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel
                                        Grid.ColumnSpan="3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <FontIcon FontSize="16" Glyph="&#xEEA0;" />
                                        <TextBlock FontWeight="SemiBold" Text="RAM" />
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Row="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Spacing="4">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="Physical" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            Opacity="0.75"
                                            Text="{x:Bind sysinfoHardware:RAM.GetTotalRam()}"
                                            TextWrapping="WrapWholeWords" />
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Spacing="4">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="Usable" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            Opacity="0.75"
                                            Text="{x:Bind sysinfoHardware:RAM.GetUsableRAM()}"
                                            TextWrapping="WrapWholeWords" />
                                    </StackPanel>
                                </Grid>
                            </Grid>

                        </Grid>
                    </controls:Case>
                    <controls:Case Value="specifications">
                        <Grid animations:Implicit.HideAnimations="{StaticResource HideTransitions}" animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  License info  -->
                            <Border
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="0,1,0,0">
                                <Grid Padding="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="16" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        VerticalAlignment="Top"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Glyph="&#xF167;" />
                                    <StackPanel Grid.Column="2" Spacing="10">
                                        <TextBlock
                                            Margin="0,-3,0,8"
                                            FontWeight="SemiBold"
                                            Text="License information"
                                            TextWrapping="WrapWholeWords" />
                                        <TextBlock x:Uid="CopyrightLabel" />
                                        <TextBlock Text="{x:Bind viewModels:MainViewModel.LegalInfo}" TextWrapping="WrapWholeWords" />
                                        <TextBlock TextWrapping="WrapWholeWords">
                                            <Run x:Uid="LicensedUnderLabel" />
                                            <Hyperlink NavigateUri="https://support.microsoft.com/en-us/windows/microsoft-software-license-terms-e26eedad-97a2-5250-2670-aad156b654bd">
                                                <Run x:Uid="MicrosoftLicenseTermsLabel" />
                                            </Hyperlink>
                                            <Run x:Uid="ToLabel" />
                                        </TextBlock>
                                        <TextBlock Text="{x:Bind sysinfoSoftware:WindowsInformation.GetLicenseOwners()}" />
                                    </StackPanel>
                                    <Button
                                        Grid.Column="2"
                                        Margin="-8"
                                        Padding="8"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Command="{x:Bind CopyLicenseOwnersCommand}">
                                        <FontIcon FontSize="16" Glyph="&#xE8C8;" />
                                    </Button>
                                </Grid>
                            </Border>

                            <!--  Activation info  -->
                            <Border
                                Grid.Row="2"
                                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                BorderThickness="0,1,0,0"
                                Visibility="{x:Bind ViewModel.ShowActivationInfo, Mode=OneWay}">
                                <Grid Padding="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="16" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <controls:SwitchPresenter TargetType="muxc:InfoBarSeverity" Value="{x:Bind WindowsActivationSeverity, Mode=OneWay}">
                                        <controls:Case Value="Error">
                                            <FontIcon
                                                VerticalAlignment="Top"
                                                FontSize="16"
                                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                Glyph="&#xEB90;" />
                                        </controls:Case>
                                        <controls:Case Value="Success">
                                            <FontIcon
                                                VerticalAlignment="Top"
                                                FontSize="16"
                                                Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                                Glyph="&#xEC61;" />
                                        </controls:Case>
                                        <controls:Case Value="Warning">
                                            <FontIcon
                                                VerticalAlignment="Top"
                                                FontSize="16"
                                                Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                                Glyph="&#xF736;" />
                                        </controls:Case>
                                        <controls:Case Value="Informational">
                                            <FontIcon
                                                VerticalAlignment="Top"
                                                FontSize="16"
                                                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                                Glyph="&#xF167;" />
                                        </controls:Case>
                                    </controls:SwitchPresenter>

                                    <StackPanel Grid.Column="2" Spacing="10">
                                        <TextBlock
                                            Margin="0,-3,0,8"
                                            FontWeight="SemiBold"
                                            Text="Activation state"
                                            TextWrapping="WrapWholeWords" />
                                        <TextBlock Text="{x:Bind viewModels:MainViewModel.WindowsActivationInfo, Mode=OneWay}" TextWrapping="WrapWholeWords" />
                                        <Button
                                            Margin="-8,0"
                                            Padding="8"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Command="{x:Bind OpenActivationSettingsCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon FontSize="16" Glyph="&#xE8D7;" />
                                                <TextBlock VerticalAlignment="Center" Text="Open Windows Activation Settings" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                        </Grid>
                    </controls:Case>
                </controls:SwitchPresenter>
            </Grid>

            <!--  Bottom bar  -->
            <Grid
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Height="80"
                Padding="24"
                Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0">
                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Width="36"
                        Height="36"
                        Margin="0,-8"
                        Padding="8"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent">
                        <FontIcon FontSize="16" Glyph="&#xED56;" />
                    </Button>
                    <Button
                        x:Uid="OKButton"
                        Width="120"
                        VerticalAlignment="Center"
                        Command="{x:Bind CloseWindowCommand}"
                        Style="{StaticResource AccentButtonStyle}">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Escape" />
                        </Button.KeyboardAccelerators>
                    </Button>
                </StackPanel>
                <muxc:PersonPicture
                    Width="28"
                    HorizontalAlignment="Left"
