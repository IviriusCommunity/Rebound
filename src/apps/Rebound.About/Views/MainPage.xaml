                                        <Run Text="{x:Bind sysinfoHardware:Storage.GetWindowsDriveOccupiedSpacePercentageString()}" /><Run Text="%" /></TextBlock>
                                </Grid>
                            </StackPanel>
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="8">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Text="Total" />
                                <Grid>
                                    <muxc:ProgressRing
                                        Width="40"
                                        Height="40"
                                        Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}"
                                        IsIndeterminate="False"
                                        Value="{x:Bind sysinfoHardware:Storage.GetTotalOccupiedSpacePercentage()}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}">
                                        <Run Text="{x:Bind sysinfoHardware:Storage.GetTotalOccupiedSpacePercentageString()}" /><Run Text="%" /></TextBlock>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Grid>

                </Grid>
                <Grid
                    Grid.Column="1"
                    BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                    BorderThickness="1,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  License info  -->
                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}">
                        <Grid Padding="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                VerticalAlignment="Top"
                                FontSize="16"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Glyph="&#xF167;" />
                            <StackPanel Grid.Column="2" Spacing="10">
                                <TextBlock
                                    Margin="0,-3,0,8"
                                    FontWeight="SemiBold"
                                    Text="License information"
                                    TextWrapping="WrapWholeWords" />
                                <TextBlock x:Uid="CopyrightLabel" />
                                <TextBlock Text="{x:Bind viewModels:MainViewModel.LegalInfo}" TextWrapping="WrapWholeWords" />
                                <TextBlock TextWrapping="WrapWholeWords">
                                    <Run x:Uid="LicensedUnderLabel" />
                                    <Hyperlink NavigateUri="https://support.microsoft.com/en-us/windows/microsoft-software-license-terms-e26eedad-97a2-5250-2670-aad156b654bd">
                                        <Run x:Uid="MicrosoftLicenseTermsLabel" />
                                    </Hyperlink>
                                    <Run x:Uid="ToLabel" />
                                </TextBlock>
                                <TextBlock Text="{x:Bind sysinfoSoftware:WindowsInformation.GetLicenseOwners()}" />
                            </StackPanel>
                            <Button
                                Grid.Column="2"
                                Margin="-8"
                                Padding="8"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{x:Bind CopyLicenseOwnersCommand}">
                                <FontIcon FontSize="16" Glyph="&#xE8C8;" />
                            </Button>
                        </Grid>
                    </Border>

                    <!--  Fallback grid  -->
                    <Grid
                        Grid.Row="1"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        Visibility="{x:Bind ViewModel.ShowHelloUser, Mode=OneWay, Converter={StaticResource BoolToInverseVisibilityConverter}}" />

                    <!--  User account info  -->
                    <Grid
                        Grid.Row="1"
                        MinHeight="120"
                        Padding="12"
                        Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                        BorderThickness="0,1"
                        ColumnSpacing="12"
                        RowSpacing="12"
                        Visibility="{x:Bind ViewModel.ShowHelloUser, Mode=OneWay}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid VerticalAlignment="Top">
                                <muxc:PersonPicture
                                    Width="48"
                                    Margin="4"
                                    HorizontalAlignment="Left"
                                    ProfilePicture="{x:Bind UserPicture, Mode=OneWay}" />
                                <TextBlock
                                    Margin="64,0,180,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind sysinfoSoftware:UserInformation.GetDisplayName(), Mode=OneWay}"
                                    TextWrapping="WrapWholeWords" />
                                <Grid Margin="0,0,8,0" HorizontalAlignment="Right">
                                    <Grid
                                        VerticalAlignment="Center"
                                        ColumnSpacing="1"
                                        RowSpacing="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Border
                                            Width="10"
                                            Height="10"
                                            Background="{ThemeResource TextFillColorPrimaryBrush}" />
                                        <Border
                                            Grid.Column="1"
                                            Width="10"
                                            Height="10"
                                            Background="{ThemeResource TextFillColorPrimaryBrush}" />
                                        <Border
                                            Grid.Row="1"
                                            Width="10"
                                            Height="10"
                                            Background="{ThemeResource TextFillColorPrimaryBrush}" />
                                        <Border
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Width="10"
                                            Height="10"
                                            Background="{ThemeResource TextFillColorPrimaryBrush}" />
                                    </Grid>
                                    <TextBlock
                                        Margin="32,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Text="Microsoft&#10;account" />
                                </Grid>
                                <Grid
                                    Margin="0,0,8,0"
                                    HorizontalAlignment="Right"
                                    Visibility="Collapsed">
                                    <FontIcon
                                        HorizontalAlignment="Left"
                                        FontSize="24"
                                        Glyph="&#xE977;" />
                                    <TextBlock
                                        Margin="40,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Text="Local&#10;account" />
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel Margin="8,0,0,0" Spacing="8">
                                    <TextBlock
                                        Margin="0,8,0,-8"
                                        FontWeight="SemiBold"
                                        Text="Information" />
                                    <StackPanel
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        Visibility="Collapsed">
                                        <FontIcon FontSize="16" Glyph="&#xE77B;" />
                                        <TextBlock VerticalAlignment="Center" Text="User account" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon FontSize="16" Glyph="&#xEA18;" />
                                        <TextBlock VerticalAlignment="Center" Text="Administrator account" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon FontSize="16" Glyph="&#xE917;" />
                                        <TextBlock VerticalAlignment="Center" Text="Created on: 12.07.2025" />
                                    </StackPanel>
                                </StackPanel>
                                <Button
                                    Padding="8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="Transparent"
                                    BorderBrush="Transparent">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon FontSize="16" Glyph="&#xE838;" />
                                        <TextBlock VerticalAlignment="Center" Text="Open User Folder" />
                                    </StackPanel>
                                </Button>
                                <Grid Grid.Row="1" Margin="8">
                                    <TextBlock
                                        Margin="0,8"
                                        FontWeight="SemiBold"
                                        Text="Desktop wallpaper" />
                                    <Grid
                                        Margin="0,36,0,0"
                                        ui:UIElementExtensions.ClipToBounds="True"
                                        Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                        CornerRadius="8">
                                        <Image Stretch="UniformToFill">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind WallpaperPath, Mode=OneWay}" />
                                            </Image.Source>
                                        </Image>
                                        <Grid
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                            BorderThickness="1,1,0,0"
                                            CornerRadius="4,0,0,0">
                                            <Grid.Background>
                                                <media:AcrylicBrush
                                                    BlurAmount="12"
                                                    TintColor="{ThemeResource SystemColorBackgroundColor}"
                                                    TintOpacity="0.5" />
                                            </Grid.Background>
                                            <Button
                                                Margin="-1,-1,0,0"
                                                Padding="8"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                BorderThickness="1,1,0,0"
                                                CornerRadius="4,0,0,0">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon FontSize="16" Glyph="&#xE838;" />
                                                    <TextBlock VerticalAlignment="Center" Text="Open in File Explorer" />
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <!--  Activation info  -->
                    <Border Grid.Row="2" Visibility="{x:Bind ViewModel.ShowActivationInfo, Mode=OneWay}">
                        <Grid Padding="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <controls:SwitchPresenter TargetType="muxc:InfoBarSeverity" Value="{x:Bind WindowsActivationSeverity, Mode=OneWay}">
                                <controls:Case Value="Error">
                                    <FontIcon
                                        VerticalAlignment="Top"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Glyph="&#xEB90;" />
                                </controls:Case>
                                <controls:Case Value="Success">
                                    <FontIcon
                                        VerticalAlignment="Top"
                                        FontSize="16"
                                        Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                        Glyph="&#xEC61;" />
                                </controls:Case>
                                <controls:Case Value="Warning">
                                    <FontIcon
                                        VerticalAlignment="Top"
                                        FontSize="16"
                                        Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                        Glyph="&#xF736;" />
                                </controls:Case>
                                <controls:Case Value="Informational">
                                    <FontIcon
                                        VerticalAlignment="Top"
                                        FontSize="16"
                                        Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                        Glyph="&#xF167;" />
                                </controls:Case>
                            </controls:SwitchPresenter>

                            <StackPanel Grid.Column="2" Spacing="10">
                                <TextBlock
                                    Margin="0,-3,0,8"
                                    FontWeight="SemiBold"
                                    Text="Activation state"
                                    TextWrapping="WrapWholeWords" />
                                <TextBlock Text="{x:Bind viewModels:MainViewModel.WindowsActivationInfo, Mode=OneWay}" TextWrapping="WrapWholeWords" />
                                <Button
                                    Margin="-8,0"
                                    Padding="8"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Command="{x:Bind OpenActivationSettingsCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon FontSize="16" Glyph="&#xE8D7;" />
                                        <TextBlock VerticalAlignment="Center" Text="Open Windows Activation Settings" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>
            </Grid>

            <!--  Bottom bar  -->
            <Grid
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Height="80"
                Padding="24"
                Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0">
                <Button
                    Height="36"
                    Margin="0,-8"
                    Padding="8"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xE8A7;" />
                        <TextBlock Text="View more" />
                    </StackPanel>
                </Button>
                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Height="36"
                        Margin="0,-8"
                        Padding="8,0"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xED56;" />
                            <TextBlock Text="Legacy winver" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Uid="OKButton"
                        Width="120"
                        VerticalAlignment="Center"
                        Command="{x:Bind CloseWindowCommand}"
                        Style="{StaticResource AccentButtonStyle}">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Escape" />
                        </Button.KeyboardAccelerators>
                    </Button>
                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</Page>