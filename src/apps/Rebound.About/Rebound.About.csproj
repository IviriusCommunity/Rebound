<Project Sdk="Microsoft.NET.Sdk">

	<!-- Properties -->
	<PropertyGroup>

		<!-- General -->
		<OutputType>WinExe</OutputType>
		<StartupObject>Rebound.About.Program</StartupObject>
		<AssemblyName>Rebound About</AssemblyName>
		<RootNamespace>Rebound.About</RootNamespace>
		<DefaultLanguage>en-US</DefaultLanguage>
		<ApplicationIcon>Assets\AboutWindows.ico</ApplicationIcon>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<DefineConstants>DISABLE_XAML_GENERATED_MAIN;$(DefineConstants)</DefineConstants>
	</PropertyGroup>

	<!-- UWP Properties -->
	<PropertyGroup>
		<UseUwp>true</UseUwp>
		<UseUwpTools>true</UseUwpTools>
	</PropertyGroup>

	<!-- Packaging Properties -->
	<PropertyGroup>
		<AppxPackageSigningEnabled>True</AppxPackageSigningEnabled>
		<AppxPackageSigningTimestampDigestAlgorithm>SHA256</AppxPackageSigningTimestampDigestAlgorithm>
		<AppxAutoIncrementPackageRevision>False</AppxAutoIncrementPackageRevision>
		<AppxBundle>Never</AppxBundle>
		<GenerateTestArtifacts>True</GenerateTestArtifacts>
		<GenerateAppInstallerFile>True</GenerateAppInstallerFile>
		<AppInstallerUri>D:\</AppInstallerUri>
		<HoursBetweenUpdateChecks>0</HoursBetweenUpdateChecks>
		<PackageCertificateKeyFile>C:\Users\zaita\source\repos\Rebound\src\apps\Rebound.About\Rebound.About_TemporaryKey.pfx</PackageCertificateKeyFile>
	</PropertyGroup>

	<!-- Project content -->
	<ItemGroup>
		<None Remove="Launcher.obj" />
		<None Remove="Views\MainPage.xaml" />

		<Content Include="Strings\**\*.resw">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		
		<None Include="README.md" Pack="true" PackagePath="\" />

		<Content Update="Assets\AboutWindows.ico">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="Assets\Exe.ico">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="Strings\zh-CN\Resources.resw">
		  <SubType>Designer</SubType>
		</Content>

		<Page Update="Views\MainPage.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
	</ItemGroup>

	<!-- Project References -->
	<ItemGroup>
		<ProjectReference Include="..\..\core\libs\Rebound.Core.SourceGeneratorAttributes\Rebound.Core.SourceGeneratorAttributes.csproj" />
		<ProjectReference Include="..\..\core\libs\Rebound.Core.SourceGenerator\Rebound.Core.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	</ItemGroup>

	<!-- Shared project imports -->
	<ItemGroup>
	  <PRIResource Remove="Strings\ru-RU\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
	  <PRIResource Remove="Strings\ar-SA\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
	  <Folder Include="Strings\es-PY\" />
	</ItemGroup>
	<ItemGroup>
	  <PRIResource Remove="Strings\zh-CN\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
	  <Content Include="NativeMethods.json" />
	</ItemGroup>
	<Import Project="..\..\core\shared\Rebound.Core.Helpers\Rebound.Core.Helpers.projitems" Label="Shared" />
	<Import Project="..\..\core\forge\Rebound.Forge\Rebound.Forge.projitems" Label="Shared" />

</Project>