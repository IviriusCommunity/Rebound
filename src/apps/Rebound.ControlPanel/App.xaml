<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="Rebound.ControlPanel.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:Rebound.ControlPanel">
    <Application.Resources>
        <controls:XamlControlsResources x:Key="Main">
            <controls:XamlControlsResources.MergedDictionaries>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>

                        <ResourceDictionary x:Key="Default">

                            <ImageSource x:Key="HeroBackgroundBitmapImage">ms-appx:///Assets/Backgrounds/WallpaperRebornDark.png</ImageSource>

                        </ResourceDictionary>

                        <ResourceDictionary x:Key="Light">

                            <ImageSource x:Key="HeroBackgroundBitmapImage">ms-appx:///Assets/Backgrounds/WallpaperRebornLight.png</ImageSource>

                        </ResourceDictionary>

                        <ResourceDictionary x:Key="HighContrast">

                            <ImageSource x:Key="HeroBackgroundBitmapImage">ms-appx:///Assets/Backgrounds/WallpaperRebornDark.png</ImageSource>

                        </ResourceDictionary>

                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </controls:XamlControlsResources.MergedDictionaries>
        </controls:XamlControlsResources>
    </Application.Resources>
</Application>
