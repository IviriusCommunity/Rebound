<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.ControlPanel.Views.RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rebound.ControlPanel.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">
    <Grid>
        <Frame
            x:Name="RootFrame"
            Margin="0,80,0,0"
            x:FieldModifier="public" />
        <StackPanel
            Margin="12,8,12,0"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Spacing="8">
            <Image
                Width="16"
                VerticalAlignment="Center"
                Source="/Assets/ControlPanel.ico" />
            <TextBlock
                Margin="0,0,0,2"
                VerticalAlignment="Center"
                FontSize="12"
                Text="Control Panel" />
            <Border
                Padding="6,2,6,3"
                VerticalAlignment="Center"
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                CornerRadius="2">
                <TextBlock
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                    Text="BETA" />
            </Border>
        </StackPanel>
        <Grid
            Margin="4,40,4,8"
            VerticalAlignment="Top"
            ColumnSpacing="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="4">
                <Button
                    Width="36"
                    Height="36"
                    Padding="8"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind GoBackCommand}">
                    <FontIcon FontSize="12" Glyph="&#xE72B;" />
                </Button>
                <Button
                    Width="36"
                    Height="36"
                    Padding="8"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <FontIcon FontSize="12" Glyph="&#xE72A;" />
                </Button>
                <Button
                    Width="36"
                    Height="36"
                    Padding="8"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <FontIcon FontSize="16" Glyph="&#xE80F;" />
                </Button>
                <Button
                    Width="36"
                    Height="36"
                    Padding="8"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <FontIcon FontSize="16" Glyph="&#xE8A7;" />
                </Button>
            </StackPanel>
            <ComboBox
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                FontWeight="SemiBold"
                IsEditable="True"
                Text="Home" />
            <AutoSuggestBox
                Grid.Column="2"
                VerticalAlignment="Top"
                PlaceholderText="Search"
                QueryIcon="Find" />
            <StackPanel
                Grid.Column="3"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="4">
                <Button
                    Width="36"
                    Height="36"
                    Padding="8"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <FontIcon FontSize="16" Glyph="&#xE897;" />
                </Button>
                <Button
                    Width="36"
                    Height="36"
                    Padding="8"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Legacy Control Panel">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xED56;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator />
                            <MenuFlyoutItem Text="Exit">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE894;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                    <FontIcon FontSize="16" Glyph="&#xE712;" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>