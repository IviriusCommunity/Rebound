<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.ControlPanel.Views.Appearance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rebound.ControlPanel.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid
            Height="72"
            VerticalAlignment="Top"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Image
                Width="20"
                Margin="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/Assets/Personalization.ico" />
            <TextBlock
                Margin="48,10"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                Text="Appearance and Personalization" />
            <TextBlock Margin="48,40,0,0" Text="Change appearance settings." />
        </Grid>
        <ScrollViewer Margin="0,72,0,0" Padding="32">
            <StackPanel Spacing="8">
                <TextBlock FontWeight="SemiBold" Text="Generic" />
                <toolkit:SettingsCard
                    Description="Manage File Explorer settings."
                    Header="File Explorer Options"
                    IsClickEnabled="True" />
                <muxc:InfoBar
                    Title="If you're using Files, change the settings of Files instead."
                    IsClosable="False"
                    IsOpen="True" />
                <toolkit:SettingsCard
                    Description="Open Windows Settings to change more appeareance settings."
                    Header="View more"
                    IsClickEnabled="True" />
                <toolkit:SettingsCard
                    Description="Manage extended customization options with Rebound Shell Settings."
                    Header="Rebound Shell Settings"
                    IsClickEnabled="True" />
                <TextBlock
                    Margin="0,32,0,0"
                    FontWeight="SemiBold"
                    Text="Fonts" />
                <toolkit:SettingsCard
                    Description="Manage installed fonts. If Rebound Font Manager isn't installed, Settings will be opened instead."
                    Header="Rebound Font Manager"
                    IsClickEnabled="True" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
