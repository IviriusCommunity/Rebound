<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.UserAccountControlSettings.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rebound.UserAccountControlSettings.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Grid>
        <StackPanel
            Margin="12,8"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Spacing="8">
            <TextBlock FontSize="12" Text="User Account Control Settings" />
            <Border
                Padding="6,2,6,3"
                VerticalAlignment="Center"
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                CornerRadius="2"
                Visibility="Collapsed">
                <TextBlock
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                    Text="BETA" />
            </Border>
        </StackPanel>

        <Grid Margin="64,48,64,80" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                Text="Choose when to be notified about changes to your computer."
                TextWrapping="WrapWholeWords" />
            <TextBlock
                Grid.Row="1"
                Text="User Account Control helps prevent potentially harmful apps from making changes to your computer."
                TextWrapping="WrapWholeWords" />
            <Grid Grid.Row="2" Margin="0,16,0,32">
                <Slider
                    Margin="0,32"
                    HorizontalAlignment="Left"
                    Maximum="4"
                    Minimum="1"
                    Orientation="Vertical"
                    StepFrequency="1"
                    TickFrequency="1"
                    TickPlacement="Outside"
                    Value="{x:Bind ViewModel.SliderValue, Mode=TwoWay}" />
                <Grid
                    Margin="80,0,0,0"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel Spacing="8">
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="{x:Bind ViewModel.Title, Mode=OneWay}"
                            TextWrapping="WrapWholeWords" />
                        <TextBlock Text="{x:Bind ViewModel.Description, Mode=OneWay}" TextWrapping="WrapWholeWords" />
                    </StackPanel>
                    <muxc:InfoBar
                        Title="{x:Bind ViewModel.Recommandation, Mode=OneWay}"
                        VerticalAlignment="Bottom"
                        IsClosable="False"
                        IsOpen="True"
                        Severity="Informational" />
                </Grid>
            </Grid>
        </Grid>
        <Grid
            Height="80"
            Padding="24"
            VerticalAlignment="Bottom"
            Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    Width="120"
                    Command="{x:Bind ApplyCommand}"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xEA18;" />
                        <TextBlock Text="Apply" />
                    </StackPanel>
                </Button>
                <Button
                    Width="120"
                    Command="{x:Bind CloseCommand}"
                    Content="Cancel" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
