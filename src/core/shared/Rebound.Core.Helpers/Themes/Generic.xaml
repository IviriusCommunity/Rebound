    <!--  Title bar style  -->

    <Style TargetType="local:TitleBarEx">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:TitleBarEx">
                    <Grid
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Button Visibility="Collapsed">
                            <Button.Flyout>
                                <MenuFlyout x:Name="CustomRightClickFlyout">
                                    <MenuFlyoutItem
                                        x:Name="RestoreContextMenuItem"
                                        IsEnabled="{TemplateBinding CanRestore}"
                                        Text="Restore">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph=" &#xE923; " />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem
                                        x:Name="MoveContextMenuItem"
                                        IsEnabled="{TemplateBinding CanMove}"
                                        Text="Move">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE7C2;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem
                                        x:Name="SizeContextMenuItem"
                                        IsEnabled="{TemplateBinding CanSize}"
                                        Text="Size">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE740;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem
                                        x:Name="MinimizeContextMenuItem"
                                        IsEnabled="{TemplateBinding IsMinimizable}"
                                        Text="Minimize">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph=" &#xE921; " />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem
                                        x:Name="MaximizeContextMenuItem"
                                        IsEnabled="{TemplateBinding CanMaximize}"
                                        Text="Maximize">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph=" &#xE922; " />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem
                                        x:Name="CloseContextMenuItem"
                                        IsEnabled="{TemplateBinding IsClosable}"
                                        Text="Close">
                                        <MenuFlyoutItem.KeyboardAccelerators>
                                            <KeyboardAccelerator
                                                Key="F4"
                                                IsEnabled="False"
                                                Modifiers="Menu" />
                                        </MenuFlyoutItem.KeyboardAccelerators>
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph=" &#xE8BB; " />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                        <Border
                            x:Name="AccentStrip"
                            Height="32"
                            VerticalAlignment="Top"
                            Background="{ThemeResource SystemAccentColor}"
                            Visibility="Collapsed" />
                        <StackPanel
                            Margin="8,7,140,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                            <Image
                                x:Name="TitleBarIcon"
                                Width="16"
                                Margin="0,0,6,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                x:FieldModifier="public" />
                            <TextBlock
                                x:Name="TitleTextBlock"
                                FontFamily="Segoe UI"
                                FontSize="12"
                                FontWeight="Normal"
                                Text="{TemplateBinding Title}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                x:Name="SubtitleTextBlock"
                                FontFamily="Segoe UI"
                                FontSize="12"
                                FontWeight="Normal"
                                Opacity="0.5"
                                Text="{TemplateBinding Subtitle}"
                                TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                        <StackPanel
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                            <Button
                                x:Name="MinimizeButton"
                                Padding="6"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                IsFocusEngagementEnabled="False"
                                IsHitTestVisible="False"
                                IsTabStop="False"
                                Style="{StaticResource MinimizeButtonStyle}">
                                <FontIcon FontSize="10" Glyph="&#xE921;" />
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="Minimize" Placement="Bottom" />
                                </ToolTipService.ToolTip>
                            </Button>
                            <Button
                                x:Name="MaximizeButton"
                                Padding="6"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                IsFocusEngagementEnabled="False"
                                IsHitTestVisible="False"
                                IsTabStop="False"
                                Style="{StaticResource MaximizeButtonStyle}" />
                            <Button
                                x:Name="CloseButton"
                                IsFocusEngagementEnabled="False"
                                IsHitTestVisible="False"
                                IsTabStop="False"
                                Style="{StaticResource CloseButtonStyle}">
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="Close" Placement="Bottom" />
                                </ToolTipService.ToolTip>
                            </Button>
                        </StackPanel>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">

                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TitleTextBlock" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TextFillColorPrimaryBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SubtitleTextBlock" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TextFillColorPrimaryBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="FocusedAccent">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TitleTextBlock" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="#FFF" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SubtitleTextBlock" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="#FFF" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="Unfocused">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TitleTextBlock" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TextFillColorDisabledBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SubtitleTextBlock" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TextFillColorDisabledBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>

                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>