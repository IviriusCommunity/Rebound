<Project Sdk="Microsoft.NET.Sdk">

	<!-- Properties -->
	<PropertyGroup>

		<!-- General -->
		<OutputType>WinExe</OutputType>
		<AssemblyName>Rebound Service Host</AssemblyName>
		<ApplicationIcon>Assets\ServiceHost.ico</ApplicationIcon>
		<ApplicationManifest>app.manifest</ApplicationManifest>

		<DefineConstants>DISABLE_XAML_GENERATED_MAIN;$(DefineConstants)</DefineConstants>

		<!-- Deployment -->
		<EnableMsixTooling>true</EnableMsixTooling>
		<DefaultLanguage>en-US</DefaultLanguage>

	</PropertyGroup>

	<ItemGroup>
		<AppxTargetDeviceFamilyItem Include="Windows.Desktop" />
	</ItemGroup>

	<ItemGroup>
		<TrimmerRootAssembly Include="Windows.Win32" />
		<TrimmerRootAssembly Include="Windows.Win32.System.Com" />
	</ItemGroup>

	<!-- Project content -->
	<ItemGroup>
		<None Remove="Hooks\Rebound.Forge.Hooks.Run.dll" />
		<None Remove="Views\MainPage.xaml" />

		<Content Include="Strings\**\*.resw">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>

		<Content Update="Assets\AboutWindows.ico">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="Assets\Exe.ico">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="Assets\ServiceHost.ico">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="Strings\ar-SA\Resources.resw">
		  <SubType>Designer</SubType>
		</Content>
		<Content Update="Strings\it-IT\Resources.resw">
		  <SubType>Designer</SubType>
		</Content>
		<Content Update="Strings\vi-VN\Resources.resw">
		  <SubType>Designer</SubType>
		</Content>
		<Content Update="Strings\es-PY\Resources.resw">
		  <SubType>Designer</SubType>
		</Content>
		<Content Update="Strings\en-US\Resources.resw">
		  <SubType>Designer</SubType>
		</Content>

		<Page Update="Views\MainPage.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
	</ItemGroup>

	<!-- Project references -->
	<ItemGroup>
		<ProjectReference Include="..\..\core\libs\Rebound.Core.SourceGeneratorAttributes\Rebound.Core.SourceGeneratorAttributes.csproj" />
		<ProjectReference Include="..\..\core\libs\Rebound.Core.SourceGenerator\Rebound.Core.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	</ItemGroup>

	<!-- Shared project imports -->
	<Import Project="..\..\core\forge\Rebound.Forge\Rebound.Forge.projitems" Label="Shared" />
	<Import Project="..\..\core\shared\Rebound.Core.Helpers\Rebound.Core.Helpers.projitems" Label="Shared" />
	<ItemGroup>
		<Content Include="Hooks\Rebound.Forge.Hooks.Run.dll">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="NativeMethods.json" />
	</ItemGroup>
	<ItemGroup>
	  <PRIResource Remove="Strings\en-US\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
	  <PRIResource Remove="Strings\es-PY\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
	  <PRIResource Remove="Strings\ar-SA\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
	  <PRIResource Remove="Strings\vi-VN\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
	  <PRIResource Remove="Strings\it-IT\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
	  <AppxManifest Include="Package.appxmanifest">
	    <SubType>Designer</SubType>
	  </AppxManifest>
	</ItemGroup>

</Project>