<Project Sdk="Microsoft.NET.Sdk">

	<!-- Framework and platform configuration  -->
	<PropertyGroup Label="Framework Configuration">

		<!-- .NET and Windows targets -->
		<TargetFramework>net10.0-windows10.0.26100.0</TargetFramework>
		<TargetPlatformMinVersion>10.0.22000.0</TargetPlatformMinVersion>

		<!-- UWP properties -->
		<UseUwp>true</UseUwp>
		<UseUwpTools>true</UseUwpTools>

	</PropertyGroup>

	<!-- General application properties -->
	<PropertyGroup Label="Application Properties">

		<!-- Specific -->
		<AssemblyName>Rebound Service Host</AssemblyName>
		<RootNamespace>Rebound.ServiceHost</RootNamespace>
		<ApplicationIcon>Assets\ServiceHost.ico</ApplicationIcon>

		<!-- Generic -->
		<OutputType>WinExe</OutputType>
		<DefaultLanguage>en-US</DefaultLanguage>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<DefineConstants>DISABLE_XAML_GENERATED_MAIN;$(DefineConstants)</DefineConstants>

		<!-- Versioning -->
		<AssemblyVersion>0.0.10</AssemblyVersion>
		<Version>0.0.10</Version>
		<FileVersion>0.0.10</FileVersion>

	</PropertyGroup>

	<!-- Advanced build features -->
	<PropertyGroup Label="Advanced Features">

		<!-- Generic -->
		<EnableMsixTooling>true</EnableMsixTooling>
		<WindowsAppSDKSelfContained>false</WindowsAppSDKSelfContained>

		<!-- Native AOT -->
		<!-- Enable COM interop support -->
		<EnableComInterop>true</EnableComInterop>
		<!-- Enable source generators -->
		<UseSourceGenerators>true</UseSourceGenerators>
		<!-- Disable runtime marshalling for better API handling -->
		<DisableRuntimeMarshalling>true</DisableRuntimeMarshalling>
		<!-- Run CsWin32 as a build task for COM NAOT compatibility -->
		<CsWin32RunAsBuildTask>true</CsWin32RunAsBuildTask>
		<!-- No idea what this is for but it fixes package publishing (thanks Rafael) -->
		<EnableSourceLink>false</EnableSourceLink>

		<!-- Required for WinUI 2 to work properly -->
		<ProjectPriFileName>resources.pri</ProjectPriFileName>
		
	</PropertyGroup>

	<!-- Publishing and optimization -->
	<PropertyGroup Label="Publishing Configuration">

		<!-- Generic -->
		<PublishProfile>win-$(Platform).pubxml</PublishProfile>
		<PublishReadyToRun>true</PublishReadyToRun>

		<!-- Native AOT -->
		<PublishAot>true</PublishAot>
		<SelfContained>true</SelfContained>
		<PublishTrimmed>true</PublishTrimmed>
		<OptimizationPreference>Speed</OptimizationPreference>
		<IlcOptimizationPreference>Speed</IlcOptimizationPreference>

	</PropertyGroup>

	<!-- Packaging and signing -->
	<PropertyGroup Label="Packaging Settings">

		<!-- Common certificate file -->
		<PackageCertificateKeyFile>..\Rebound.Hub_TemporaryKey.pfx</PackageCertificateKeyFile>

		<!-- Generic -->
		<AppxPackageSigningEnabled>True</AppxPackageSigningEnabled>
		<AppxPackageSigningTimestampDigestAlgorithm>SHA256</AppxPackageSigningTimestampDigestAlgorithm>
		<AppxAutoIncrementPackageRevision>False</AppxAutoIncrementPackageRevision>
		<AppxBundle>Always</AppxBundle>
		<AppxBundlePlatforms>x64</AppxBundlePlatforms>
		<GenerateTestArtifacts>True</GenerateTestArtifacts>
		<GenerateAppInstallerFile>True</GenerateAppInstallerFile>
		<AppInstallerUri>C:\</AppInstallerUri>
		<HoursBetweenUpdateChecks>0</HoursBetweenUpdateChecks>

	</PropertyGroup>

	<!-- Packages -->

	<!-- Windows SDK & WinUI -->
	<ItemGroup Label="Windows Platform">
		<PackageReference Include="Microsoft.Windows.SDK.BuildTools.MSIX" Version="1.7.20250829.1" />
		<PackageReference Include="Microsoft.WindowsAppSDK.Base" Version="1.8.250831001" />
		<PackageReference Include="Microsoft.WindowsAppSDK.InteractiveExperiences" Version="1.8.251104001" />
		<PackageReference Include="Microsoft.WindowsAppSDK.Runtime" Version="1.8.251106002" />
	</ItemGroup>

	<!-- Windows Interop -->
	<ItemGroup Label="Windows Interop">
		<PackageReference Include="Dongle.GuidRVAGen" Version="1.0.5" />
		<PackageReference Include="Microsoft.Windows.CsWin32" Version="0.3.264">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="TerraFX.Interop.Windows" Version="10.0.26100.6" />
	</ItemGroup>

	<!-- System & Management -->
	<ItemGroup Label="System Libraries">
		<PackageReference Include="System.Diagnostics.PerformanceCounter" Version="10.0.1" />
		<PackageReference Include="System.IO.Pipes.AccessControl" Version="6.0.0-preview.5.21301.5" />
		<PackageReference Include="OwlCore.Storage" Version="0.14.0" />
		<PackageReference Include="TaskScheduler" Version="2.12.2" />
	</ItemGroup>

	<!-- CommunityToolkit -->
	<ItemGroup Label="CommunityToolkit">
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
	</ItemGroup>

	<!-- Content -->
	<ItemGroup Label="Content">
		<Content Update="Assets\**\*">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Strings\**\*.resw">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<SubType>Designer</SubType>
		</Content>
		<Content Include="Hooks\Rebound.Forge.Hooks.ActionCenter.dll">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Hooks\Rebound.Forge.Hooks.AltTab.dll">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Hooks\Rebound.Forge.Hooks.Run.dll">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Hooks\Rebound.Forge.Hooks.ShutdownWindow.dll">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Hooks\Rebound.Forge.Hooks.Start.dll">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<!-- Excluded items -->
	<ItemGroup Label="Exclusions">
		<None Remove="Assets\ServiceHost.ico" />
		<None Remove="Hooks\Rebound.Forge.Hooks.ActionCenter.dll" />
		<None Remove="Hooks\Rebound.Forge.Hooks.AltTab.dll" />
		<None Remove="Hooks\Rebound.Forge.Hooks.Start.dll" />
	</ItemGroup>

	<!-- Project references -->
	<ItemGroup Label="Project References">
		<ProjectReference Include="..\..\core\generators\Rebound.Core.SourceGeneratorAttributes\Rebound.Core.SourceGeneratorAttributes.csproj" />
		<ProjectReference Include="..\..\core\generators\Rebound.Core.SourceGenerator\Rebound.Core.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
		<ProjectReference Include="..\..\core\forge\Rebound.Forge.UWP\Rebound.Forge.UWP.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.IPC\Rebound.Core.IPC.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.Native\Rebound.Core.Native.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.DLLInjection\Rebound.Core.DLLInjection.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.SystemInformation\Rebound.Core.SystemInformation.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core\Rebound.Core.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.UI.UWP\Rebound.Core.UI.UWP.csproj" />
	</ItemGroup>

	<!-- Custom build tasks -->

	<!-- Native Hook DLL Build Targets -->
	<Target Name="BuildNativeHooks" BeforeTargets="BeforeBuild">

		<!-- Build Action Center Hook -->
		<Message Importance="high" Text="Compiling Action Center DLL" />
		<MSBuild Projects="$(SolutionDir)src\core\forge\hooks\Rebound.Forge.Hooks.ActionCenter\Rebound.Forge.Hooks.ActionCenter.vcxproj" Properties="Configuration=$(Configuration);Platform=$(Platform)" />

		<!-- Build Alt Tab Hook -->
		<Message Importance="high" Text="Compiling Alt Tab DLL" />
		<MSBuild Projects="$(SolutionDir)src\core\forge\hooks\Rebound.Forge.Hooks.AltTab\Rebound.Forge.Hooks.AltTab.vcxproj" Properties="Configuration=$(Configuration);Platform=$(Platform)" />

		<!-- Build Run Hook -->
		<Message Importance="high" Text="Compiling Run DLL" />
		<MSBuild Projects="$(SolutionDir)src\core\forge\hooks\Rebound.Forge.Hooks.Run\Rebound.Forge.Hooks.Run.vcxproj" Properties="Configuration=$(Configuration);Platform=$(Platform)" />

		<!-- Build Shutdown Hook -->
		<Message Importance="high" Text="Compiling Shutdown Dialog DLL" />
		<MSBuild Projects="$(SolutionDir)src\core\forge\hooks\Rebound.Forge.Hooks.ShutdownWindow\Rebound.Forge.Hooks.ShutdownWindow.vcxproj" Properties="Configuration=$(Configuration);Platform=$(Platform)" />

		<!-- Build Start Hook -->
		<Message Importance="high" Text="Compiling Start DLL" />
		<MSBuild Projects="$(SolutionDir)src\core\forge\hooks\Rebound.Forge.Hooks.Start\Rebound.Forge.Hooks.Start.vcxproj" Properties="Configuration=$(Configuration);Platform=$(Platform)" />

		<!-- Copy Action Center Hook DLL -->
		<Message Importance="high" Text="Copying Rebound.Forge.Hooks.ActionCenter.dll" />
		<Copy SourceFiles="$(SolutionDir)x64\$(Configuration)\Rebound.Forge.Hooks.ActionCenter.dll" DestinationFiles="Hooks\Rebound.Forge.Hooks.ActionCenter.dll" SkipUnchangedFiles="true" />

		<!-- Copy Alt Tab Hook DLL -->
		<Message Importance="high" Text="Copying Rebound.Forge.Hooks.AltTab.dll" />
		<Copy SourceFiles="$(SolutionDir)x64\$(Configuration)\Rebound.Forge.Hooks.AltTab.dll" DestinationFiles="Hooks\Rebound.Forge.Hooks.AltTab.dll" SkipUnchangedFiles="true" />

		<!-- Copy Run Hook DLL -->
		<Message Importance="high" Text="Copying Rebound.Forge.Hooks.Run.dll" />
		<Copy SourceFiles="$(SolutionDir)x64\$(Configuration)\Rebound.Forge.Hooks.Run.dll" DestinationFiles="Hooks\Rebound.Forge.Hooks.Run.dll" SkipUnchangedFiles="true" />

		<!-- Copy Shutdown Window Hook DLL -->
		<Message Importance="high" Text="Copying Rebound.Forge.Hooks.ShutdownWindow.dll" />
		<Copy SourceFiles="$(SolutionDir)x64\$(Configuration)\Rebound.Forge.Hooks.ShutdownWindow.dll" DestinationFiles="Hooks\Rebound.Forge.Hooks.ShutdownWindow.dll" SkipUnchangedFiles="true" />

		<!-- Copy Start Hook DLL -->
		<Message Importance="high" Text="Copying Rebound.Forge.Hooks.Start.dll" />
		<Copy SourceFiles="$(SolutionDir)x64\$(Configuration)\Rebound.Forge.Hooks.Start.dll" DestinationFiles="Hooks\Rebound.Forge.Hooks.Start.dll" SkipUnchangedFiles="true" />

	</Target>

</Project>