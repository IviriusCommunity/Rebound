<Project Sdk="Microsoft.NET.Sdk">

	<!-- Application and library only - These will apply to everything that isn't a source code generator -->
	<PropertyGroup>

		<!-- Versions -->
		<TargetFramework>net10.0-windows10.0.26100.0</TargetFramework>
		<TargetPlatformMinVersion>10.0.22000.0</TargetPlatformMinVersion>

		<!-- Advanced -->
		<EnableMsixTooling>true</EnableMsixTooling>
		<EnableComInterop>true</EnableComInterop>
		<UseSourceGenerators>true</UseSourceGenerators>
		<DisableRuntimeMarshalling>true</DisableRuntimeMarshalling>

		<!-- Self-contained settings -->
		<PublishReadyToRun>true</PublishReadyToRun>
		<PublishAot>true</PublishAot>

		<!-- Publishing Settings -->
		<PublishProfile>win-$(Platform).pubxml</PublishProfile>

		<!-- Trimmming -->
		<SelfContained>true</SelfContained>
		<PublishTrimmed>true</PublishTrimmed>
		<OptimizationPreference>Speed</OptimizationPreference>
		<IlcOptimizationPreference>Speed</IlcOptimizationPreference>

		<CsWin32RunAsBuildTask>true</CsWin32RunAsBuildTask>
		<WindowsAppSDKSelfContained>true</WindowsAppSDKSelfContained>

		<EnableSourceLink>false</EnableSourceLink>

	</PropertyGroup>

	<!-- Package references -->
	<ItemGroup>

		<Manifest Include="$(ApplicationManifest)" />

		<PackageReference Include="Microsoft.Windows.SDK.BuildTools.MSIX" Version="1.7.20250829.1" />

		<!-- Windows Interop -->
		<PackageReference Include="Dongle.GuidRVAGen" Version="1.0.5" />
		<PackageReference Include="Microsoft.Windows.CsWin32" Version="0.3.238">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="TerraFX.Interop.Windows" Version="10.0.26100.4" />

		<!-- System and Management -->
		<PackageReference Include="System.Diagnostics.PerformanceCounter" Version="10.0.0-rc.2.25502.107" />
		<!--<PackageReference Include="System.ServiceProcess.ServiceController" Version="10.0.0-preview.5.25277.114" />-->
		<PackageReference Include="System.IO.Pipes.AccessControl" Version="6.0.0-preview.5.21301.5" />
		<PackageReference Include="OwlCore.Storage" Version="0.14.0" />

		<!-- Task Scheduler -->
		<PackageReference Include="TaskScheduler" Version="2.12.2" />

		<!-- CommunityToolkit WinUI -->
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />

	</ItemGroup>

	<!-- Properties -->
	<PropertyGroup>

		<!-- General -->
		<OutputType>WinExe</OutputType>
		<AssemblyName>Rebound Service Host</AssemblyName>
		<ApplicationIcon>Assets\ServiceHost.ico</ApplicationIcon>
		<ApplicationManifest>app.manifest</ApplicationManifest>

		<DefineConstants>DISABLE_XAML_GENERATED_MAIN;UNPACKAGED;$(DefineConstants)</DefineConstants>

		<!-- Deployment -->
		<WindowsPackageType>None</WindowsPackageType>
		<DefaultLanguage>en-US</DefaultLanguage>

	</PropertyGroup>

	<!-- UWP Properties -->
	<PropertyGroup>
		<UseUwp>true</UseUwp>
		<UseUwpTools>true</UseUwpTools>
	</PropertyGroup>

	<ItemGroup>
		<AppxTargetDeviceFamilyItem Include="Windows.Desktop" />
	</ItemGroup>

	<!-- Project content -->
	<ItemGroup>
		<None Remove="Views\MainPage.xaml" />

		<Content Include="Strings\**\*.resw">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>

		<Content Update="Assets\AboutWindows.ico">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="Assets\Exe.ico">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="Assets\ServiceHost.ico">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="Strings\ar-SA\Resources.resw">
			<SubType>Designer</SubType>
		</Content>
		<Content Update="Strings\it-IT\Resources.resw">
			<SubType>Designer</SubType>
		</Content>
		<Content Update="Strings\vi-VN\Resources.resw">
			<SubType>Designer</SubType>
		</Content>
		<Content Update="Strings\es-PY\Resources.resw">
			<SubType>Designer</SubType>
		</Content>
		<Content Update="Strings\en-US\Resources.resw">
			<SubType>Designer</SubType>
		</Content>

		<Page Update="Views\MainPage.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
	</ItemGroup>

	<ItemGroup>
		<Content Include="Hooks\Rebound.Forge.Hooks.Run.dll">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="NativeMethods.json" />
	</ItemGroup>
	<ItemGroup>
		<PRIResource Remove="Strings\en-US\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
		<PRIResource Remove="Strings\es-PY\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
		<PRIResource Remove="Strings\ar-SA\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
		<PRIResource Remove="Strings\vi-VN\Resources.resw" />
	</ItemGroup>
	<ItemGroup>
		<PRIResource Remove="Strings\it-IT\Resources.resw" />
	</ItemGroup>

	<!-- Project References -->
	<ItemGroup>
		<ProjectReference Include="..\..\core\forge\Rebound.Forge\Rebound.Forge.csproj" />
		<ProjectReference Include="..\..\core\generators\Rebound.Core.SourceGeneratorAttributes\Rebound.Core.SourceGeneratorAttributes.csproj" />
		<ProjectReference Include="..\..\core\generators\Rebound.Core.SourceGenerator\Rebound.Core.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
		<ProjectReference Include="..\..\core\Rebound.Core.DLLInjection\Rebound.Core.DLLInjection.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.IPC\Rebound.Core.IPC.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.Native\Rebound.Core.Native.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.SystemInformation\Rebound.Core.SystemInformation.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.UI\Rebound.Core.UI.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core\Rebound.Core.csproj" />
	</ItemGroup>

</Project>