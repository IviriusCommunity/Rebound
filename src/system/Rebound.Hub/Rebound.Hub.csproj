<Project Sdk="Microsoft.NET.Sdk">

	<!-- Framework and platform configuration  -->
	<PropertyGroup Label="Framework Configuration">

		<!-- .NET and Windows targets -->
		<TargetFramework>net10.0-windows10.0.26100.0</TargetFramework>
		<TargetPlatformMinVersion>10.0.22000.0</TargetPlatformMinVersion>

		<!-- UWP properties -->
		<UseUwp>true</UseUwp>
		<UseUwpTools>true</UseUwpTools>

	</PropertyGroup>

	<!-- General application properties -->
	<PropertyGroup Label="Application Properties">

		<!-- Specific -->
		<AssemblyName>Rebound Hub</AssemblyName>
		<RootNamespace>Rebound.Hub</RootNamespace>
		<ApplicationIcon>Assets\AppIcons\ReboundHub.ico</ApplicationIcon>

		<!-- Generic -->
		<OutputType>WinExe</OutputType>
		<DefaultLanguage>en-US</DefaultLanguage>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<DefineConstants>DISABLE_XAML_GENERATED_MAIN;$(DefineConstants)</DefineConstants>

		<!-- Versioning -->
		<AssemblyVersion>0.0.10</AssemblyVersion>
		<Version>0.0.10</Version>
		<FileVersion>0.0.10</FileVersion>

	</PropertyGroup>

	<!-- Advanced build features -->
	<PropertyGroup Label="Advanced Features">

		<!-- Generic -->
		<EnableMsixTooling>true</EnableMsixTooling>
		<WindowsAppSDKSelfContained>true</WindowsAppSDKSelfContained>

		<!-- Native AOT -->
		<!-- Enable COM interop support -->
		<EnableComInterop>true</EnableComInterop>
		<!-- Enable source generators -->
		<UseSourceGenerators>true</UseSourceGenerators>
		<!-- Disable runtime marshalling for better API handling -->
		<DisableRuntimeMarshalling>true</DisableRuntimeMarshalling>
		<!-- Run CsWin32 as a build task for COM NAOT compatibility -->
		<CsWin32RunAsBuildTask>true</CsWin32RunAsBuildTask>
		<!-- No idea what this is for but it fixes package publishing (thanks Rafael) -->
		<EnableSourceLink>false</EnableSourceLink>

	</PropertyGroup>

	<!-- Publishing and optimization -->
	<PropertyGroup Label="Publishing Configuration">

		<!-- Generic -->
		<PublishProfile>win-$(Platform).pubxml</PublishProfile>
		<PublishReadyToRun>true</PublishReadyToRun>

		<!-- Native AOT -->
		<PublishAot>true</PublishAot>
		<SelfContained>true</SelfContained>
		<PublishTrimmed>true</PublishTrimmed>
		<OptimizationPreference>Speed</OptimizationPreference>
		<IlcOptimizationPreference>Speed</IlcOptimizationPreference>

	</PropertyGroup>

	<!-- Packaging and signing -->
	<PropertyGroup Label="Packaging Settings">

		<!-- Common certificate file -->
		<PackageCertificateKeyFile>$(SolutionDir)\src\Rebound.Hub_TemporaryKey.pfx</PackageCertificateKeyFile>

		<!-- Generic -->
		<AppxPackageSigningEnabled>True</AppxPackageSigningEnabled>
		<AppxPackageSigningTimestampDigestAlgorithm>SHA256</AppxPackageSigningTimestampDigestAlgorithm>
		<AppxAutoIncrementPackageRevision>False</AppxAutoIncrementPackageRevision>
		<AppxBundle>Always</AppxBundle>
		<AppxBundlePlatforms>x64</AppxBundlePlatforms>
		<GenerateTestArtifacts>True</GenerateTestArtifacts>
		<GenerateAppInstallerFile>True</GenerateAppInstallerFile>
		<AppInstallerUri>C:\</AppInstallerUri>
		<HoursBetweenUpdateChecks>0</HoursBetweenUpdateChecks>

	</PropertyGroup>

	<!-- Packages -->

	<!-- Windows SDK & WinUI -->
	<ItemGroup Label="Windows Platform">
		<PackageReference Include="Microsoft.UI.Xaml" Version="2.8.7" />
		<PackageReference Include="Microsoft.Windows.SDK.BuildTools.MSIX" Version="1.7.20250829.1" />
		<PackageReference Include="Microsoft.WindowsAppSDK.Base" Version="1.8.250831001" />
		<PackageReference Include="Microsoft.WindowsAppSDK.InteractiveExperiences" Version="1.8.251104001" />
		<PackageReference Include="MicaForUWP" Version="0.2.13" />
	</ItemGroup>

	<!-- Windows Interop -->
	<ItemGroup Label="Windows Interop">
		<PackageReference Include="Dongle.GuidRVAGen" Version="1.0.5" />
		<PackageReference Include="Microsoft.Windows.CsWin32" Version="0.3.264">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="TerraFX.Interop.Windows" Version="10.0.26100.6" />
	</ItemGroup>

	<!-- System & Management -->
	<ItemGroup Label="System Libraries">
		<PackageReference Include="System.Diagnostics.PerformanceCounter" Version="10.0.1" />
		<PackageReference Include="System.IO.Pipes.AccessControl" Version="6.0.0-preview.5.21301.5" />
		<PackageReference Include="OwlCore.Storage" Version="0.14.0" />
		<PackageReference Include="TaskScheduler" Version="2.12.2" />
	</ItemGroup>

	<!-- CommunityToolkit -->
	<ItemGroup Label="CommunityToolkit">
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
		<PackageReference Include="CommunityToolkit.Uwp.Animations" Version="8.2.251219" />
		<PackageReference Include="CommunityToolkit.Uwp.Behaviors" Version="8.2.251219" />
		<PackageReference Include="CommunityToolkit.Uwp.Converters" Version="8.2.251219" />
		<PackageReference Include="CommunityToolkit.Uwp.Controls.Primitives" Version="8.2.251219" />
		<PackageReference Include="CommunityToolkit.Uwp.Controls.Segmented" Version="8.2.251219" />
		<PackageReference Include="CommunityToolkit.Uwp.Controls.SettingsControls" Version="8.2.251219" />
		<PackageReference Include="CommunityToolkit.Uwp.Extensions" Version="8.2.251219" />
		<PackageReference Include="CommunityToolkit.Uwp.Helpers" Version="8.2.251219" />
		<PackageReference Include="CommunityToolkit.Uwp.Media" Version="8.2.251219" />
		<PackageReference Include="CommunityToolkit.Uwp.Triggers" Version="8.2.251219" />
	</ItemGroup>

	<!-- Content -->
	<ItemGroup Label="Content">
		<Content Update="Assets\**\*">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<!-- Excluded items -->
	<ItemGroup Label="Exclusions">
		<Compile Remove="Styles\**" />
		<EmbeddedResource Remove="Styles\**" />
		<None Remove="Styles\**" />
		<None Remove="Assets\AppIcons\ReboundIcon.ico" />
		<Page Remove="Styles\**" />
		<PRIResource Remove="Styles\**" />
		<PRIResource Remove="Assets\Wallpapers\**" />
		<CustomAdditionalCompileInputs Remove="Views\HomePage.xaml" />
		<Resource Remove="Views\HomePage.xaml" />
	</ItemGroup>

	<!-- Additional files (CsWin32) -->
	<ItemGroup Label="Additional Files">
		<AdditionalFiles Include="NativeMethods.txt" />
	</ItemGroup>

	<!-- App manifest -->
	<ItemGroup>
		<Manifest Include="$(ApplicationManifest)" />
	</ItemGroup>

	<!-- Project references -->
	<ItemGroup Label="Project References">
		<ProjectReference Include="..\..\core\forge\Rebound.Forge.UWP\Rebound.Forge.UWP.csproj" />
		<ProjectReference Include="..\..\core\generators\Rebound.Core.SourceGeneratorAttributes\Rebound.Core.SourceGeneratorAttributes.csproj" />
		<ProjectReference Include="..\..\core\generators\Rebound.Core.SourceGenerator\Rebound.Core.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
		<ProjectReference Include="..\..\core\Rebound.Core.IPC\Rebound.Core.IPC.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.Native\Rebound.Core.Native.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.SystemInformation\Rebound.Core.SystemInformation.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core.UI.UWP\Rebound.Core.UI.UWP.csproj" />
		<ProjectReference Include="..\..\core\Rebound.Core\Rebound.Core.csproj" />
	</ItemGroup>

	<!-- Shared imports -->
	<Import Project="..\..\core\forge\Rebound.Forge.Assets\Rebound.Forge.Assets.projitems" Label="Shared" />

</Project>