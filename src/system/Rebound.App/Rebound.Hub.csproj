<Project Sdk="Microsoft.NET.Sdk">

	<!-- Properties -->
	<PropertyGroup>

		<!-- General -->
		<OutputType>WinExe</OutputType>
		<UseUwp>true</UseUwp>
		<UseUwpTools>true</UseUwpTools>
		<AssemblyName>Rebound Hub</AssemblyName>
		<ApplicationIcon>Assets\AppIcons\ReboundHub.ico</ApplicationIcon>
		<RootNamespace>Rebound.Hub</RootNamespace>
		<ApplicationManifest>app.manifest</ApplicationManifest>

		<DefineConstants>DISABLE_XAML_GENERATED_MAIN;$(DefineConstants)</DefineConstants>

		<DefaultLanguage>en-US</DefaultLanguage>

		<GenerateAppInstallerFile>True</GenerateAppInstallerFile>

		<AppxPackageSigningEnabled>True</AppxPackageSigningEnabled>

		<PackageCertificateKeyFile>Rebound.App_TemporaryKey.pfx</PackageCertificateKeyFile>

		<AppxPackageSigningTimestampDigestAlgorithm>SHA256</AppxPackageSigningTimestampDigestAlgorithm>

		<AppxAutoIncrementPackageRevision>True</AppxAutoIncrementPackageRevision>

		<GenerateTestArtifacts>True</GenerateTestArtifacts>

		<AppxBundle>Never</AppxBundle>

		<AppInstallerUri>D:\</AppInstallerUri>

		<HoursBetweenUpdateChecks>0</HoursBetweenUpdateChecks>

		<StartupObject>Rebound.Hub.Program</StartupObject>
		
	</PropertyGroup>

	<ItemGroup>
		<AppxTargetDeviceFamilyItem Include="Windows.Desktop" />
	</ItemGroup>

	<ItemGroup>
		<TrimmerRootAssembly Include="Windows.Win32" />
		<TrimmerRootAssembly Include="Windows.Win32.System.Com" />
	</ItemGroup>

	<!-- Project content -->
	<ItemGroup>
		<Content Include="Fonts\FluentIcons.ttf">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="Modding\Launchers\rosk.exe">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<CustomAdditionalCompileInputs Remove="Views\HomePage.xaml" />
		<Resource Remove="Views\HomePage.xaml" />
		<Compile Remove="Styles\**" />
		<EmbeddedResource Remove="Styles\**" />
		<None Remove="Styles\**" />
		<Page Remove="Styles\**" />
		<PRIResource Remove="Assets\Wallpapers\**" />
		<None Remove="Assets\AppIcons\ReboundIcon.ico" />
		<None Remove="Modding\Launchers\rosk.exe" />
		<AdditionalFiles Include="NativeMethods.txt" />
		<None Include="Modding\Apps\**\*">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<Content Update="Assets\**\*">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<!-- Project references -->
	<ItemGroup>
		<ProjectReference Include="..\..\core\libs\Rebound.Core.SourceGeneratorAttributes\Rebound.Core.SourceGeneratorAttributes.csproj" />
		<ProjectReference Include="..\..\core\libs\Rebound.Core.SourceGenerator\Rebound.Core.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	</ItemGroup>

	<!-- Shared project imports -->
	<Import Project="..\..\core\forge\Rebound.Forge\Rebound.Forge.projitems" Label="Shared" />
	<Import Project="..\..\core\shared\Rebound.Core.Helpers\Rebound.Core.Helpers.projitems" Label="Shared" />
	<ItemGroup>
	  <PRIResource Remove="Styles\**" />
	</ItemGroup>

</Project>