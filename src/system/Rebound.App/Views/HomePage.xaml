<Page
    x:Class="Rebound.Hub.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gallery="using:WinUIGallery.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:cards="using:Rebound.Hub.Cards"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <ImageSource x:Key="HeroImage">/Assets/Backgrounds/WallpaperLight.png</ImageSource>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <ImageSource x:Key="HeroImage">/Assets/Backgrounds/WallpaperDark.png</ImageSource>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <ScrollViewer CornerRadius="8,0,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="400" />
                <RowDefinition Height="64" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <gallery:HomePageHeaderImage Image="{ThemeResource HeroImage}" />

            <Grid
                x:Name="TitleGrid"
                Height="200"
                Margin="48,0,0,0"
                VerticalAlignment="Top">
                <Grid VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock
                            FontWeight="SemiBold"
                            Style="{StaticResource TitleLargeTextBlockStyle}"
                            Text="This is Ivirius Community." />
                        <TextBlock
                            FontSize="18"
                            Text="We made apps and tools for you to have the best experience with Windows 11."
                            TextWrapping="WrapWholeWords" />
                    </StackPanel>
                </Grid>
            </Grid>

            <ScrollViewer
                Grid.RowSpan="2"
                Margin="0,0,0,32"
                Padding="48,0"
                VerticalAlignment="Bottom"
                CanContentRenderOutsideBounds="True"
                HorizontalScrollBarVisibility="Hidden"
                HorizontalScrollMode="Enabled"
                VerticalScrollBarVisibility="Hidden"
                VerticalScrollMode="Disabled">
                <ItemsControl ItemsSource="{x:Bind LinkCards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Orientation="Horizontal"
                                Spacing="16" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="cards:LinkCard">
                            <Grid CornerRadius="6">
                                <Grid.Background>
                                    <media:AcrylicBrush BlurAmount="16" TintColor="{ThemeResource SolidBackgroundFillColorBase}" />
                                </Grid.Background>
                                <Button
                                    Width="240"
                                    Height="220"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"
                                    Background="Transparent"
                                    CornerRadius="8">
                                    <interactivity:Interaction.Behaviors>
                                        <interactivity:EventTriggerBehavior EventName="Tapped">
                                            <behaviors:NavigateToUriAction NavigateUri="{x:Bind Link}" />
                                        </interactivity:EventTriggerBehavior>
                                    </interactivity:Interaction.Behaviors>
                                    <Grid>
                                        <StackPanel
                                            Margin="8,16"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Top">
                                            <Grid
                                                Width="64"
                                                Height="64"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top">
                                                <Image
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Source="{x:Bind IconPath}" />
                                            </Grid>
                                            <TextBlock
                                                Margin="0,16,0,0"
                                                FontSize="20"
                                                Text="{x:Bind Title}" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="11"
                                                Opacity="0.7"
                                                Text="{x:Bind Description}"
                                                TextWrapping="WrapWholeWords" />
                                        </StackPanel>
                                        <FontIcon
                                            Margin="8,12"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            FontSize="15"
                                            Glyph="î¢§" />
                                    </Grid>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <TextBlock
                Grid.Row="2"
                Margin="48,0,0,24"
                FontSize="28"
                Style="{ThemeResource SubtitleTextBlockStyle}"
                Text="Featured Apps" />

            <ItemsControl
                Grid.Row="3"
                Margin="48,0,48,48"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ItemsSource="{x:Bind AppCards}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <controls:WrapPanel HorizontalSpacing="16" VerticalSpacing="16" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="cards:AppCard">
                        <Button
                            Width="320"
                            Padding="0"
                            BorderThickness="0"
                            HorizontalContentAlignment="Stretch">
                            <ui:Effects.Shadow>
                                <media:AttachedCardShadow
                                    BlurRadius="24"
                                    Opacity="0.2"
                                    Offset="0, 8"
                                    Color="{x:Bind AccentColor}" />
                            </ui:Effects.Shadow>
                            <Grid>
                                <Border CornerRadius="4" Opacity="0.25">
                                    <Border.Background>
                                        <SolidColorBrush Color="{x:Bind AccentColor}" />
                                    </Border.Background>
                                </Border>
                                <Border CornerRadius="4">
                                    <Border.Background>
                                        <media:AcrylicBrush
                                            BlurAmount="8"
                                            TintColor="{ThemeResource SolidBackgroundFillColorBase}"
                                            TintOpacity="0.8" />
                                    </Border.Background>
                                </Border>
                                <Grid
                                    Margin="12"
                                    ColumnSpacing="8"
                                    RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.RowSpan="2"
                                        Width="64"
                                        Height="64">
                                        <ui:Effects.Shadow>
                                            <media:AttachedCardShadow
                                                BlurRadius="12"
                                                Opacity="0.3"
                                                Offset="0, 4"
                                                Color="Black" />
                                        </ui:Effects.Shadow>
                                    </Border>
                                    <Grid
                                        Grid.RowSpan="2"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top">
                                        <Grid
                                            Width="64"
                                            Height="64"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            CornerRadius="4">
                                            <Image
                                                Margin="-16"
                                                Source="{x:Bind IconPath}"
                                                Stretch="Fill" />
                                            <Border
                                                BorderBrush="{ThemeResource SolidBackgroundFillColorBase}"
                                                BorderThickness="2"
                                                CornerRadius="3" />
                                            <Border CornerRadius="4">
                                                <Border.Background>
                                                    <media:AcrylicBrush
                                                        BlurAmount="16"
                                                        TintColor="{ThemeResource SolidBackgroundFillColorBase}"
                                                        TintOpacity="0.7" />
                                                </Border.Background>
                                                <Image
                                                    Width="48"
                                                    Height="48"
                                                    Margin="8"
                                                    Source="{x:Bind IconPath}" />
                                            </Border>
                                        </Grid>
                                    </Grid>
                                    <TextBlock
                                        Grid.Column="1"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind Title}"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,-12,0,0"
                                        FontSize="12"
                                        Opacity="0.5"
                                        Text="{x:Bind Description}"
                                        TextWrapping="Wrap" />
                                    <StackPanel
                                        Grid.Row="2"
                                        Grid.ColumnSpan="2"
                                        Padding="8,2"
                                        HorizontalAlignment="Left"
                                        BorderBrush="{ThemeResource AccentButtonBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="9"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <StackPanel.Background>
                                            <SolidColorBrush Color="{x:Bind AccentColor}"/>
                                        </StackPanel.Background>
                                        <TextBlock
                                            FontSize="10"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind Publisher}">
                                            <TextBlock.Foreground>
                                                <SolidColorBrush Color="{x:Bind AccentTextColor}"/>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </StackPanel>
                                    <Border
                                        Grid.Row="3"
                                        Grid.ColumnSpan="2"
                                        Height="160"
                                        HorizontalAlignment="Stretch">
                                        <ui:Effects.Shadow>
                                            <media:AttachedCardShadow
                                                BlurRadius="12"
                                                Opacity="0.4"
                                                Offset="0, 6"
                                                Color="Black" />
                                        </ui:Effects.Shadow>
                                    </Border>
                                    <Grid
                                        Grid.Row="3"
                                        Grid.ColumnSpan="2"
                                        Height="160"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        CornerRadius="4">
                                        <Image
                                            Margin="4"
                                            Source="{x:Bind PicturePath}"
                                            Stretch="Fill" />
                                        <Border>
                                            <Border.Background>
                                                <media:AcrylicBrush BlurAmount="24" TintColor="{ThemeResource SolidBackgroundFillColorBase}" />
                                            </Border.Background>
                                            <Image
                                                Margin="16"
                                                Source="{x:Bind PicturePath}"
                                                Stretch="Uniform" />
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <interactivity:Interaction.Behaviors>
                                <interactivity:EventTriggerBehavior EventName="Tapped">
                                    <behaviors:NavigateToUriAction NavigateUri="{x:Bind Link}" />
                                </interactivity:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</Page>