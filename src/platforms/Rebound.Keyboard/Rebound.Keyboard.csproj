<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<ApplicationIcon>On-Screen Keyboard.ico</ApplicationIcon>
		<AssemblyName>Rebound On-Screen Keyboard</AssemblyName>
