<Page
    x:Class="Rebound.Shell.FullShellTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rebound.Shell"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid
                Height="48"
                VerticalAlignment="Bottom"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0">
                <Grid.Background>
                    <media:AcrylicBrush
                        BackgroundSource="HostBackdrop"
                        BlurAmount="32"
                        TintColor="Black"
                        TintOpacity="0.2" />
                </Grid.Background>
            </Grid>
            <Grid
                Height="48"
                VerticalAlignment="Top"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1">
                <Grid.Background>
                    <media:AcrylicBrush
                        BackgroundSource="HostBackdrop"
                        BlurAmount="32"
                        TintColor="Black"
                        TintOpacity="0.2" />
                </Grid.Background>
                <StackPanel
                    Margin="24,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="16">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="12:14 AM" />
                    <Border
                        Width="1"
                        Margin="-8,0"
                        VerticalAlignment="Stretch"
                        Background="{ThemeResource DividerStrokeColorDefaultBrush}" />
                    <FontIcon FontSize="16" Glyph="&#xED1E;" />
                    <FontIcon FontSize="16" Glyph="&#xED1E;" />
                    <FontIcon FontSize="16" Glyph="&#xED1E;" />
                    <FontIcon FontSize="16" Glyph="&#xED1E;" />
                    <FontIcon FontSize="16" Glyph="&#xED1E;" />
                    <FontIcon FontSize="16" Glyph="&#xED1E;" />
                    <FontIcon FontSize="16" Glyph="&#xED1E;" />
                </StackPanel>
                <StackPanel
                    Margin="24,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="16">
                    <FontIcon FontSize="16" Glyph="&#xE701;" />
                    <FontIcon FontSize="16" Glyph="&#xE702;" />
                    <Border
                        Width="1"
                        Margin="-8,0"
                        VerticalAlignment="Stretch"
                        Background="{ThemeResource DividerStrokeColorDefaultBrush}" />
                    <FontIcon FontSize="16" Glyph="&#xEBB5;" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="100%" />
                </StackPanel>
            </Grid>
            <Grid
                Margin="0,0,16,64"
                Padding="24,16"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.Background>
                    <media:AcrylicBrush
                        BackgroundSource="HostBackdrop"
                        BlurAmount="32"
                        TintColor="Black"
                        TintOpacity="0.2" />
                </Grid.Background>
                <Grid
                    Margin="0,8,0,0"
                    ColumnSpacing="8"
                    RowSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <muxc:PipsPager
                        Grid.RowSpan="2"
                        Grid.Column="2"
                        Margin="0,0,-22,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        NextButtonVisibility="Visible"
                        NumberOfPages="2"
                        Orientation="Vertical"
                        PreviousButtonVisibility="Visible" />
                    <StackPanel Spacing="8">
                        <Button
                            Width="100"
                            Padding="16,16"
                            Style="{StaticResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <FontIcon FontSize="16" Glyph="&#xE701;" />
                                <Border
                                    Width="1"
                                    Margin="0,-17"
                                    VerticalAlignment="Stretch"
                                    Background="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                                <FontIcon FontSize="16" Glyph="&#xE76C;" />
                            </StackPanel>
                        </Button>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Text="WiFi" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Spacing="8">
                        <Button
                            Width="100"
                            Padding="16,16"
                            Style="{StaticResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <FontIcon FontSize="16" Glyph="&#xE702;" />
                                <Border
                                    Width="1"
                                    Margin="0,-17"
                                    VerticalAlignment="Stretch"
                                    Background="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                                <FontIcon FontSize="16" Glyph="&#xE76C;" />
                            </StackPanel>
                        </Button>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Text="Bluetooth" />
                    </StackPanel>
                    <StackPanel Grid.Column="2" Spacing="8">
                        <Button Width="100" Padding="16,16">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <FontIcon FontSize="16" Glyph="&#xE709;" />
                            </StackPanel>
                        </Button>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Text="Airplane mode" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Spacing="8">
                        <Button Width="100" Padding="16,16">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <FontIcon FontSize="16" Glyph="&#xE776;" />
                                <FontIcon
                                    FontSize="12"
                                    Glyph="&#xE76C;"
                                    Opacity="0.5" />
                            </StackPanel>
                        </Button>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Text="Accessibility" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Spacing="8">
                        <Button Width="100" Padding="16,16">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <FontIcon FontSize="16" Glyph="&#xEBBC;" />
                            </StackPanel>
                        </Button>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Text="Battery saver" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="2"
                        Spacing="8">
                        <Button Width="100" Padding="16,16">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <FontIcon FontSize="16" Glyph="&#xED1E;" />
                            </StackPanel>
                        </Button>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Text="Live captions" />
                    </StackPanel>
                </Grid>
                <Border
                    Grid.Row="1"
                    Margin="-24,0,-24,52"
                    Background="{ThemeResource LayerFillColorDefaultBrush}" />
                <StackPanel Grid.Row="1" Spacing="16">
                    <Border
                        Height="1"
                        Margin="-24,0"
                        HorizontalAlignment="Stretch"
                        Background="{ThemeResource DividerStrokeColorDefaultBrush}" />
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Margin="-8,0"
                            Padding="8"
                            VerticalAlignment="Bottom"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <FontIcon FontSize="16" Glyph="&#xE706;" />
                        </Button>
                        <Slider Grid.Column="1" Header="Brightness" />
                    </Grid>
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Margin="-8,0"
                            Padding="8"
                            VerticalAlignment="Bottom"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <FontIcon FontSize="16" Glyph="&#xED39;" />
                        </Button>
                        <Slider
                            Grid.Column="1"
                            Header="Keyboard brightness"
                            Maximum="2"
                            StepFrequency="1"
                            TickFrequency="1"
                            TickPlacement="BottomRight" />
                    </Grid>
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Margin="-8,0"
                            Padding="8"
                            VerticalAlignment="Bottom"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <Grid>
                                <FontIcon
                                    FontSize="16"
                                    Glyph="&#xE767;"
                                    Opacity="0.5" />
                                <FontIcon FontSize="16" Glyph="&#xE994;" />
                            </Grid>
                        </Button>
                        <Slider Grid.Column="1" Header="Volume" />
                        <Button
                            Grid.Column="2"
                            Padding="8"
                            VerticalAlignment="Bottom"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <FontIcon FontSize="16" Glyph="&#xF4C3;" />
                        </Button>
                    </Grid>
                    <Border
                        Height="1"
                        Margin="-24,0"
                        HorizontalAlignment="Stretch"
                        Background="{ThemeResource DividerStrokeColorDefaultBrush}" />
                    <Grid Margin="-8,0">
                        <Button
                            Padding="8"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xEBB5;" />
                                <TextBlock FontSize="12" Text="100% - Plugged in" />
                            </StackPanel>
                        </Button>
                        <StackPanel
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Padding="8"
                                Background="Transparent"
                                BorderBrush="Transparent">
                                <FontIcon FontSize="16" Glyph="&#xE713;" />
                            </Button>
                            <Button
                                Padding="8"
                                Background="Transparent"
                                BorderBrush="Transparent">
                                <FontIcon FontSize="16" Glyph="&#xE7E8;" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
