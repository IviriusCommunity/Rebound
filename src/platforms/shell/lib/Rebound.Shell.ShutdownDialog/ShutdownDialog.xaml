<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.Shell.ShutdownDialog.ShutdownDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rebound.Shell.ShutdownDialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BoolToObjectConverter
            x:Key="BoolToInverseVisibilityConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
    </Page.Resources>
    <Grid>
        <Grid Visibility="{x:Bind ViewModel.UseShutdownScreen, Converter={StaticResource BoolToInverseVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Margin="0,52,0,24"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="24">
                <Grid VerticalAlignment="Center">
                    <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68" Fill="{StaticResource AccentFillColorDefaultBrush}" />
                    <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68">
                        <Path.Fill>
                            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Color="{ThemeResource SystemAccentColorLight3}" />
                                    <GradientStop Offset="1" Color="{ThemeResource SystemAccentColor}" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Path.Fill>
                    </Path>
                </Grid>
                <TextBlock
                    Margin="0,-8,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Variable"
                    FontSize="54"
                    FontWeight="SemiBold"
                    Text="{x:Bind ViewModel.WindowsVersionName}">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="1" Color="{ThemeResource SystemAccentColorLight3}" />
                                <GradientStop Color="{ThemeResource SystemAccentColorLight1}" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>
            <Grid Visibility="{x:Bind ViewModel.ShowBlurAndGlow, Mode=OneWay}">
                <Grid.Background>
                    <media:BackdropBlurBrush Amount="36.0" />
                </Grid.Background>
            </Grid>
            <StackPanel
                Grid.Row="0"
                Margin="0,52,0,24"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="24">
                <Grid VerticalAlignment="Center">
                    <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68" Fill="{StaticResource AccentFillColorDefaultBrush}" />
                    <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68">
                        <Path.Fill>
                            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Color="{ThemeResource SystemAccentColorLight3}" />
                                    <GradientStop Offset="1" Color="{ThemeResource SystemAccentColor}" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Path.Fill>
                    </Path>
                </Grid>
                <TextBlock
                    Margin="0,-8,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Variable"
                    FontSize="54"
                    FontWeight="SemiBold"
                    Text="{x:Bind ViewModel.WindowsVersionName}">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="1" Color="{ThemeResource SystemAccentColorLight3}" />
                                <GradientStop Color="{ThemeResource SystemAccentColorLight1}" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>
            <StackPanel
                Margin="12,8"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="8">
                <Image
                    Width="16"
                    Height="16"
                    Source="ms-appx:///Assets/Shutdown.ico" />
                <TextBlock
                    x:FieldModifier="public"
                    FontSize="12"
                    Text="Power options" />
                <Border
                    Padding="6,2,6,3"
                    VerticalAlignment="Center"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    CornerRadius="2"
                    Visibility="Collapsed">
                    <TextBlock
                        FontSize="10"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                        Text="BETA" />
                </Border>
            </StackPanel>
            <Grid Margin="0,142,0,0" Visibility="{x:Bind ViewModel.ShowBlurAndGlow, Mode=OneWay}">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Color="{ThemeResource SystemAccentColorLight2}" />
                            <GradientStop Offset="1" Color="{ThemeResource SystemAccentColor}" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Grid.Background>
                <ui:Effects.Shadow>
                    <media:AttachedCardShadow Color="{ThemeResource SystemAccentColorLight2}" />
                </ui:Effects.Shadow>
            </Grid>
            <Grid
                Grid.Row="2"
                Padding="8"
                VerticalAlignment="Top"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                ColumnSpacing="8"
                RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind ShutdownCommand}"
                    ToolTipService.ToolTip="Close all apps and turn off your PC.">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xE7E8;" />
                        <TextBlock FontWeight="SemiBold" Text="Shut Down" />
                    </StackPanel>
                </Button>
                <Button
                    Grid.Column="1"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind RestartCommand}"
                    ToolTipService.ToolTip="Close all apps and restart your PC.">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xE72C;" />
                        <TextBlock FontWeight="SemiBold" Text="Restart" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Column="2"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind SleepCommand}"
                    ToolTipService.ToolTip="Put the PC into a low-power state and resume quickly.">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xEC46;" />
                        <TextBlock FontWeight="SemiBold" Text="Sleep" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Row="1"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind LockCommand}"
                    ToolTipService.ToolTip="Secure your session by locking the PC. Requires password to unlock.">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xE72E;" />
                        <TextBlock FontWeight="SemiBold" Text="Lock" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind SwitchUsersCommand}"
                    ToolTipService.ToolTip="Switch to another user account without logging out.">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xE748;" />
                        <TextBlock FontWeight="SemiBold" Text="Switch User" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind HibernateCommand}"
                    ToolTipService.ToolTip="Save your session to disk and fully power off the PC.">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon
                            FontSize="16"
                            Glyph="&#xECE4;"
                            RenderTransformOrigin="0.5, 0.5">
                            <FontIcon.RenderTransform>
                                <RotateTransform Angle="90" />
                            </FontIcon.RenderTransform>
                        </FontIcon>
                        <TextBlock FontWeight="SemiBold" Text="Hibernate" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Row="2"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind SignOutCommand}"
                    ToolTipService.ToolTip="Exit the current user session without saving.">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xF3B1;" />
                        <TextBlock FontWeight="SemiBold" Text="Sign out" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind RestartToUEFICommand}"
                    ToolTipService.ToolTip="Restart into UEFI settings.">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xE9F5;" />
                        <TextBlock FontWeight="SemiBold" Text="UEFI Settings" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind RestartToRecoveryCommand}"
                    ToolTipService.ToolTip="Restart into the Windows recovery environment.">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xE67A;" />
                        <TextBlock FontWeight="SemiBold" Text="Recovery" />
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Grid.Row="3" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <muxc:InfoBar
                    Title="Windows Server"
                    Grid.ColumnSpan="3"
                    Margin="16,16,16,0"
                    IsClosable="False"
                    IsOpen="True"
                    Message="Please specify a reason for the requested action." />

                <ComboBox
                    Grid.Row="2"
                    Margin="16,12,0,0"
                    HorizontalAlignment="Stretch"
                    SelectedIndex="{x:Bind ViewModel.OperationReason, Mode=TwoWay}">
                    <ComboBoxItem Content="Other" />
                    <ComboBoxItem Content="Maintenance" />
                    <ComboBoxItem Content="Software Update" />
                    <ComboBoxItem Content="Hardware Upgrade" />
                    <ComboBoxItem Content="Power Issue" />
                    <ComboBoxItem Content="System Crash" />
                </ComboBox>

                <ComboBox
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="0,12,16,0"
                    HorizontalAlignment="Stretch"
                    SelectedIndex="{x:Bind ViewModel.OperationMode, Mode=TwoWay}">
                    <ComboBoxItem Content="Planned" />
                    <ComboBoxItem Content="Unplanned" />
                    <ComboBoxItem Content="User Requested" />
                    <ComboBoxItem Content="Automated" />
                </ComboBox>
            </Grid>
            <Grid
                Grid.Row="4"
                Height="80"
                Padding="24"
                VerticalAlignment="Bottom"
                Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
                <muxc:PersonPicture
                    Width="28"
                    HorizontalAlignment="Left"
                    ProfilePicture="{x:Bind UserPicture, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.ShowUserInfo, Mode=OneWay}" />
                <TextBlock
                    Margin="40,0,180,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Text="{x:Bind local:ShutdownViewModel.CurrentUser, Mode=OneWay}"
                    TextWrapping="WrapWholeWords"
                    Visibility="{x:Bind ViewModel.ShowUserInfo, Mode=OneWay}" />
                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Width="120"
                        Command="{x:Bind CancelCommand}"
                        Content="Cancel">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Escape" />
                        </Button.KeyboardAccelerators>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Visibility="{x:Bind ViewModel.UseShutdownScreen}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="1"
                Margin="0,0,0,24"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="24">
                <Grid VerticalAlignment="Center">
                    <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68" Fill="{StaticResource AccentFillColorDefaultBrush}" />
                    <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68">
                        <Path.Fill>
                            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Color="{ThemeResource SystemAccentColorLight3}" />
                                    <GradientStop Offset="1" Color="{ThemeResource SystemAccentColor}" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Path.Fill>
                    </Path>
                </Grid>
                <TextBlock
                    Margin="0,-8,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Variable"
                    FontSize="54"
                    FontWeight="SemiBold"
                    Text="{x:Bind ViewModel.WindowsVersionName}">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="1" Color="{ThemeResource SystemAccentColorLight3}" />
                                <GradientStop Color="{ThemeResource SystemAccentColorLight1}" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>
            <Grid
                Grid.RowSpan="7"
                Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                Visibility="{x:Bind ViewModel.ShowBlurAndGlow, Mode=OneWay, Converter={StaticResource BoolToInverseVisibilityConverter}}" />
            <Grid Grid.RowSpan="7" Visibility="{x:Bind ViewModel.ShowBlurAndGlow, Mode=OneWay}">
                <Grid.Background>
                    <media:BackdropBlurBrush Amount="128" />
                </Grid.Background>
            </Grid>
            <Grid Grid.RowSpan="7" Visibility="{x:Bind ViewModel.ShowBlurAndGlow, Mode=OneWay}">
                <Grid.Background>
                    <media:BackdropSaturationBrush Saturation="1" />
                </Grid.Background>
            </Grid>
            <Grid Grid.RowSpan="7" Visibility="{x:Bind ViewModel.ShowBlurAndGlow, Mode=OneWay}">
                <Grid.Background>
                    <media:AcrylicBrush
                        BackgroundSource="Backdrop"
                        TintColor="{ThemeResource SystemColorBackgroundColor}"
                        TintOpacity="0.25" />
                </Grid.Background>
            </Grid>
            <StackPanel
                Grid.Row="1"
                Margin="0,0,0,24"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="24">
                <Grid VerticalAlignment="Center">
                    <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68" Fill="{StaticResource AccentFillColorDefaultBrush}" />
                    <Path Data="M 0 4 C 0 2 2 0 4 0 L 33 0 L 33 33 L 0 33 M 35 0 L 64 0 C 66 0 68 2 68 4 L 68 33 L 35 33 M 33 35 L 0 35 L 0 64 C 0 66 2 68 4 68 L 33 68 M 35 35 L 68 35 L 68 64 C 68 66 66 68 64 68 L 35 68">
                        <Path.Fill>
                            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Color="{ThemeResource SystemAccentColorLight3}" />
                                    <GradientStop Offset="1" Color="{ThemeResource SystemAccentColor}" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Path.Fill>
                    </Path>
                </Grid>
                <TextBlock
                    Margin="0,-8,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Variable"
                    FontSize="54"
                    FontWeight="SemiBold"
                    Text="{x:Bind ViewModel.WindowsVersionName}">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="1" Color="{ThemeResource SystemAccentColorLight3}" />
                                <GradientStop Color="{ThemeResource SystemAccentColorLight1}" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>
            <Grid
                Grid.Row="2"
                Padding="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                ColumnSpacing="8"
                RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind ShutdownCommand}"
                    ToolTipService.ToolTip="Close all apps and turn off your PC.">
                    <StackPanel Spacing="16">
                        <FontIcon
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Glyph="&#xE7E8;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Shut Down" />
                    </StackPanel>
                </Button>
                <Button
                    Grid.Column="1"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind RestartCommand}"
                    ToolTipService.ToolTip="Close all apps and restart your PC.">
                    <StackPanel Spacing="16">
                        <FontIcon
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Glyph="&#xE72C;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Restart" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Column="2"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind SleepCommand}"
                    ToolTipService.ToolTip="Put the PC into a low-power state and resume quickly.">
                    <StackPanel Spacing="16">
                        <FontIcon
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Glyph="&#xEC46;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Sleep" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Column="3"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind LockCommand}"
                    ToolTipService.ToolTip="Secure your session by locking the PC. Requires password to unlock.">
                    <StackPanel Spacing="16">
                        <FontIcon
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Glyph="&#xE72E;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Lock" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Column="4"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind SwitchUsersCommand}"
                    ToolTipService.ToolTip="Switch to another user account without logging out.">
                    <StackPanel Spacing="16">
                        <FontIcon
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Glyph="&#xE748;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Switch User" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Row="1"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind HibernateCommand}"
                    ToolTipService.ToolTip="Save your session to disk and fully power off the PC.">
                    <StackPanel Spacing="16">
                        <FontIcon
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Glyph="&#xECE4;"
                            RenderTransformOrigin="0.5, 0.5">
                            <FontIcon.RenderTransform>
                                <RotateTransform Angle="90" />
                            </FontIcon.RenderTransform>
                        </FontIcon>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Hibernate" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind SignOutCommand}"
                    ToolTipService.ToolTip="Exit the current user session without saving.">
                    <StackPanel Spacing="16">
                        <FontIcon
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Glyph="&#xF3B1;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Sign out" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind RestartToUEFICommand}"
                    ToolTipService.ToolTip="Restart into UEFI settings.">
                    <StackPanel Spacing="16">
                        <FontIcon
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Glyph="&#xE9F5;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="UEFI Settings" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Row="1"
                    Grid.Column="3"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind RestartToRecoveryCommand}"
                    ToolTipService.ToolTip="Restart into the Windows recovery environment.">
                    <StackPanel Spacing="16">
                        <FontIcon
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Glyph="&#xE67A;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Recovery" />
                    </StackPanel>
                </Button>

                <Button
                    Grid.Row="1"
                    Grid.Column="4"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{x:Bind CancelCommand}"
                    ToolTipService.ToolTip="Exit this screen.">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Escape" />
                    </Button.KeyboardAccelerators>
                    <StackPanel Spacing="16">
                        <FontIcon
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Glyph="&#xE733;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Cancel" />
                    </StackPanel>
                </Button>
            </Grid>
            <Grid
                Grid.Row="3"
                Margin="0,32,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Visibility="{x:Bind ViewModel.IsWindowsServerPanelVisible, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <muxc:InfoBar
                    Title="Windows Server"
                    Grid.ColumnSpan="3"
                    Margin="16,16,16,0"
                    IsClosable="False"
                    IsOpen="True"
                    Message="Please specify a reason for the requested action." />

                <ComboBox
                    Grid.Row="2"
                    Margin="16,12,0,0"
                    HorizontalAlignment="Stretch"
                    SelectedIndex="{x:Bind ViewModel.OperationReason, Mode=TwoWay}">
                    <ComboBoxItem Content="Other" />
                    <ComboBoxItem Content="Maintenance" />
                    <ComboBoxItem Content="Software Update" />
                    <ComboBoxItem Content="Hardware Upgrade" />
                    <ComboBoxItem Content="Power Issue" />
                    <ComboBoxItem Content="System Crash" />
                </ComboBox>

                <ComboBox
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="0,12,16,0"
                    HorizontalAlignment="Stretch"
                    SelectedIndex="{x:Bind ViewModel.OperationMode, Mode=TwoWay}">
                    <ComboBoxItem Content="Planned" />
                    <ComboBoxItem Content="Unplanned" />
                    <ComboBoxItem Content="User Requested" />
                    <ComboBoxItem Content="Automated" />
                </ComboBox>
            </Grid>
            <Grid
                Grid.Row="4"
                Margin="0,48,0,0"
                HorizontalAlignment="Center">
                <muxc:PersonPicture
                    Width="56"
                    HorizontalAlignment="Left"
                    ProfilePicture="{x:Bind UserPicture, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.ShowUserInfo, Mode=OneWay}" />
                <TextBlock
                    Margin="72,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="{x:Bind local:ShutdownViewModel.CurrentUser, Mode=OneWay}"
                    TextWrapping="WrapWholeWords"
                    Visibility="{x:Bind ViewModel.ShowUserInfo, Mode=OneWay}" />
            </Grid>
        </Grid>
    </Grid>
</Page>