<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.Shell.Run.RunWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rebound.Shell.Run"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="24" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="4" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.ColumnSpan="9"
            Margin="12,8,12,0"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Spacing="8">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="12"
                Text="Run" />
            <Border
                Padding="6,2,6,3"
                VerticalAlignment="Center"
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                CornerRadius="2"
                Visibility="Collapsed">
                <TextBlock
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                    Text="BETA" />
            </Border>
        </StackPanel>
        <Image
            Grid.Row="2"
            Grid.Column="1"
            Width="64"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Assets/RunBox.ico" />
        <AutoSuggestBox
            x:Name="InputBox"
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            AutoMaximizeSuggestionArea="False"
            Header="Type the name of a program, file, or URL."
            ItemsSource="{x:Bind ViewModel.RunHistory, Mode=OneWay}"
            KeyDown="InputBox_KeyDown"
            QuerySubmitted="InputBox_QuerySubmitted"
            SuggestionChosen="InputBox_SuggestionChosen"
            Text="{x:Bind ViewModel.Path, Mode=TwoWay}"
            TextChanged="InputBox_TextChanged"
            Loaded="InputBox_Loaded">
            <AutoSuggestBox.QueryIcon>
                <FontIcon FontSize="12" Glyph="&#xE64D;" />
            </AutoSuggestBox.QueryIcon>
        </AutoSuggestBox>
        <Button
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="5"
            Margin="0,68,0,0"
            Padding="8"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderBrush="Transparent">
            <FontIcon FontSize="16" Glyph="&#xE712;" />
            <Button.Flyout>
                <MenuFlyout>
                    <MenuFlyoutItem Command="{x:Bind DeleteHistoryCommand}" Text="Delete history">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE74D;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </Button.Flyout>
        </Button>
        <CheckBox
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="5"
            Margin="0,68,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <TextBlock
                Margin="0,2,0,0"
                VerticalAlignment="Center"
                Text="Run as administrator" />
        </CheckBox>
        <Grid
            Grid.Row="3"
            Grid.ColumnSpan="9"
            Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}" />

        <Button
            x:Name="RunButton"
            Grid.Row="3"
            Grid.Column="3"
            HorizontalAlignment="Stretch"
            Command="{x:Bind RunCommand}"
            CommandParameter="{x:Bind ViewModel.RunAsAdmin, Mode=OneWay}"
            Content="Run"
            IsEnabled="{x:Bind ViewModel.IsRunButtonEnabled, Mode=OneWay}"
            Style="{ThemeResource AccentButtonStyle}" />
        <Button
            Grid.Row="3"
            Grid.Column="5"
            HorizontalAlignment="Stretch"
            Command="{x:Bind CancelCommand}"
            Content="Cancel">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Escape" />
            </Button.KeyboardAccelerators>
        </Button>
        <Button
            Grid.Row="3"
            Grid.Column="7"
            HorizontalAlignment="Stretch"
            Command="{x:Bind BrowseCommand}"
            Content="Browse">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="B" Modifiers="Menu" />
            </Button.KeyboardAccelerators>
        </Button>
    </Grid>
</Page>