<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.Cleanup.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:appEnvironment="using:Rebound.Helpers.AppEnvironment"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="using:Rebound.Cleanup.Items"
    xmlns:local="using:Rebound.Cleanup.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:winuiex="using:WinUIEx"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BoolToObjectConverter
            x:Key="BoolToInverseVisibilityConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
    </Page.Resources>
    <Grid>
        <StackPanel
            Margin="12,8,12,0"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Spacing="8">
            <Image Width="16" Source="/Assets/cleanmgr.ico" />
            <TextBlock FontSize="12" Text="Disk Cleanup" />
            <Border
                Padding="6,2,6,3"
                VerticalAlignment="Center"
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                CornerRadius="2">
                <TextBlock
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                    Text="BETA" />
            </Border>
        </StackPanel>
        <Grid
            Margin="0,32,0,0"
            RowSpacing="8"
            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToInverseVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <toolkit:Segmented Margin="16,0" Style="{StaticResource PivotSegmentedStyle}">
                <toolkit:SegmentedItem
                    x:Name="DiskCleanupItem"
                    Content="Disk Cleanup"
                    IsSelected="True" />
                <toolkit:SegmentedItem
                    x:Name="MoreOptionsItem"
                    Content="More Options"
                    Visibility="{x:Bind ViewModel.IsRunningAsAdmin}" />
            </toolkit:Segmented>
            <Grid
                Grid.Row="1"
                RowSpacing="8"
                Visibility="{x:Bind DiskCleanupItem.IsSelected, Mode=OneWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ComboBox
                    Margin="24,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    ItemsSource="{x:Bind ViewModel.ComboBoxItems, Mode=OneWay}"
                    SelectedIndex="0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="items:DriveComboBoxItem">
                            <Grid>
                                <ImageIcon
                                    Width="20"
                                    Margin="-2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Source="{x:Bind ImagePath, Mode=OneWay}" />
                                <TextBlock
                                    Margin="24,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind DriveName, Mode=OneWay}" />
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <InfoBar
                    Title="Hover over an item for a description."
                    Grid.Row="1"
                    Margin="24,0"
                    IsClosable="False"
                    IsOpen="True" />
                <ListView
                    Grid.Row="2"
                    Margin="24,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    CornerRadius="4"
                    ItemsSource="{x:Bind ViewModel.CleanItems, Mode=OneWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="items:CleanItem">
                            <Grid ToolTipService.ToolTip="{x:Bind Description, Mode=OneWay}">
                                <CheckBox
                                    Width="24"
                                    Margin="0,0,-90,0"
                                    IsChecked="{x:Bind IsChecked, Mode=TwoWay}" />
                                <ImageIcon
                                    Width="20"
                                    Margin="28,0,0,0"
                                    HorizontalAlignment="Left"
                                    Source="{x:Bind ImagePath, Mode=OneWay}" />
                                <TextBlock
                                    Margin="56,0,64,0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind Name, Mode=OneWay}"
                                    TextWrapping="WrapWholeWords" />
                                <TextBlock
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Opacity="0.5"
                                    Text="{x:Bind DisplaySize, Mode=OneWay}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid Grid.Row="3" Margin="24,0">
                    <TextBlock Opacity="0.5" Text="0 files" />
                    <TextBlock
                        HorizontalAlignment="Right"
                        Opacity="0.5"
                        Text="0 B" />
                </Grid>
                <StackPanel
                    Grid.Row="4"
                    Margin="24,4,24,8"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{x:Bind ViewModel.RelaunchAsAdminCommand}"
                        Visibility="{x:Bind ViewModel.IsRunningAsAdmin, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ImageIcon Width="16" Source="ms-appx:///Assets/Administrator.png" />
                            <TextBlock Text="Clean up system files" />
                        </StackPanel>
                    </Button>
                    <Button Background="Transparent" BorderBrush="Transparent">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xE838;" />
                            <TextBlock Text="View files" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <Grid
                    Grid.Row="5"
                    Height="80"
                    Padding="24"
                    Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button
                        HorizontalAlignment="Stretch"
                        Content="Clean"
                        Style="{ThemeResource AccentButtonStyle}" />
                    <Button
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        Content="Cancel">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Escape" />
                        </Button.KeyboardAccelerators>
                    </Button>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" Visibility="{x:Bind MoreOptionsItem.IsSelected, Mode=OneWay}">
                <StackPanel Margin="24,0" Spacing="8">
                    <toolkit:SettingsCard
                        Description="Remove all but the latest restore point and all shadow copies."
                        Header="Delete shadow copies"
                        IsClickEnabled="True">
                        <toolkit:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xED62;" />
                        </toolkit:SettingsCard.HeaderIcon>
                        <toolkit:SettingsCard.ActionIcon>
                            <FontIcon />
                        </toolkit:SettingsCard.ActionIcon>
                    </toolkit:SettingsCard>
                    <toolkit:SettingsCard
                        Description="Remove programs you no longer need."
                        Header="Programs and features"
                        IsClickEnabled="True">
                        <toolkit:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE74C;" />
                        </toolkit:SettingsCard.HeaderIcon>
                        <toolkit:SettingsCard.ActionIcon>
                            <FontIcon Glyph="&#xE8A7;" />
                        </toolkit:SettingsCard.ActionIcon>
                    </toolkit:SettingsCard>
                    <toolkit:SettingsCard
                        Description="Defragment or trim your drives to speed them up."
                        Header="Optimize drives"
                        IsClickEnabled="True">
                        <toolkit:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE621;" />
                        </toolkit:SettingsCard.HeaderIcon>
                        <toolkit:SettingsCard.ActionIcon>
                            <FontIcon Glyph="&#xE8A7;" />
                        </toolkit:SettingsCard.ActionIcon>
                    </toolkit:SettingsCard>
                </StackPanel>
                <Grid
                    Grid.Row="5"
                    Height="80"
                    Padding="24"
                    VerticalAlignment="Bottom"
                    Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        Content="OK"
                        Style="{ThemeResource AccentButtonStyle}">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Escape" />
                        </Button.KeyboardAccelerators>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <Grid Margin="0,32,0,0" Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
            <ProgressRing
                Width="32"
                Height="32"
                IsIndeterminate="True" />
        </Grid>
    </Grid>
</Page>