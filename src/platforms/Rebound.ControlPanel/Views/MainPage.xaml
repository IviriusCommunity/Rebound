<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.ControlPanel.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rebound.ControlPanel.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid ColumnSpacing="8" RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Column="1"
            Padding="8"
            Background="Transparent"
            BorderBrush="Transparent">
            <FontIcon FontSize="16" Glyph="&#xE72B;" />
        </Button>
        <Button
            Grid.Column="2"
            Padding="8"
            Background="Transparent"
            BorderBrush="Transparent">
            <FontIcon FontSize="16" Glyph="&#xE72A;" />
        </Button>
        <Button
            Grid.Column="3"
            Padding="8"
            Background="Transparent"
            BorderBrush="Transparent">
            <FontIcon FontSize="16" Glyph="&#xE74A;" />
        </Button>
        <Button
            Grid.Column="4"
            Padding="8"
            Background="Transparent"
            BorderBrush="Transparent">
            <FontIcon FontSize="16" Glyph="&#xE72C;" />
        </Button>
        <Grid Grid.Column="5">
            <StackPanel
                Padding="2"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Orientation="Horizontal">
                <Button
                    Padding="2"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock
                            Margin="4,0"
                            VerticalAlignment="Center"
                            Text="Control Panel" />
                        <Button
                            Padding="4"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <FontIcon
                                FontSize="12"
                                Glyph="&#xE76C;"
                                Opacity="0.5" />
                        </Button>
                    </StackPanel>
                </Button>
            </StackPanel>
            <FontIcon
                Margin="16,0"
                HorizontalAlignment="Right"
                FontSize="12"
                Glyph="&#xE70D;"
                Opacity="0.5" />
        </Grid>
        <AutoSuggestBox Grid.Column="6" PlaceholderText="Search" VerticalContentAlignment="Center" BorderBrush="{ThemeResource ControlElevationBorderBrush}">
            <AutoSuggestBox.QueryIcon>
                <FontIcon
                    FontSize="12"
                    Glyph="&#xE721;"
                    Opacity="0.5" />
            </AutoSuggestBox.QueryIcon>
        </AutoSuggestBox>
        <Frame
            x:Name="RootFrame"
            Grid.Row="1"
            Grid.ColumnSpan="8" />
    </Grid>
</Page>
