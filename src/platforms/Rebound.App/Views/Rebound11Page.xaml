<Page
    x:Class="Rebound.Views.Rebound11Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SettingsControls="using:CommunityToolkit.WinUI.Controls"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:header="using:WinUIGallery.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Rebound.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BoolToObjectConverter x:Key="BoolToReverseVisibilityConverter" FalseValue="Visible" TrueValue="Collapsed" />
    </Page.Resources>
    <ScrollViewer CornerRadius="8,0,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="350" />
                <RowDefinition Height="60" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <header:HomePageHeaderImage
                x:Name="BKGImage"
                Height="350"
                MinWidth="100"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Image="{ThemeResource HeroBackgroundBitmapImage}"
                Opacity="0.8" />

            <Grid
                x:Name="TitleGrid"
                Height="185"
                Margin="48,0,0,0"
                VerticalAlignment="Top">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Width="100"
                        HorizontalAlignment="Left"
                        Source="/Assets/AppIcons/ReboundIcon.ico" />

                    <StackPanel Grid.Column="2">
                        <TextBlock Style="{StaticResource TitleLargeTextBlockStyle}" Text="Rebound" />
                        <TextBlock
                            FontSize="18"
                            Text="Windows 11 made consistent. Featuring WinUI 3 apps for your everyday tasks."
                            TextWrapping="WrapWholeWords" />
                    </StackPanel>
                </Grid>
            </Grid>

            <ScrollViewer
                Grid.RowSpan="2"
                Padding="48,0"
                VerticalAlignment="Bottom"
                CanContentRenderOutsideBounds="True"
                HorizontalScrollBarVisibility="Hidden"
                HorizontalScrollMode="Enabled"
                VerticalScrollBarVisibility="Hidden"
                VerticalScrollMode="Disabled">
                <StackPanel
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    Spacing="15">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{ThemeResource SystemControlAcrylicElementBrush}" />
                            <Setter Property="BackgroundSizing" Value="InnerBorderEdge" />
                            <Setter Property="Foreground" Value="{ThemeResource ButtonForeground}" />
                            <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}" />
                            <Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}" />
                            <Setter Property="Padding" Value="{StaticResource ButtonPadding}" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
                            <Setter Property="FontWeight" Value="Normal" />
                            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
                            <Setter Property="UseSystemFocusVisuals" Value="{StaticResource UseSystemFocusVisuals}" />
                            <Setter Property="FocusVisualMargin" Value="-3" />
                            <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter
                                            xmlns:local="using:Microsoft.UI.Xaml.Controls"
                                            x:Name="ContentPresenter"
                                            Padding="{TemplateBinding Padding}"
                                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                            local:AnimatedIcon.State="Normal"
                                            AutomationProperties.AccessibilityView="Raw"
                                            Background="{TemplateBinding Background}"
                                            BackgroundSizing="{TemplateBinding BackgroundSizing}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            ContentTransitions="{TemplateBinding ContentTransitions}"
                                            CornerRadius="{TemplateBinding CornerRadius}"
                                            Foreground="{TemplateBinding Foreground}">
                                            <ContentPresenter.BackgroundTransition>
                                                <BrushTransition Duration="0:0:0.083" />
                                            </ContentPresenter.BackgroundTransition>

                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal" />

                                                    <VisualState x:Name="PointerOver">

                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlAcrylicElementMediumHighBrush}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBorderBrushPointerOver}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonForegroundPointerOver}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>

                                                    <VisualState x:Name="Pressed">

                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlAcrylicWindowMediumHighBrush}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBorderBrushPressed}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonForegroundPressed}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>

                                                    <VisualState x:Name="Disabled">

                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SolidBackgroundFillColorBase}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBorderBrushDisabled}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonForegroundDisabled}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>

                                                </VisualStateGroup>

                                            </VisualStateManager.VisualStateGroups>
                                        </ContentPresenter>

                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>
                    <Button
                        Width="225"
                        Height="225"
                        HorizontalContentAlignment="Stretch"
                        CornerRadius="8">
                        <StackPanel
                            Margin="10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top">
                            <Image
                                Width="75"
                                Height="75"
                                HorizontalAlignment="Left"
                                Source="ms-appx:///AppRT/Exported/imageres_149.ico" />
                            <TextBlock
                                Margin="0,15,0,0"
                                FontSize="20"
                                Text="Get Started" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="11"
                                Opacity="0.7"
                                Text="See a short guide on how to install and use Rebound 11.&#x0a;"
                                TextWrapping="WrapWholeWords" />
                            <FontIcon
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"
                                FontSize="15"
                                Glyph="" />
                        </StackPanel>
                        <interactivity:Interaction.Behaviors>
                            <interactivity:EventTriggerBehavior EventName="Click">
                                <behaviors:NavigateToUriAction NavigateUri="https://www.youtube.com/watch?v=tJ8AnfZP4EU" />
                            </interactivity:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                    </Button>
                    <Button
                        Width="225"
                        Height="225"
                        HorizontalContentAlignment="Stretch"
                        CornerRadius="8">
                        <StackPanel
                            Margin="10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top">
                            <Image
                                Width="75"
                                Height="75"
                                HorizontalAlignment="Left"
                                Source="/Assets/AppIcons/logo-winui.png" />
                            <TextBlock
                                Margin="0,15,0,0"
                                FontSize="20"
                                Text="WinUI 3 apps" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="11"
                                Opacity="0.7"
                                Text="Rebound 11 uses WinUI 3 apps instead of .msstyles files to make Windows 11 truly consistent."
                                TextWrapping="WrapWholeWords" />
                            <FontIcon
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"
                                FontSize="15"
                                Glyph=""
                                Opacity="0" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="225"
                        Height="225"
                        HorizontalContentAlignment="Stretch"
                        CornerRadius="8">
                        <StackPanel
                            Margin="10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top">
                            <FontIcon
                                Width="75"
                                Height="75"
                                HorizontalAlignment="Left"
                                FontSize="60"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                Glyph="" />
                            <TextBlock
                                Margin="0,15,0,0"
                                FontSize="20"
                                Text="Windows updates" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="11"
                                Opacity="0.7"
                                Text="Rebound 11 does not block Windows updates.&#x0a;"
                                TextWrapping="WrapWholeWords" />
                            <FontIcon
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"
                                FontSize="15"
                                Glyph=""
                                Opacity="0" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="225"
                        Height="225"
                        HorizontalContentAlignment="Stretch"
                        CornerRadius="8">
                        <StackPanel
                            Margin="10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top">
                            <Grid>
                                <FontIcon
                                    Width="75"
                                    Height="75"
                                    HorizontalAlignment="Left"
                                    FontSize="60"
                                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                    Glyph="" />
                                <TextBlock
                                    Margin="0,0,105,0"
                                    HorizontalAlignment="Right"
                                    FontSize="25"
                                    Text="✨" />
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    FontSize="25"
                                    Text="✨" />
                            </Grid>
                            <TextBlock
                                Margin="0,15,0,0"
                                FontSize="20"
                                Text="Rebound 11 updates" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="11"
                                Opacity="0.7"
                                Text="All Rebound 11 updates are done through the Rebound Hub.&#x0a;"
                                TextWrapping="WrapWholeWords" />
                            <FontIcon
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"
                                FontSize="15"
                                Glyph=""
                                Opacity="0" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="225"
                        Height="225"
                        HorizontalContentAlignment="Stretch"
                        CornerRadius="8">
                        <StackPanel
                            Margin="10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top">
                            <BitmapIcon
                                Width="75"
                                Height="75"
                                HorizontalAlignment="Left"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                UriSource="/Assets/AppIcons/GitHub_Invertocat_Logo.svg.png" />
                            <TextBlock
                                Margin="0,15,0,0"
                                FontSize="20"
                                Text="GitHub" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="11"
                                Opacity="0.7"
                                Text="See the project details on GitHub.&#x0a;&#x0a; "
                                TextWrapping="WrapWholeWords" />
                            <FontIcon
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"
                                FontSize="15"
                                Glyph="" />
                        </StackPanel>
                        <interactivity:Interaction.Behaviors>
                            <interactivity:EventTriggerBehavior EventName="Click">
                                <behaviors:NavigateToUriAction NavigateUri="https://github.com/IviriusCommunity/Rebound" />
                            </interactivity:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                    </Button>
                </StackPanel>
            </ScrollViewer>

            <controls:StaggeredPanel
                Grid.Row="6"
                Margin="48"
                HorizontalAlignment="Left"
                ColumnSpacing="8"
                DesiredColumnWidth="400"
                RowSpacing="8">
                <Grid
                    Width="400"
                    Padding="12"
                    HorizontalAlignment="Left"
                    Background="{ThemeResource CardBackgroundFillColorDefault}"
                    BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.RowSpan="3"
                        Padding="4"
                        VerticalAlignment="Center"
                        Background="{ThemeResource ControlOnImageFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <Image
                            Width="64"
                            Height="64"
                            Source="/Assets/AppIcons/Rebound.ico" />
                    </Border>
                    <TextBlock
                        Grid.Column="2"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="About Windows"
                        TextWrapping="WrapWholeWords" />
                    <StackPanel
                        Grid.Column="4"
                        Margin="0,-4,0,0"
                        Orientation="Horizontal"
                        Spacing="8">
                        <ToggleSwitch
                            Margin="0,-2,-108,-2"
                            IsOn="{x:Bind WinverInstructions.IsInstalled, Mode=TwoWay}"
                            OffContent=""
                            OnContent="" />
                    </StackPanel>
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        Grid.ColumnSpan="3"
                        Margin="0,-44,0,0"
                        Text="The About Windows applet, also known as winver."
                        TextWrapping="WrapWholeWords" />
                    <InfoBar
                        Title="This will do the following:"
                        Grid.Row="4"
                        Grid.ColumnSpan="5"
                        IsClosable="False"
                        IsOpen="True"
                        Message="- Redirect app launch&#x0a;- Install Rebound About" />
                    <InfoBar
                        Margin="0, 8, 0, 0"
                        Title="This mod is corrupted and needs to be repaired."
                        Grid.Row="5"
                        Grid.ColumnSpan="5"
                        IsClosable="False"
                        IsOpen="True"
                        Visibility="{x:Bind WinverInstructions.IsIntact, Mode=OneWay, Converter={StaticResource BoolToReverseVisibilityConverter}}"
                        Severity="Error">
                        <InfoBar.ActionButton>
                            <Button
                                Command="{x:Bind WinverInstructions.RepairCommand}"
                                Content="Repair" />
                        </InfoBar.ActionButton>
                    </InfoBar>
                </Grid>
                <Grid
                    Width="400"
                    Padding="12"
                    HorizontalAlignment="Left"
                    Background="{ThemeResource CardBackgroundFillColorDefault}"
                    BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.RowSpan="3"
                        Padding="4"
                        VerticalAlignment="Center"
                        Background="{ThemeResource ControlOnImageFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <Image
                            Width="64"
                            Height="64"
                            Source="/Assets/AppIcons/rosk_130.ico" />
                    </Border>
                    <TextBlock
                        Grid.Column="2"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="On-screen Keyboard"
                        TextWrapping="WrapWholeWords" />
                    <StackPanel
                        Grid.Column="4"
                        Margin="0,-4,0,0"
                        Orientation="Horizontal"
                        Spacing="8">
                        <ToggleSwitch
                            Margin="0,-2,-108,-2"
                            IsOn="{x:Bind OnScreenKeyboardInstructions.IsInstalled, Mode=TwoWay}"
                            OffContent=""
                            OnContent="" />
                    </StackPanel>
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        Grid.ColumnSpan="3"
                        Margin="0,-44,0,0"
                        Text="The classic On-screen Keyboard."
                        TextWrapping="WrapWholeWords" />
                    <InfoBar
                        Title="This will do the following:"
                        Grid.Row="4"
                        Grid.ColumnSpan="5"
                        IsClosable="False"
                        IsOpen="True"
                        Message="Redirect app launch" />
                    <InfoBar
                        Margin="0, 8, 0, 0"
                        Title="This mod is corrupted and needs to be repaired."
                        Grid.Row="5"
                        Grid.ColumnSpan="5"
                        IsClosable="False"
                        IsOpen="True"
                        Visibility="{x:Bind OnScreenKeyboardInstructions.IsIntact, Mode=OneWay, Converter={StaticResource BoolToReverseVisibilityConverter}}"
                        Severity="Error">
                        <InfoBar.ActionButton>
                            <Button
                                Command="{x:Bind OnScreenKeyboardInstructions.RepairCommand}"
                                Content="Repair" />
                        </InfoBar.ActionButton>
                    </InfoBar>
                </Grid>
            </controls:StaggeredPanel>
        </Grid>
    </ScrollViewer>

</Page>