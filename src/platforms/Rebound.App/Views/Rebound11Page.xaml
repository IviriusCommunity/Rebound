<Page
    x:Class="Rebound.Views.Rebound11Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SettingsControls="using:CommunityToolkit.WinUI.Controls"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:header="using:WinUIGallery.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Rebound.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modding="using:Rebound.Modding"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BoolToObjectConverter
            x:Key="BoolToReverseVisibilityConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
        <converters:BoolToObjectConverter
            x:Key="BoolToOpacityConverter"
            FalseValue="0.5"
            TrueValue="1" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>
    <ScrollViewer CornerRadius="8,0,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="350" />
                <RowDefinition Height="60" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <header:HomePageHeaderImage
                x:Name="BKGImage"
                Height="350"
                MinWidth="100"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Image="{ThemeResource HeroBackgroundBitmapImage}"
                Opacity="0.8" />

            <Grid
                x:Name="TitleGrid"
                Height="185"
                Margin="48,0,0,0"
                VerticalAlignment="Top">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Width="100"
                        HorizontalAlignment="Left"
                        Source="/Assets/AppIcons/ReboundIcon.ico" />

                    <StackPanel Grid.Column="2">
                        <TextBlock Style="{StaticResource TitleLargeTextBlockStyle}" Text="Rebound" />
                        <TextBlock
                            FontSize="18"
                            Text="Windows 11 made consistent. Featuring WinUI 3 apps for your everyday tasks."
                            TextWrapping="WrapWholeWords" />
                    </StackPanel>
                </Grid>
            </Grid>

            <ScrollViewer
                Grid.RowSpan="2"
                Padding="48,0"
                VerticalAlignment="Bottom"
                CanContentRenderOutsideBounds="True"
                HorizontalScrollBarVisibility="Hidden"
                HorizontalScrollMode="Enabled"
                VerticalScrollBarVisibility="Hidden"
                VerticalScrollMode="Disabled">
                <ItemsRepeater ItemsSource="{x:Bind LinkCards}">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Horizontal" Spacing="16" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="local:LinkCard">
                            <Grid Background="{ThemeResource AcrylicInAppFillColorBaseBrush}" CornerRadius="6">
                                <Button
                                    Background="Transparent"
                                    Width="240"
                                    Height="220"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"
                                    Click="OnCardClick"
                                    CornerRadius="6">
                                    <Grid>
                                        <StackPanel
                                            Margin="8,16"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Top">
                                            <Grid
                                                Width="72"
                                                Height="72"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top">
                                                <Image
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Source="{x:Bind IconPath}" />
                                            </Grid>
                                            <TextBlock
                                                Margin="0,16,0,0"
                                                FontSize="20"
                                                Text="{x:Bind Title}" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="11"
                                                Opacity="0.7"
                                                Text="{x:Bind Description}"
                                                TextWrapping="WrapWholeWords" />
                                        </StackPanel>
                                        <FontIcon
                                            Margin="8,12"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            FontSize="15"
                                            Glyph="î¢§" />
                                    </Grid>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>

            <Grid
                Grid.Row="3"
                Margin="48,12"
                Padding="8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="6">
                <CommandBar DefaultLabelPosition="Right">
                    <AppBarButton IsEnabled="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay}" Label="Templates">
                        <AppBarButton.Icon>
                            <FontIcon FontSize="16" Glyph="&#xF158;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton IsEnabled="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay}" Label="Update or Repair all">
                        <AppBarButton.Icon>
                            <FontIcon FontSize="16" Glyph="&#xE777;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>
                <StackPanel
                    Margin="8,0"
                    Orientation="Horizontal"
                    Spacing="4">
                    <Button
                        Command="{x:Bind ReboundViewModel.EnableReboundCommand}"
                        Content="Enable Rebound"
                        Style="{ThemeResource AccentButtonStyle}"
                        Visibility="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay, Converter={StaticResource BoolToReverseVisibilityConverter}}" />
                    <Button
                        Command="{x:Bind ReboundViewModel.DisableReboundCommand}"
                        Content="Disable Rebound"
                        Visibility="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>
            </Grid>

            <ItemsRepeater
                Grid.Row="4"
                Margin="48,12"
                HorizontalAlignment="Left"
                ItemsSource="{x:Bind ReboundViewModel.Instructions, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <controls:StaggeredLayout
                        ColumnSpacing="8"
                        DesiredColumnWidth="400"
                        RowSpacing="8" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="modding:UserInterfaceReboundAppInstructions">
                        <Grid
                            Width="400"
                            Padding="12"
                            HorizontalAlignment="Left"
                            Background="{ThemeResource CardBackgroundFillColorDefault}"
                            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid
                                Grid.RowSpan="3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                                <Image
                                    Width="64"
                                    Height="64"
                                    Source="{x:Bind Icon}"
                                    Stretch="Fill" />
                                <Border Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}" CornerRadius="4">
                                    <Image
                                        Width="48"
                                        Height="48"
                                        Margin="8"
                                        Source="{x:Bind Icon}" />
                                </Border>
                            </Grid>
                            <TextBlock
                                Grid.Column="2"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="{x:Bind Name, Mode=OneWay}"
                                TextWrapping="WrapWholeWords" />
                            <StackPanel
                                Grid.Column="4"
                                Margin="0,-4,0,0"
                                Orientation="Horizontal"
                                Spacing="8">
                                <ToggleSwitch
                                    Margin="0,-2,-108,-2"
                                    IsEnabled="{Binding ReboundViewModel.IsReboundEnabled, Mode=OneWay}"
                                    IsOn="{x:Bind IsInstalled, Mode=TwoWay}"
                                    OffContent=""
                                    OnContent="" />
                            </StackPanel>
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="2"
                                Grid.ColumnSpan="3"
                                Margin="0,-36,0,0"
                                FontSize="12"
                                Opacity="0.5"
                                Text="{x:Bind Description, Mode=OneWay}"
                                TextWrapping="WrapWholeWords" />
                            <InfoBar
                                Title="This will do the following:"
                                Grid.Row="4"
                                Grid.ColumnSpan="5"
                                IsClosable="False"
                                IsOpen="True"
                                Message="{x:Bind InstallationSteps, Mode=OneWay}" />
                            <InfoBar
                                Title="This mod is corrupted and needs to be repaired."
                                Grid.Row="5"
                                Grid.ColumnSpan="5"
                                Margin="0,8,0,0"
                                IsClosable="False"
                                IsOpen="True"
                                Severity="Error"
                                Visibility="{x:Bind IsIntact, Mode=OneWay, Converter={StaticResource BoolToReverseVisibilityConverter}}">
                                <InfoBar.ActionButton>
                                    <Button
                                        Command="{x:Bind RepairCommand}"
                                        Content="Repair"
                                        IsEnabled="{Binding ReboundViewModel.IsReboundEnabled, Mode=OneWay}" />
                                </InfoBar.ActionButton>
                            </InfoBar>
                        </Grid>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </Grid>
    </ScrollViewer>

</Page>