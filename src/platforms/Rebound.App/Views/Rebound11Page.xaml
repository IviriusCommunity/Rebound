<Page
    x:Class="Rebound.Views.Rebound11Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SettingsControls="using:CommunityToolkit.WinUI.Controls"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:header="using:WinUIGallery.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Rebound.Views"
    xmlns:forge="using:Rebound.Forge"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ReboundView"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BoolToObjectConverter
            x:Key="BoolToReverseVisibilityConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
        <converters:BoolToObjectConverter
            x:Key="BoolToOpacityConverter"
            FalseValue="0.5"
            TrueValue="1" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>
    <ScrollViewer CornerRadius="8,0,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="350" />
                <RowDefinition Height="60" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <header:HomePageHeaderImage
                x:Name="BKGImage"
                Height="350"
                MinWidth="100"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Image="{ThemeResource HeroBackgroundBitmapImage}"
                Opacity="0.8" />

            <Grid
                x:Name="TitleGrid"
                Height="185"
                Margin="48,0,0,0"
                VerticalAlignment="Top">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Width="100"
                        HorizontalAlignment="Left"
                        Source="/Assets/AppIcons/ReboundIcon.ico" />

                    <StackPanel Grid.Column="2">
                        <TextBlock Style="{StaticResource TitleLargeTextBlockStyle}" Text="Rebound">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                                    <GradientStop Color="#a1e0fb" />
                                    <GradientStop Offset="1" Color="#147cd0" />
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock
                            FontSize="18"
                            Text="Windows 11 made consistent. Featuring WinUI 3 apps for your everyday tasks."
                            TextWrapping="WrapWholeWords" />
                    </StackPanel>
                </Grid>
            </Grid>

            <ScrollViewer
                Grid.RowSpan="2"
                Padding="48,0"
                VerticalAlignment="Bottom"
                CanContentRenderOutsideBounds="True"
                HorizontalScrollBarVisibility="Hidden"
                HorizontalScrollMode="Enabled"
                VerticalScrollBarVisibility="Hidden"
                VerticalScrollMode="Disabled">
                <ItemsRepeater ItemsSource="{x:Bind LinkCards}">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Horizontal" Spacing="16" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="local:LinkCard">
                            <Grid Background="{ThemeResource AcrylicInAppFillColorBaseBrush}" CornerRadius="6">
                                <Button
                                    Width="240"
                                    Height="220"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"
                                    Background="Transparent"
                                    Click="OnCardClick"
                                    CornerRadius="6">
                                    <Grid>
                                        <StackPanel
                                            Margin="8,16"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Top">
                                            <Grid
                                                Width="72"
                                                Height="72"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top">
                                                <Image
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Source="{x:Bind IconPath}" />
                                            </Grid>
                                            <TextBlock
                                                Margin="0,16,0,0"
                                                FontSize="20"
                                                Text="{x:Bind Title}" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="11"
                                                Opacity="0.7"
                                                Text="{x:Bind Description}"
                                                TextWrapping="WrapWholeWords" />
                                        </StackPanel>
                                        <FontIcon
                                            Margin="8,12"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            FontSize="15"
                                            Glyph="î¢§" />
                                    </Grid>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>

            <Grid Grid.Row="3" Margin="48,16,48,8">
                <CommandBar DefaultLabelPosition="Right">
                    <AppBarButton IsEnabled="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay}" Label="Options">
                        <AppBarButton.Icon>
                            <FontIcon FontSize="16" Glyph="&#xE713;" />
                        </AppBarButton.Icon>
                        <AppBarButton.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutSubItem Text="Rebound Shell">
                                    <MenuFlyoutSubItem.Icon>
                                        <ImageIcon Source="/Assets/AppIcons/ReboundIcon.ico" />
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutSubItem.Items>
                                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ReboundViewModel.InstallRun, Mode=TwoWay}" Text="Run">
                                            <ToggleMenuFlyoutItem.Icon>
                                                <ImageIcon Source="/Assets/AppIcons/RunBox.ico" />
                                            </ToggleMenuFlyoutItem.Icon>
                                        </ToggleMenuFlyoutItem>
                                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ReboundViewModel.InstallShutdownDialog, Mode=TwoWay}" Text="Shutdown dialog">
                                            <ToggleMenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE7E8;" />
                                            </ToggleMenuFlyoutItem.Icon>
                                        </ToggleMenuFlyoutItem>
                                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ReboundViewModel.InstallThisAppCantRunOnYourPC, Mode=TwoWay}" Text="&quot;This app can't run on your PC&quot; dialog">
                                            <ToggleMenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xEA39;" />
                                            </ToggleMenuFlyoutItem.Icon>
                                        </ToggleMenuFlyoutItem>
                                    </MenuFlyoutSubItem.Items>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSeparator />
                                <ToggleMenuFlyoutItem IsChecked="{x:Bind ReboundViewModel.InstallShortcuts, Mode=TwoWay}" Text="Create new shortcuts for Rebound apps">
                                    <ToggleMenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE8AD;" />
                                    </ToggleMenuFlyoutItem.Icon>
                                </ToggleMenuFlyoutItem>
                            </MenuFlyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>
                    <AppBarButton
                        Command="{x:Bind ReboundViewModel.UpdateOrRepairAllCommand}"
                        IsEnabled="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay}"
                        Label="Repair">
                        <AppBarButton.Icon>
                            <FontIcon FontSize="16" Glyph="&#xE90F;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>
                <ToggleSwitch
                    IsOn="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=TwoWay}"
                    OffContent="Enable Rebound"
                    OnContent="Disable Rebound" />
            </Grid>

            <InfoBar
                Title="A new update is available for Rebound"
                Grid.Row="4"
                Margin="48,0"
                IsOpen="{x:Bind ReboundViewModel.IsUpdateAvailable, Mode=OneWay}"
                Message="{x:Bind ReboundViewModel.VersionText, Mode=OneWay}"
                Severity="Success">
                <InfoBar.ActionButton>
                    <Button
                        HorizontalAlignment="Right"
                        Command="{x:Bind ReboundViewModel.UpdateOrRepairAllCommand}"
                        Content="Update"
                        Style="{StaticResource AccentButtonStyle}" />
                </InfoBar.ActionButton>
            </InfoBar>
            <TextBlock Grid.Row="5" Margin="48, 0" FontWeight="SemiBold" FontSize="20" Text="Mandatory"/>
            <Grid Grid.Row="6" Padding="48,16,48,16">
                <ContentControl IsEnabled="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay}">
                    <ItemsRepeater ItemsSource="{x:Bind forge:ReboundTotalInstructions.MandatoryInstructions}">
                        <ItemsRepeater.Layout>
                            <controls:StaggeredLayout
                                ColumnSpacing="8"
                                DesiredColumnWidth="400"
                                ItemsStretch="Fill"
                                RowSpacing="8" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="forge:ReboundAppInstructions">
                                <Grid
                                    Padding="12"
                                    HorizontalAlignment="Stretch"
                                    Background="{ThemeResource CardBackgroundFillColorDefault}"
                                    BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="16" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="16" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top">
                                        <Image
                                            Width="56"
                                            Height="56"
                                            Margin="4"
                                            Source="{x:Bind Icon}"
                                            Stretch="Fill" />
                                        <Border Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}" CornerRadius="4">
                                            <Image
                                                Width="48"
                                                Height="48"
                                                Margin="8"
                                                Source="{x:Bind Icon}" />
                                        </Border>
                                    </Grid>
                                    <TextBlock
                                        Grid.Column="2"
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind Name, Mode=OneWay}"
                                        TextWrapping="WrapWholeWords" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        Grid.ColumnSpan="3"
                                        Margin="0,-44,0,8"
                                        FontSize="12"
                                        Opacity="0.5"
                                        Text="{x:Bind Description, Mode=OneWay}"
                                        TextWrapping="WrapWholeWords" />
                                    <InfoBar
                                        Title="This will do the following:"
                                        Grid.Row="4"
                                        Grid.ColumnSpan="5"
                                        IsClosable="False"
                                        IsOpen="True"
                                        Message="{x:Bind InstallationSteps, Mode=OneWay}" />
                                    <InfoBar
                                        Title="This mod is corrupted and needs to be repaired."
                                        Grid.Row="5"
                                        Grid.ColumnSpan="5"
                                        Margin="0,8,0,0"
                                        IsClosable="False"
                                        IsOpen="True"
                                        Severity="Error"
                                        Visibility="{x:Bind IsIntact, Mode=OneWay, Converter={StaticResource BoolToReverseVisibilityConverter}}">
                                        <InfoBar.ActionButton>
                                            <Button Command="{x:Bind RepairCommand}" Content="Repair" />
                                        </InfoBar.ActionButton>
                                    </InfoBar>
                                </Grid>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ContentControl>
            </Grid>
            <TextBlock Grid.Row="7" Margin="48, 0" FontWeight="SemiBold" FontSize="20" Text="Optional"/>
            <Grid Grid.Row="8" Padding="48,16,48,48">
                <ContentControl IsEnabled="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay}">
                    <ItemsRepeater ItemsSource="{x:Bind forge:ReboundTotalInstructions.AppInstructions}">
                        <ItemsRepeater.Layout>
                            <controls:StaggeredLayout
                                ColumnSpacing="8"
                                DesiredColumnWidth="400"
                                ItemsStretch="Fill"
                                RowSpacing="8" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="forge:ReboundAppInstructions">
                                <Grid
                                    Padding="12"
                                    HorizontalAlignment="Stretch"
                                    Background="{ThemeResource CardBackgroundFillColorDefault}"
                                    BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="16" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="16" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid
                                        Grid.RowSpan="3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top">
                                        <Image
                                            Width="56"
                                            Height="56"
                                            Margin="4"
                                            Source="{x:Bind Icon}"
                                            Stretch="Fill" />
                                        <Border Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}" CornerRadius="4">
                                            <Image
                                                Width="48"
                                                Height="48"
                                                Margin="8"
                                                Source="{x:Bind Icon}" />
                                        </Border>
                                    </Grid>
                                    <TextBlock
                                        Grid.Column="2"
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind Name, Mode=OneWay}"
                                        TextWrapping="WrapWholeWords" />
                                    <StackPanel
                                        Grid.Column="4"
                                        Margin="0,-4,0,0"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <ToggleSwitch
                                            Margin="0,-2,-108,-2"
                                            IsOn="{x:Bind IsInstalled, Mode=TwoWay}"
                                            OffContent=""
                                            OnContent="" />
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        Grid.ColumnSpan="3"
                                        Margin="0,-36,0,0"
                                        FontSize="12"
                                        Opacity="0.5"
                                        Text="{x:Bind Description, Mode=OneWay}"
                                        TextWrapping="WrapWholeWords" />
                                    <InfoBar
                                        Title="This will do the following:"
                                        Grid.Row="4"
                                        Grid.ColumnSpan="5"
                                        IsClosable="False"
                                        IsOpen="True"
                                        Message="{x:Bind InstallationSteps, Mode=OneWay}" />
                                    <InfoBar
                                        Title="This mod is corrupted and needs to be repaired."
                                        Grid.Row="5"
                                        Grid.ColumnSpan="5"
                                        Margin="0,8,0,0"
                                        IsClosable="False"
                                        IsOpen="True"
                                        Severity="Error"
                                        Visibility="{x:Bind IsIntact, Mode=OneWay, Converter={StaticResource BoolToReverseVisibilityConverter}}">
                                        <InfoBar.ActionButton>
                                            <Button Command="{x:Bind RepairCommand}" Content="Repair" />
                                        </InfoBar.ActionButton>
                                    </InfoBar>
                                </Grid>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ContentControl>
            </Grid>

        </Grid>
    </ScrollViewer>

</Page>