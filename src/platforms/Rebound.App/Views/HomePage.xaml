<Page
    x:Class="Rebound.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Rebound.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">
    <ScrollViewer CornerRadius="8,0,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="400" />
                <RowDefinition Height="64" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid
                x:Name="TitleGrid"
                Height="200"
                Margin="48,0,0,0"
                VerticalAlignment="Top">
                <Grid VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock
                            FontWeight="SemiBold"
                            Style="{StaticResource TitleLargeTextBlockStyle}"
                            Text="This is Ivirius Community." />
                        <TextBlock
                            FontSize="18"
                            Text="We made apps and tools for you to have the best experience with Windows 11."
                            TextWrapping="WrapWholeWords" />
                    </StackPanel>
                </Grid>
            </Grid>

            <ScrollViewer
                Grid.RowSpan="2"
                Margin="0,0,0,32"
                Padding="48,0"
                VerticalAlignment="Bottom"
                CanContentRenderOutsideBounds="True"
                HorizontalScrollBarVisibility="Hidden"
                HorizontalScrollMode="Enabled"
                VerticalScrollBarVisibility="Hidden"
                VerticalScrollMode="Disabled">
                <muxc:ItemsRepeater ItemsSource="{x:Bind LinkCards}">
                    <muxc:ItemsRepeater.Layout>
                        <muxc:StackLayout Orientation="Horizontal" Spacing="16" />
                    </muxc:ItemsRepeater.Layout>
                    <muxc:ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="local:LinkCard">
                            <Grid CornerRadius="6">
                                <Button
                                    Width="240"
                                    Height="220"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"
                                    Background="Transparent"
                                    CornerRadius="8">
                                    <interactivity:Interaction.Behaviors>
                                        <interactivity:EventTriggerBehavior EventName="Tapped">
                                            <behaviors:NavigateToUriAction NavigateUri="{x:Bind Link}" />
                                        </interactivity:EventTriggerBehavior>
                                    </interactivity:Interaction.Behaviors>
                                    <Grid>
                                        <StackPanel
                                            Margin="8,16"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Top">
                                            <Grid
                                                Width="64"
                                                Height="64"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top">
                                                <Image
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Source="{x:Bind IconPath}" />
                                            </Grid>
                                            <TextBlock
                                                Margin="0,16,0,0"
                                                FontSize="20"
                                                Text="{x:Bind Title}" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="11"
                                                Opacity="0.7"
                                                Text="{x:Bind Description}"
                                                TextWrapping="WrapWholeWords" />
                                        </StackPanel>
                                        <FontIcon
                                            Margin="8,12"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            FontSize="15"
                                            Glyph="î¢§" />
                                    </Grid>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </muxc:ItemsRepeater.ItemTemplate>
                </muxc:ItemsRepeater>
            </ScrollViewer>

            <TextBlock
                Grid.Row="2"
                Margin="48,0,0,24"
                FontSize="28"
                Style="{ThemeResource SubtitleTextBlockStyle}"
                Text="3rd Party Fluent Apps" />

            <muxc:ItemsRepeater
                Grid.Row="3"
                Margin="48,0,48,48"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ItemsSource="{x:Bind AppCards}">
                <muxc:ItemsRepeater.Layout>
                    <controls:WrapLayout HorizontalSpacing="8" VerticalSpacing="8" />
                </muxc:ItemsRepeater.Layout>
                <muxc:ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="local:AppCard">
                        <Button
                            Width="320"
                            Padding="12"
                            HorizontalContentAlignment="Stretch">
                            <Grid ColumnSpacing="8" RowSpacing="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid
                                    Grid.RowSpan="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top">
                                    <Grid
                                        Width="64"
                                        Height="64"
                                        Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                        CornerRadius="4">
                                        <Image
                                            Width="60"
                                            Height="60"
                                            Source="{x:Bind IconPath}"
                                            Stretch="Fill" />
                                        <Border CornerRadius="4">
                                            <Border.Background>
                                                <media:AcrylicBrush
                                                    BlurAmount="8"
                                                    TintColor="{ThemeResource SolidBackgroundFillColorBase}"
                                                    TintOpacity="0.5" />
                                            </Border.Background>
                                            <Image
                                                Width="48"
                                                Height="48"
                                                Margin="8"
                                                Source="{x:Bind IconPath}" />
                                        </Border>
                                    </Grid>
                                </Grid>
                                <TextBlock
                                    Grid.Column="1"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind Title}"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,-12,0,0"
                                    FontSize="12"
                                    Opacity="0.5"
                                    Text="{x:Bind Description}"
                                    TextWrapping="Wrap" />
                                <StackPanel
                                    Grid.Row="2"
                                    Grid.ColumnSpan="2"
                                    Padding="8,2"
                                    HorizontalAlignment="Left"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource AccentButtonBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="9"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <TextBlock
                                        FontSize="10"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                        Text="{x:Bind Publisher}" />
                                </StackPanel>
                                <Grid
                                    Grid.Row="3"
                                    Grid.ColumnSpan="2"
                                    Height="160"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    CornerRadius="4">
                                    <Image
                                        Margin="4"
                                        Source="{x:Bind PicturePath}"
                                        Stretch="Fill" />
                                    <Border>
                                        <Image
                                            Margin="16"
                                            Source="{x:Bind PicturePath}"
                                            Stretch="Uniform" />
                                    </Border>
                                </Grid>
                            </Grid>
                            <interactivity:Interaction.Behaviors>
                                <interactivity:EventTriggerBehavior EventName="Click">
                                    <behaviors:NavigateToUriAction NavigateUri="{x:Bind Link}" />
                                </interactivity:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </Button>
                    </DataTemplate>
                </muxc:ItemsRepeater.ItemTemplate>
            </muxc:ItemsRepeater>
        </Grid>
    </ScrollViewer>
</Page>