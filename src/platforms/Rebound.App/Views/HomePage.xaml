<Page
    x:Class="Rebound.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:header="using:WinUIGallery.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Rebound.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    mc:Ignorable="d">
    <ScrollViewer CornerRadius="8,0,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="350" />
                <RowDefinition Height="60" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <header:HomePageHeaderImage
                x:Name="BKGImage"
                Height="350"
                MinWidth="100"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Image="{ThemeResource HeroBackgroundBitmapImage}" />

            <Grid
                x:Name="TitleGrid"
                Height="185"
                Margin="48,0,0,0"
                VerticalAlignment="Top">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Width="100"
                        HorizontalAlignment="Left"
                        Source="/Assets/AppIcons/IviriusCommunityIcon.png" />

                    <StackPanel Grid.Column="2">
                        <TextBlock Style="{ThemeResource TitleLargeTextBlockStyle}" Text="This is Ivirius Community." />
                        <TextBlock
                            FontSize="18"
                            Text="We made apps and tools for you to have the best experience with Windows 11."
                            TextWrapping="WrapWholeWords" />
                    </StackPanel>
                </Grid>
            </Grid>

            <ScrollViewer
                Grid.RowSpan="2"
                Padding="48,0"
                VerticalAlignment="Bottom"
                CanContentRenderOutsideBounds="True"
                HorizontalScrollBarVisibility="Hidden"
                HorizontalScrollMode="Enabled"
                VerticalScrollBarVisibility="Hidden"
                VerticalScrollMode="Disabled">
                <ItemsRepeater ItemsSource="{x:Bind LinkCards}">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Horizontal" Spacing="16" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="local:LinkCard">
                            <Grid Background="{ThemeResource AcrylicInAppFillColorBaseBrush}" CornerRadius="6">
                                <Button
                                    Background="Transparent"
                                    Width="240"
                                    Height="220"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"
                                    Click="OnCardClick"
                                    CornerRadius="6">
                                    <Grid>
                                        <StackPanel
                                            Margin="8,16"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Top">
                                            <Grid
                                                Width="72"
                                                Height="72"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top">
                                                <Image
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Source="{x:Bind IconPath}" />
                                            </Grid>
                                            <TextBlock
                                                Margin="0,16,0,0"
                                                FontSize="20"
                                                Text="{x:Bind Title}" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="11"
                                                Opacity="0.7"
                                                Text="{x:Bind Description}"
                                                TextWrapping="WrapWholeWords" />
                                        </StackPanel>
                                        <FontIcon
                                            Margin="8,12"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            FontSize="15"
                                            Glyph="î¢§" />
                                    </Grid>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>

            <TextBlock
                Grid.Row="2"
                Margin="48,32,0,24"
                FontSize="28"
                Style="{ThemeResource SubtitleTextBlockStyle}"
                Text="Rebound apps" />

            <ItemsRepeater
                Grid.Row="3"
                Margin="48,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ItemsSource="{x:Bind AppCards}">
                <ItemsRepeater.Layout>
                    <controls:WrapLayout HorizontalSpacing="8" VerticalSpacing="8" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="local:AppCard">
                        <Button
                            Width="320"
                            Padding="12"
                            HorizontalContentAlignment="Stretch">
                            <Grid>
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Image
                                        Width="64"
                                        Height="64"
                                        Source="{x:Bind IconPath}"
                                        Stretch="Fill" />
                                    <Border Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}" CornerRadius="4">
                                        <Image
                                            Width="48"
                                            Height="48"
                                            Margin="8"
                                            Source="{x:Bind IconPath}" />
                                    </Border>
                                </Grid>
                                <TextBlock
                                    Margin="76,0,0,0"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind Title}" />
                                <TextBlock
                                    Margin="76,24,0,0"
                                    FontSize="12"
                                    Opacity="0.5"
                                    Text="{x:Bind Description}"
                                    TextWrapping="Wrap" />
                                <Grid
                                    Height="160"
                                    Margin="0,80,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    CornerRadius="4">
                                    <Image Source="{x:Bind PicturePath}" Stretch="Fill" Margin="4" />
                                    <Border Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}">
                                        <Image
                                            Margin="16"
                                            Source="{x:Bind PicturePath}"
                                            Stretch="Uniform" />
                                    </Border>
                                </Grid>
                            </Grid>
                            <interactivity:Interaction.Behaviors>
                                <interactivity:EventTriggerBehavior EventName="Click">
                                    <behaviors:NavigateToUriAction NavigateUri="{x:Bind Link}" />
                                </interactivity:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </Button>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </Grid>
    </ScrollViewer>
</Page>