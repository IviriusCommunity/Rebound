<Page
    x:Class="Rebound.Views.ReboundPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SettingsControls="using:CommunityToolkit.WinUI.Controls"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:forge="using:Rebound.Forge"
    xmlns:gallery="using:WinUIGallery.Controls"
    xmlns:helpers="using:Rebound.Core.Helpers.Environment"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Rebound.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    x:Name="ReboundView"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="RepairButtonBackgroundBrush" Color="#ba6000" />
                    <SolidColorBrush x:Key="RepairButtonBackgroundPointerOverBrush" Color="#cc7110" />
                    <SolidColorBrush x:Key="RepairButtonBackgroundPressedBrush" Color="#ad5a00" />
                    <ImageSource x:Key="HeroImage">/Assets/Backgrounds/WallpaperLight.png</ImageSource>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="RepairButtonBackgroundBrush" Color="#ffa600" />
                    <SolidColorBrush x:Key="RepairButtonBackgroundPointerOverBrush" Color="#ffad42" />
                    <SolidColorBrush x:Key="RepairButtonBackgroundPressedBrush" Color="#de9b45" />
                    <ImageSource x:Key="HeroImage">/Assets/Backgrounds/WallpaperDark.png</ImageSource>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <Style x:Key="RepairButtonStyle" TargetType="Button">
                <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}" />
                <Setter Property="Background" Value="{ThemeResource RepairButtonBackgroundBrush}" />
                <Setter Property="BackgroundSizing" Value="OuterBorderEdge" />
                <Setter Property="BorderBrush" Value="{ThemeResource AccentButtonBorderBrush}" />
                <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter
                                x:Name="ContentPresenter"
                                Padding="{TemplateBinding Padding}"
                                HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                AutomationProperties.AccessibilityView="Raw"
                                Background="{TemplateBinding Background}"
                                BackgroundSizing="{TemplateBinding BackgroundSizing}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                ContentTransitions="{TemplateBinding ContentTransitions}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Foreground="{TemplateBinding Foreground}">
                                <ContentPresenter.BackgroundTransition>
                                    <BrushTransition Duration="0:0:0.083" />
                                </ContentPresenter.BackgroundTransition>

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />

                                        <VisualState x:Name="PointerOver">

                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource RepairButtonBackgroundPointerOverBrush}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBorderBrushPointerOver}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonForegroundPointerOver}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>

                                        <VisualState x:Name="Pressed">

                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource RepairButtonBackgroundPressedBrush}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBorderBrushPressed}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonForegroundPressed}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>

                                        <VisualState x:Name="Disabled">

                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBackgroundDisabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBorderBrushDisabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonForegroundDisabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>

                                    </VisualStateGroup>

                                </VisualStateManager.VisualStateGroups>
                            </ContentPresenter>

                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <converters:BoolToObjectConverter
                x:Key="BoolToReverseVisibilityConverter"
                FalseValue="Visible"
                TrueValue="Collapsed" />
            <converters:BoolToObjectConverter x:Key="BoolToReboundEnabledConverter">
                <converters:BoolToObjectConverter.TrueValue>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <FontIcon
                            HorizontalAlignment="Left"
                            FontSize="16"
                            Glyph="&#xEC61;" />
                        <StackPanel Margin="24,0,0,0" Spacing="0">
                            <TextBlock Text="Rebound is enabled!" />
                            <TextBlock
                                FontSize="10"
                                Opacity="0.5"
                                Text="Press to disable Rebound and turn off all mods." />
                        </StackPanel>
                        <Border
                            Grid.Column="1"
                            Width="1"
                            Margin="12,-9"
                            Background="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                        <StackPanel Grid.Column="2" Spacing="0">
                            <TextBlock Text="Hub version:" />
                            <TextBlock
                                FontSize="10"
                                Opacity="0.5"
                                Text="{x:Bind helpers:ReboundVersion.REBOUND_VERSION, Mode=OneWay}" />
                        </StackPanel>
                    </Grid>
                </converters:BoolToObjectConverter.TrueValue>
                <converters:BoolToObjectConverter.FalseValue>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <FontIcon
                            HorizontalAlignment="Left"
                            FontFamily="Segoe UI Emoji"
                            FontSize="16"
                            Glyph="ðŸ™" />
                        <StackPanel Margin="32,0,0,0" Spacing="0">
                            <TextBlock Text="Rebound is not enabled." />
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <Border
                                    Width="12"
                                    Height="12"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    CornerRadius="32">
                                    <Border
                                        Width="4"
                                        Height="4"
                                        Background="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                        CornerRadius="32" />
                                </Border>
                                <TextBlock
                                    FontSize="10"
                                    FontWeight="SemiBold"
                                    Text="Press here to enable Rebound!" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </converters:BoolToObjectConverter.FalseValue>
            </converters:BoolToObjectConverter>
            <converters:BoolToObjectConverter
                x:Key="BoolToOpacityConverter"
                FalseValue="0.5"
                TrueValue="1" />
            <converters:BoolToObjectConverter
                x:Key="BoolNegationConverter"
                FalseValue="True"
                TrueValue="False" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <ScrollViewer CornerRadius="8,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="Row1" Height="400" />
                    <RowDefinition x:Name="Row2" Height="64" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <gallery:HomePageHeaderImage x:Name="BKGImage" Image="{ThemeResource HeroImage}" />

                <Grid
                    x:Name="TitleGrid"
                    Height="200"
                    Margin="48,0,0,0"
                    VerticalAlignment="Top">
                    <Grid VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock
                                FontWeight="SemiBold"
                                Style="{StaticResource TitleLargeTextBlockStyle}"
                                Text="Rebound" />
                            <TextBlock
                                FontSize="18"
                                Text="Windows 11 made consistent. Featuring WinUI 3 apps for your everyday tasks."
                                TextWrapping="WrapWholeWords" />
                        </StackPanel>
                    </Grid>
                </Grid>

                <ScrollViewer
                    x:Name="CardsScrollViewer"
                    Grid.RowSpan="2"
                    Margin="0,0,0,32"
                    Padding="48,0"
                    VerticalAlignment="Bottom"
                    CanContentRenderOutsideBounds="True"
                    HorizontalScrollBarVisibility="Hidden"
                    HorizontalScrollMode="Enabled"
                    VerticalScrollBarVisibility="Hidden"
                    VerticalScrollMode="Disabled">
                    <ItemsControl ItemsSource="{x:Bind LinkCards}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <controls:WrapPanel HorizontalSpacing="16" VerticalSpacing="16" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="local:LinkCard">
                                <Grid CornerRadius="6">
                                    <Grid.Background>
                                        <media:AcrylicBrush BlurAmount="16" TintColor="{ThemeResource SolidBackgroundFillColorBase}" />
                                    </Grid.Background>
                                    <Button
                                        Width="240"
                                        Height="220"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        Background="Transparent"
                                        CornerRadius="8">
                                        <interactivity:Interaction.Behaviors>
                                            <interactivity:EventTriggerBehavior EventName="Tapped">
                                                <behaviors:NavigateToUriAction NavigateUri="{x:Bind Link}" />
                                            </interactivity:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                        <Grid>
                                            <StackPanel
                                                Margin="8,16"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Top">
                                                <Grid
                                                    Width="64"
                                                    Height="64"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top">
                                                    <Image
                                                        HorizontalAlignment="Stretch"
                                                        VerticalAlignment="Stretch"
                                                        Source="{x:Bind IconPath}" />
                                                </Grid>
                                                <TextBlock
                                                    Margin="0,16,0,0"
                                                    FontSize="20"
                                                    Text="{x:Bind Title}" />
                                                <TextBlock
                                                    Margin="0,5,0,0"
                                                    FontSize="11"
                                                    Opacity="0.7"
                                                    Text="{x:Bind Description}"
                                                    TextWrapping="WrapWholeWords" />
                                            </StackPanel>
                                            <FontIcon
                                                Margin="8,12"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                FontSize="15"
                                                Glyph="î¢§" />
                                        </Grid>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Grid
                    Grid.Row="3"
                    Margin="48,16,48,8"
                    HorizontalAlignment="Stretch"
                    ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ToggleButton
                        Padding="12,8"
                        Content="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay, Converter={StaticResource BoolToReboundEnabledConverter}}"
                        IsChecked="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=TwoWay}"
                        IsThreeState="False" />
                    <Button
                        Grid.Column="1"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{x:Bind ReboundViewModel.UpdateOrRepairAllCommand}"
                        IsEnabled="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xE90F;" />
                            <TextBlock Text="Repair" />
                        </StackPanel>
                    </Button>
                    <Button
                        Grid.Column="2"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        IsEnabled="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xE713;" />
                            <TextBlock Text="Options" />
                        </StackPanel>
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutSubItem Text="Control Panel">
                                    <MenuFlyoutSubItem.Icon>
                                        <muxc:ImageIcon Source="/Assets/ReboundApps/ControlPanel.ico" />
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutSubItem.Items>
                                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ReboundViewModel.InstallWindowsTools, Mode=TwoWay}" Text="Windows Tools">
                                            <ToggleMenuFlyoutItem.Icon>
                                                <muxc:ImageIcon Source="/Assets/Glyphs/WindowsTools.ico" />
                                            </ToggleMenuFlyoutItem.Icon>
                                        </ToggleMenuFlyoutItem>
                                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ReboundViewModel.InstallAppwiz, Mode=TwoWay}" Text="appwiz.cpl">
                                            <ToggleMenuFlyoutItem.Icon>
                                                <muxc:ImageIcon Source="/Assets/Glyphs/Programs.ico" />
                                            </ToggleMenuFlyoutItem.Icon>
                                        </ToggleMenuFlyoutItem>
                                    </MenuFlyoutSubItem.Items>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSubItem Text="Rebound Shell">
                                    <MenuFlyoutSubItem.Icon>
                                        <muxc:ImageIcon Source="/Assets/ReboundApps/Shell.ico" />
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutSubItem.Items>
                                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ReboundViewModel.InstallRun, Mode=TwoWay}" Text="Run">
                                            <ToggleMenuFlyoutItem.Icon>
                                                <muxc:ImageIcon Source="/Assets/Glyphs/RunBox.ico" />
                                            </ToggleMenuFlyoutItem.Icon>
                                        </ToggleMenuFlyoutItem>
                                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ReboundViewModel.InstallShutdownDialog, Mode=TwoWay}" Text="Shutdown dialog">
                                            <ToggleMenuFlyoutItem.Icon>
                                                <muxc:ImageIcon Source="/Assets/Glyphs/Shutdown.ico" />
                                            </ToggleMenuFlyoutItem.Icon>
                                        </ToggleMenuFlyoutItem>
                                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ReboundViewModel.InstallThisAppCantRunOnYourPC, Mode=TwoWay}" Text="&quot;This app can't run on your PC&quot; dialog">
                                            <ToggleMenuFlyoutItem.Icon>
                                                <muxc:ImageIcon Source="/Assets/Glyphs/Error.ico" />
                                            </ToggleMenuFlyoutItem.Icon>
                                        </ToggleMenuFlyoutItem>
                                    </MenuFlyoutSubItem.Items>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSeparator />
                                <ToggleMenuFlyoutItem IsChecked="{x:Bind ReboundViewModel.InstallShortcuts, Mode=TwoWay}" Text="Create new shortcuts for Rebound apps">
                                    <ToggleMenuFlyoutItem.Icon>
                                        <muxc:ImageIcon Source="/Assets/Glyphs/Shortcut.ico" />
                                    </ToggleMenuFlyoutItem.Icon>
                                </ToggleMenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </Grid>

                <TextBlock
                    Grid.Row="5"
                    Margin="48,16,48,0"
                    HorizontalAlignment="Stretch"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Mandatory" />

                <Grid
                    Grid.Row="6"
                    Margin="48,16"
                    HorizontalAlignment="Stretch">
                    <ContentControl HorizontalContentAlignment="Stretch" IsEnabled="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay}">
                        <ItemsControl ItemsSource="{x:Bind forge:Catalog.MandatoryMods}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <controls:WrapPanel HorizontalSpacing="8" VerticalSpacing="8" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="forge:Mod">
                                    <Grid
                                        Width="480"
                                        Padding="12"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource CardBackgroundFillColorDefault}"
                                        BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="16" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="16" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Icon shadow  -->
                                        <Border
                                            Grid.RowSpan="2"
                                            Width="64"
                                            Height="64"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top">
                                            <ui:Effects.Shadow>
                                                <media:AttachedCardShadow
                                                    BlurRadius="12"
                                                    Opacity="0.3"
                                                    Offset="0, 4"
                                                    Color="Black" />
                                            </ui:Effects.Shadow>
                                        </Border>

                                        <!--  Icon  -->
                                        <Grid
                                            Grid.RowSpan="2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top">
                                            <Grid
                                                Width="64"
                                                Height="64"
                                                Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                                CornerRadius="4">
                                                <Image
                                                    Margin="-8"
                                                    Source="{x:Bind Icon}"
                                                    Stretch="Fill" />
                                                <Grid
                                                    BorderBrush="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                                    BorderThickness="2"
                                                    CornerRadius="3" />
                                            </Grid>
                                            <Border CornerRadius="4">
                                                <Border.Background>
                                                    <media:AcrylicBrush
                                                        BlurAmount="8"
                                                        TintColor="{ThemeResource SolidBackgroundFillColorBase}"
                                                        TintOpacity="0.7" />
                                                </Border.Background>
                                                <Image
                                                    Width="48"
                                                    Height="48"
                                                    Margin="8"
                                                    Source="{x:Bind Icon}" />
                                            </Border>
                                        </Grid>

                                        <!--  Name  -->
                                        <TextBlock
                                            Grid.Column="2"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind Name, Mode=OneWay}"
                                            TextWrapping="WrapWholeWords" />

                                        <!--  Description  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Margin="0,8,0,0"
                                            FontSize="12"
                                            Opacity="0.5"
                                            Text="{x:Bind Description, Mode=OneWay}"
                                            TextWrapping="WrapWholeWords" />

                                        <!--  Buttons grid  -->
                                        <Grid
                                            Grid.Row="3"
                                            Grid.ColumnSpan="5"
                                            Margin="0,16,0,0"
                                            ColumnSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Button HorizontalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon FontSize="16" Glyph="&#xE946;" />
                                                    <TextBlock Text="View info" />
                                                </StackPanel>
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <StackPanel Spacing="8">
                                                            <TextBlock FontWeight="SemiBold" Text="This will do the following:" />
                                                            <TextBlock Text="{x:Bind InstallationSteps, Mode=OneWay}" />
                                                        </StackPanel>
                                                    </Flyout>
                                                </Button.Flyout>
                                            </Button>
                                            <Button
                                                Grid.Column="1"
                                                HorizontalAlignment="Stretch"
                                                ToolTipService.ToolTip="This mod is corrupted and needs to be repaired."
                                                Visibility="{x:Bind IsIntact, Mode=OneWay, Converter={StaticResource BoolToReverseVisibilityConverter}}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <Grid
                                                        Width="16"
                                                        Height="16"
                                                        Background="{ThemeResource SystemFillColorCriticalBrush}"
                                                        CornerRadius="16" />
                                                    <FontIcon FontSize="16" Glyph="&#xE90F;" />
                                                    <TextBlock Text="Repair" />
                                                </StackPanel>
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <StackPanel Spacing="8">
                                                            <TextBlock FontWeight="SemiBold" Text="This will do the following:" />
                                                            <TextBlock Text="{x:Bind InstallationSteps, Mode=OneWay}" />
                                                        </StackPanel>
                                                    </Flyout>
                                                </Button.Flyout>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ContentControl>
                </Grid>

                <TextBlock
                    Grid.Row="7"
                    Margin="48,0"
                    HorizontalAlignment="Stretch"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Optional" />
                <Grid
                    Grid.Row="8"
                    Margin="48,16,48,48"
                    HorizontalAlignment="Stretch">
                    <ContentControl HorizontalContentAlignment="Stretch" IsEnabled="{x:Bind ReboundViewModel.IsReboundEnabled, Mode=OneWay}">
                        <ItemsControl ItemsSource="{x:Bind forge:Catalog.Mods, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <controls:WrapPanel HorizontalSpacing="8" VerticalSpacing="8" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="forge:Mod">
                                    <Grid
                                        Width="320"
                                        Padding="12"
                                        HorizontalAlignment="Stretch"
                                        Background="{ThemeResource CardBackgroundFillColorDefault}"
                                        BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="16" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="16" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Icon shadow  -->
                                        <Border
                                            Grid.RowSpan="2"
                                            Width="48"
                                            Height="48"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top">
                                            <ui:Effects.Shadow>
                                                <media:AttachedCardShadow
                                                    BlurRadius="12"
                                                    Opacity="0.3"
                                                    Offset="0, 4"
                                                    Color="Black" />
                                            </ui:Effects.Shadow>
                                        </Border>

                                        <!--  Icon  -->
                                        <Grid
                                            Grid.RowSpan="2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top">
                                            <Grid
                                                Width="48"
                                                Height="48"
                                                Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                                CornerRadius="4">
                                                <Image
                                                    Margin="-8"
                                                    Source="{x:Bind Icon, Mode=OneWay}"
                                                    Stretch="Fill" />
                                                <Grid
                                                    BorderBrush="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                                    BorderThickness="2"
                                                    CornerRadius="3" />
                                            </Grid>
                                            <Border CornerRadius="4">
                                                <Border.Background>
                                                    <media:AcrylicBrush
                                                        BlurAmount="8"
                                                        TintColor="{ThemeResource SolidBackgroundFillColorBase}"
                                                        TintOpacity="0.7" />
                                                </Border.Background>
                                                <Image
                                                    Width="32"
                                                    Height="32"
                                                    Margin="8"
                                                    Source="{x:Bind Icon, Mode=OneWay}" />
                                            </Border>
                                        </Grid>

                                        <!--  Name  -->
                                        <TextBlock
                                            Grid.Column="2"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind Name, Mode=OneWay}"
                                            TextWrapping="WrapWholeWords" />

                                        <!--  Description  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Grid.ColumnSpan="3"
                                            Margin="0,0,0,16"
                                            FontSize="12"
                                            Opacity="0.5"
                                            Text="{x:Bind Description, Mode=OneWay}"
                                            TextWrapping="WrapWholeWords" />

                                        <!--  Buttons grid  -->
                                        <Grid
                                            Grid.Row="2"
                                            Grid.ColumnSpan="5"
                                            ColumnSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Button
                                                Padding="8"
                                                HorizontalAlignment="Left"
                                                Background="Transparent"
                                                BorderBrush="Transparent">
                                                <FontIcon FontSize="16" Glyph="&#xE946;" />
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <StackPanel Spacing="8" MaxWidth="240">
                                                            <TextBlock FontWeight="SemiBold" Text="This will do the following:" />
                                                            <TextBlock Text="{x:Bind InstallationSteps, Mode=OneWay}" TextWrapping="WrapWholeWords" />
                                                        </StackPanel>
                                                    </Flyout>
                                                </Button.Flyout>
                                            </Button>
                                            <Button
                                                Grid.Column="1"
                                                Padding="8"
                                                Background="Transparent"
                                                BorderBrush="Transparent">
                                                <FontIcon FontSize="16" Glyph="&#xE712;" />
                                                <Button.Flyout>
                                                    <MenuFlyout>
                                                        <MenuFlyoutItem
                                                            Command="{x:Bind InstallCommand}"
                                                            IsEnabled="{x:Bind IsInstalled, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                                                            Text="Install">
                                                            <MenuFlyoutItem.Icon>
                                                                <FontIcon Glyph="&#xE896;" />
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem
                                                            Command="{x:Bind UninstallCommand}"
                                                            IsEnabled="{x:Bind IsInstalled, Mode=OneWay}"
                                                            Text="Uninstall">
                                                            <MenuFlyoutItem.Icon>
                                                                <FontIcon Glyph="&#xE74D;" />
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem
                                                            Command="{x:Bind RepairCommand}"
                                                            IsEnabled="{x:Bind IsIntact, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                                                            Text="Repair">
                                                            <MenuFlyoutItem.Icon>
                                                                <FontIcon Glyph="&#xE90F;" />
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem
                                                            Command="{x:Bind OpenCommand}"
                                                            IsEnabled="{x:Bind IsInstalled, Mode=OneWay}"
                                                            Text="Open">
                                                            <MenuFlyoutItem.Icon>
                                                                <FontIcon Glyph="&#xE8A7;" />
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                    </MenuFlyout>
                                                </Button.Flyout>
                                            </Button>
                                            <Grid
                                                Grid.Column="2"
                                                Padding="8"
                                                Background="Transparent"
                                                HorizontalAlignment="Left"
                                                ToolTipService.ToolTip="This mod is corrupted and needs to be repaired."
                                                Visibility="{x:Bind IsIntact, Mode=OneWay, Converter={StaticResource BoolToReverseVisibilityConverter}}">
                                                <FontIcon
                                                    FontSize="16"
                                                    Foreground="{ThemeResource RepairButtonBackgroundBrush}"
                                                    Glyph="&#xF736;" />
                                            </Grid>
                                            <Grid Grid.Column="3" Visibility="{x:Bind IsIntact, Mode=OneWay}">
                                                <Button
                                                    HorizontalAlignment="Stretch"
                                                    Content="Open"
                                                    Visibility="{x:Bind IsInstalled, Mode=OneWay}" />
                                                <Button
                                                    HorizontalAlignment="Stretch"
                                                    Content="Install"
                                                    Style="{StaticResource AccentButtonStyle}"
                                                    Visibility="{x:Bind IsInstalled, Mode=OneWay, Converter={StaticResource BoolToReverseVisibilityConverter}}" />
                                            </Grid>
                                            <Button
                                                Grid.Column="3"
                                                HorizontalAlignment="Stretch"
                                                Content="Repair"
                                                Style="{StaticResource RepairButtonStyle}"
                                                Visibility="{x:Bind IsIntact, Mode=OneWay, Converter={StaticResource BoolToReverseVisibilityConverter}}" />
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ContentControl>
                </Grid>
            </Grid>
        </ScrollViewer>

        <Grid
            x:Name="UpdateAvailableGrid"
            Width="400"
            Height="144"
            Margin="32"
            Padding="16"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            ColumnSpacing="12"
            CornerRadius="4"
            RowSpacing="8"
            Visibility="{x:Bind ReboundViewModel.IsUpdateAvailable, Mode=OneWay}">
            <Grid.Background>
                <media:AcrylicBrush BlurAmount="16" TintColor="{ThemeResource SolidBackgroundFillColorBase}" />
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <FontIcon
                FontSize="16"
                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                Glyph="&#xF167;" />
            <TextBlock Grid.Column="1" Text="A new update is available for Rebound" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Text="{x:Bind ReboundViewModel.VersionText, Mode=OneWay}"
                TextWrapping="WrapWholeWords" />
            <Button
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Command="{x:Bind ReboundViewModel.UpdateOrRepairAllCommand}"
                Content="Update"
                Style="{StaticResource AccentButtonStyle}" />
        </Grid>
    </Grid>
</Page>