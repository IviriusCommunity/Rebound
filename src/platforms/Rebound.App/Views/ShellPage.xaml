<Page
    x:Class="Rebound.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rebound.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Rebound.Models"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Margin="20,16"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Spacing="8">
            <Image
                Grid.Column="1"
                Width="16"
                VerticalAlignment="Center"
                x:FieldModifier="public"
                Source="/Assets/AppIcons/Rebound.ico" />
            <TextBlock FontSize="12" Text="Rebound Hub" />
            <Border
                Padding="6,2,6,3"
                VerticalAlignment="Center"
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                CornerRadius="2">
                <TextBlock
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                    Text="BETA" />
            </Border>
        </StackPanel>
        <Button x:Name="UpdateButton" Visibility="Collapsed" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="160, 8, 120, 0" Background="Transparent" BorderBrush="Transparent">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon Glyph="&#xE777;" FontSize="16"/>
                <TextBlock Text="A new version of Rebound Hub is available for download"/>
            </StackPanel>
        </Button>
        <NavigationView
            x:Name="NavigationViewControl"
            Margin="0,48,0,0"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            ItemInvoked="Navigate"
            OpenPaneLength="72"
            PaneDisplayMode="Left"
            Style="{ThemeResource CustomNavigationViewStyle}">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    x:Name="HomeItem"
                    Content="Home"
                    Style="{ThemeResource CustomNavigationViewItemStyle}">
                    <NavigationViewItem.Icon>
                        <FontIcon
                            Margin="2"
                            FontSize="12"
                            Glyph="&#xE80F;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="ReboundItem"
                    Content="Rebound"
                    Style="{ThemeResource CustomNavigationViewItemStyle}">
                    <NavigationViewItem.Icon>
                        <ImageIcon Margin="16,8,16,24" Source="ms-appx:///Assets/AppIcons/ReboundIcon.ico" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="RectifyItem"
                    Content="Rectify11"
                    Style="{ThemeResource CustomNavigationViewItemStyle}">
                    <NavigationViewItem.Icon>
                        <ImageIcon Margin="16,8,16,24" Source="ms-appx:///Assets/AppIcons/Rectify11.png" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="PartnersItem"
                    Content="Partners"
                    Style="{ThemeResource CustomNavigationViewItemStyle}">
                    <NavigationViewItem.Icon>
                        <FontIcon
                            Margin="1"
                            FontSize="12"
                            Glyph="&#xF4A5;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem
                    x:Name="FeedbackItem"
                    Content="Feedback"
                    Style="{ThemeResource CustomNavigationViewItemStyle}">
                    <NavigationViewItem.Icon>
                        <FontIcon
                            Margin="2"
                            FontSize="12"
                            Glyph="&#xED15;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
            <NavigationView.Content>
                <Frame
                    x:Name="MainFrame"
                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,1,0,0"
                    CornerRadius="8,0,0,0" />
            </NavigationView.Content>
        </NavigationView>
    </Grid>
</Page>