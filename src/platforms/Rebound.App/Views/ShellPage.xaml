<Page
    x:Class="Rebound.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Rebound.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Rebound.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Margin="20,16"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Spacing="8">
            <Image
                Grid.Column="1"
                Width="16"
                VerticalAlignment="Center"
                x:FieldModifier="public"
                Source="/Assets/AppIcons/Rebound.ico" />
            <TextBlock FontSize="12" Text="Rebound Hub" />
            <Border
                Padding="6,2,6,3"
                VerticalAlignment="Center"
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                CornerRadius="2">
                <TextBlock
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                    Text="BETA" />
            </Border>
        </StackPanel>
        <Button
            x:Name="UpdateButton"
            Margin="160,8,120,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderBrush="Transparent"
            Visibility="Collapsed">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon FontSize="16" Glyph="&#xE777;" />
                <TextBlock Text="A new version of Rebound Hub is available for download" />
            </StackPanel>
        </Button>
        <muxc:NavigationView
            x:Name="NavigationViewControl"
            Margin="0,48,0,0"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            ItemInvoked="Navigate"
            OpenPaneLength="72"
            PaneDisplayMode="Left">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem
                    x:Name="HomeItem"
                    Content="Home">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon Margin="2" Glyph="&#xE80F;" />
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
                <muxc:NavigationViewItem
                    x:Name="ReboundItem"
                    Content="Rebound">
                    <muxc:NavigationViewItem.Icon>
                        <muxc:ImageIcon Width="24" Height="24" Source="ms-appx:///Assets/AppIcons/ReboundIcon24.png" />
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
            </muxc:NavigationView.MenuItems>
            <muxc:NavigationView.FooterMenuItems>
                <muxc:NavigationViewItem
                    x:Name="FeedbackItem"
                    Content="Feedback"
                    SelectsOnInvoked="False">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon Margin="2" Glyph="&#xED15;" />
                    </muxc:NavigationViewItem.Icon>
                    <interactivity:Interaction.Behaviors>
                        <interactivity:EventTriggerBehavior EventName="Tapped">
                            <behaviors:NavigateToUriAction NavigateUri="https://ivirius.com/contact" />
                        </interactivity:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                </muxc:NavigationViewItem>
            </muxc:NavigationView.FooterMenuItems>
            <muxc:NavigationView.Content>
                <Frame
                    x:Name="MainFrame"
                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,1,0,0"
                    CornerRadius="8,0,0,0" />
            </muxc:NavigationView.Content>
        </muxc:NavigationView>
        <Frame
            x:Name="OverlayFrame"
            Margin="0,48,0,0"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            Visibility="Collapsed" />
    </Grid>
</Page>