<?xml version="1.0" encoding="utf-8"?>
<winuiex:WindowEx
    x:Class="Rebound.Shell.Run.RunWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rebound.Shell.Run"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winuiex="using:WinUIEx"
    Closed="WindowEx_Closed"
    Width="380"
    Height="188"
    IsMaximizable="False"
    IsMinimizable="False"
    IsResizable="False"
    mc:Ignorable="d"
    Title="Run">
    <winuiex:WindowEx.SystemBackdrop>
        <MicaBackdrop/>
    </winuiex:WindowEx.SystemBackdrop>
    <Grid>
        <Image Margin="12, 4" Width="48" Source="/Assets/RunBox.ico" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox VerticalAlignment="Top"
                    FontSize="12" HorizontalAlignment="Stretch" Padding="5, 2, 5, 3" MinHeight="0" Margin="80, 4, 12, 0" Header="Type the name of a program, file, or URL."/>
        <CheckBox VerticalAlignment="Top"
                    FontSize="12" HorizontalAlignment="Stretch" Padding="5, 2, 5, 3" MinHeight="0" Margin="80, 60, 12, 0" Content="Run as Administrator"/>
        <Grid
            Padding="16"
            VerticalAlignment="Bottom"
            Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
            <StackPanel
                HorizontalAlignment="Right" Orientation="Horizontal" Spacing="8">
                <Button
                Style="{ThemeResource AccentButtonStyle}"
                    Padding="3, 2, 3, 3"
                    FontSize="12"
                Width="80"
                Content="Run">
                </Button>
                <Button
                    Padding="3, 2, 3, 3"
                    FontSize="12"
                Width="80"
                Content="Browse...">
                </Button>
                <Button
                    Padding="3, 2, 3, 3"
                    FontSize="12"
                Width="80"
                Content="Cancel">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Escape"/>
                    </Button.KeyboardAccelerators>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</winuiex:WindowEx>