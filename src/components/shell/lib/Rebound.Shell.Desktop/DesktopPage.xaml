                                    <FontIcon Glyph="&#xE700;" />
                                </toolkit:SettingsCard.HeaderIcon>
                                <ToggleSwitch IsOn="{x:Bind ViewModel.UseMicaMenus, Mode=TwoWay}" />
                            </toolkit:SettingsCard>
                        </StackPanel>
                    </ScrollViewer>
                    <StackPanel
