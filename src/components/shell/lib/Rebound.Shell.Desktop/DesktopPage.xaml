                BorderThickness="1"
                CornerRadius="4">
                <Border
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    CornerRadius="4"
                    Opacity="0.2" />
            </Border>
        </Grid>
        <Grid
            x:Name="OptionsGrid"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
