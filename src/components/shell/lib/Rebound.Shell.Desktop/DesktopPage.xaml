                                <ToggleSwitch IsOn="{x:Bind ViewModel.IsLivelyCompatibilityEnabled, Mode=TwoWay}" />
                            </toolkit:SettingsCard>
                            <toolkit:SettingsCard Description="Show the clock widget on the desktop." Header="Clock widget">
