<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<!-- Application and library only - These will apply to everything that isn't a source code generator -->
	<PropertyGroup Condition="'$(MSBuildProjectName)' != 'Rebound.Core.SourceGenerator' and '$(MSBuildProjectName)' != 'Rebound.Core.SourceGeneratorAttributes'">

		<!-- Versions -->
		<TargetFramework>net9.0-windows10.0.26100.0</TargetFramework>
		<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>

		<!-- Project type -->
		<UseUwp>true</UseUwp>
		<UseUwpTools>true</UseUwpTools>

		<!-- Advanced -->
		<EnableComInterop>true</EnableComInterop>
		<UseSourceGenerators>true</UseSourceGenerators>
		<DisableRuntimeMarshalling>true</DisableRuntimeMarshalling>
		<EnableMsixTooling>true</EnableMsixTooling>

		<!-- Self-contained settings -->
		<PublishReadyToRun>true</PublishReadyToRun>
		<PublishAot>false</PublishAot>

		<!-- Publishing Settings -->
		<PublishProfile>win-$(Platform).pubxml</PublishProfile>

		<!-- Trimmming -->
		<PublishTrimmed>false</PublishTrimmed>
		<Optimize>true</Optimize>
		<OptimizationPreference>Speed</OptimizationPreference>
		<IlcOptimizationPreference>Speed</IlcOptimizationPreference>

	</PropertyGroup>

	<ItemGroup>

		<!-- Include the application manifest -->
		<Manifest Include="$(ApplicationManifest)" />

	</ItemGroup>
	
	<!-- General project settings - These will apply to every project regardless of its type -->
	<PropertyGroup>
		
		<!-- Code Analysis and Trimming -->
		<AnalysisMode>All</AnalysisMode>
		
		<!-- Language and Code Configuration -->
		<LangVersion>preview</LangVersion>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>

		<!-- Runtime Identifiers and Platform Targeting -->
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
		<Platforms>x64</Platforms>

	</PropertyGroup>

	<ItemGroup>
		<AppxTargetDeviceFamilyItem Include="Windows.Desktop" />
	</ItemGroup>

	<!-- Package references -->
	<ItemGroup Condition="'$(MSBuildProjectName)' != 'Rebound.Core.SourceGenerator' and '$(MSBuildProjectName)' != 'Rebound.Core.SourceGeneratorAttributes'">
		
		<!-- Windows SDK and WinUI -->
		<PackageReference Include="Microsoft.UI.Xaml" Version="2.8.7" />
		<PackageReference Include="Microsoft.Windows.SDK.BuildTools.MSIX" Version="1.7.20250806.1">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Microsoft.WindowsAppSDK.Base" Version="1.8.250509001-experimental" />
		<PackageReference Include="Microsoft.WindowsAppSDK.InteractiveExperiences" Version="1.8.250626001-experimental" />

		<!-- Windows Interop -->
		<PackageReference Include="Dongle.GuidRVAGen" Version="1.0.5" />
		<PackageReference Include="Microsoft.Windows.CsWin32" Version="0.3.183">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="TerraFX.Interop.Windows" Version="10.0.26100" />

		<!-- System and Management -->
		<PackageReference Include="System.Diagnostics.PerformanceCounter" Version="10.0.0-preview.6.25358.103" />
		<PackageReference Include="System.ServiceProcess.ServiceController" Version="10.0.0-preview.5.25277.114" />
		<PackageReference Include="System.IO.Pipes.AccessControl" Version="6.0.0-preview.5.21301.5" />
		<PackageReference Include="OwlCore.Storage" Version="0.12.3" />

		<!-- Task Scheduler -->
		<PackageReference Include="TaskScheduler" Version="2.12.2" />

		<!-- CommunityToolkit WinUI -->
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
		<PackageReference Include="CommunityToolkit.Uwp.Animations" Version="8.2.250402" />
		<PackageReference Include="CommunityToolkit.Uwp.Behaviors" Version="8.2.250402" />
		<PackageReference Include="CommunityToolkit.Uwp.Converters" Version="8.2.250402" />
		<PackageReference Include="CommunityToolkit.Uwp.Controls.Primitives" Version="8.2.250402" />
		<PackageReference Include="CommunityToolkit.Uwp.Controls.Segmented" Version="8.2.250402" />
		<PackageReference Include="CommunityToolkit.Uwp.Controls.SettingsControls" Version="8.2.250402" />
		<PackageReference Include="CommunityToolkit.Uwp.Extensions" Version="8.2.250402" />
		<PackageReference Include="CommunityToolkit.Uwp.Helpers" Version="8.2.250402" />
		<PackageReference Include="CommunityToolkit.Uwp.Media" Version="8.2.250402" />
		<PackageReference Include="CommunityToolkit.Uwp.Triggers" Version="8.2.250402" />

	</ItemGroup>
	
</Project>