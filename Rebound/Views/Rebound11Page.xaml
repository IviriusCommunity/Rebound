<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Rebound.Views.Rebound11Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SettingsControls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ToolkitControls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:header="using:WinUIGallery.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Rebound.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer CornerRadius="8,0,0,0">
        <Grid>
            <header:HomePageHeaderImage
                x:Name="BKGImage"
                Height="350"
                MinWidth="100"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Image="{ThemeResource HeroBackgroundBitmapImage}"
                Opacity="0.8" />
            <StackPanel Margin="75,50,75,50">
                <Grid>
                    <Path Data="M 0 1 C 0 0.5 0.5 0 1 0 L 7 0 L 7 7 L 0 7 M 1 6 M 8 0 L 14 0 C 14.5 0 15 0.5 15 1 L 15 7 L 8 7 M 9 6 M 7 8 L 0 8 L 0 14 C 0 14.5 0.5 15 1 15 L 7 15 M 6 14 M 8 8 L 15 8 L 15 14 C 15 14.5 14.5 15 14 15 L 8 15 M 9 14 M 0 0 L 16 16">
                        <Path.Fill>
                            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Color="{StaticResource SystemAccentColorLight3}" />
                                    <GradientStop Offset="0.5" Color="{StaticResource SystemAccentColorLight1}" />
                                    <GradientStop Offset="1" Color="{StaticResource SystemAccentColorDark1}" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Path.Fill>
                        <Path.RenderTransform>
                            <ScaleTransform ScaleX="6" ScaleY="6" />
                        </Path.RenderTransform>
                    </Path>
                    <TextBlock
                        Margin="115,-5,0,0"
                        Style="{StaticResource TitleLargeTextBlockStyle}"
                        Text="Rebound 11" />
                    <TextBlock
                        Margin="115,55,0,0"
                        FontSize="18"
                        Text="Windows 11 made consistent. Featuring WinUI 3 apps for your everyday tasks."
                        TextWrapping="WrapWholeWords" />
                </Grid>
                <ScrollViewer
                    Margin="0,45,0,25"
                    Padding="0,0,0,15"
                    CanContentRenderOutsideBounds="True"
                    HorizontalScrollBarVisibility="Hidden"
                    HorizontalScrollMode="Enabled"
                    VerticalScrollBarVisibility="Hidden"
                    VerticalScrollMode="Disabled">
                    <StackPanel
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Spacing="15">
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{ThemeResource SystemControlAcrylicElementBrush}" />
                                <Setter Property="BackgroundSizing" Value="InnerBorderEdge" />
                                <Setter Property="Foreground" Value="{ThemeResource ButtonForeground}" />
                                <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}" />
                                <Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}" />
                                <Setter Property="Padding" Value="{StaticResource ButtonPadding}" />
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
                                <Setter Property="FontWeight" Value="Normal" />
                                <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
                                <Setter Property="UseSystemFocusVisuals" Value="{StaticResource UseSystemFocusVisuals}" />
                                <Setter Property="FocusVisualMargin" Value="-3" />
                                <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter
                                                xmlns:local="using:Microsoft.UI.Xaml.Controls"
                                                x:Name="ContentPresenter"
                                                Padding="{TemplateBinding Padding}"
                                                HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                local:AnimatedIcon.State="Normal"
                                                AutomationProperties.AccessibilityView="Raw"
                                                Background="{TemplateBinding Background}"
                                                BackgroundSizing="{TemplateBinding BackgroundSizing}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Content="{TemplateBinding Content}"
                                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                                ContentTransitions="{TemplateBinding ContentTransitions}"
                                                CornerRadius="{TemplateBinding CornerRadius}"
                                                Foreground="{TemplateBinding Foreground}">
                                                <ContentPresenter.BackgroundTransition>
                                                    <BrushTransition Duration="0:0:0.083" />
                                                </ContentPresenter.BackgroundTransition>

                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Normal" />

                                                        <VisualState x:Name="PointerOver">

                                                            <Storyboard>
                                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlAcrylicElementMediumHighBrush}" />
                                                                </ObjectAnimationUsingKeyFrames>
                                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBorderBrushPointerOver}" />
                                                                </ObjectAnimationUsingKeyFrames>
                                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonForegroundPointerOver}" />
                                                                </ObjectAnimationUsingKeyFrames>
                                                            </Storyboard>
                                                        </VisualState>

                                                        <VisualState x:Name="Pressed">

                                                            <Storyboard>
                                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlAcrylicWindowMediumHighBrush}" />
                                                                </ObjectAnimationUsingKeyFrames>
                                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBorderBrushPressed}" />
                                                                </ObjectAnimationUsingKeyFrames>
                                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonForegroundPressed}" />
                                                                </ObjectAnimationUsingKeyFrames>
                                                            </Storyboard>
                                                        </VisualState>

                                                        <VisualState x:Name="Disabled">

                                                            <Storyboard>
                                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SolidBackgroundFillColorBase}" />
                                                                </ObjectAnimationUsingKeyFrames>
                                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBorderBrushDisabled}" />
                                                                </ObjectAnimationUsingKeyFrames>
                                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonForegroundDisabled}" />
                                                                </ObjectAnimationUsingKeyFrames>
                                                            </Storyboard>
                                                        </VisualState>

                                                    </VisualStateGroup>

                                                </VisualStateManager.VisualStateGroups>
                                            </ContentPresenter>

                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </StackPanel.Resources>
                        <Button
                            Width="225"
                            Height="225"
                            HorizontalContentAlignment="Stretch"
                            CornerRadius="8">
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top">
                                <Image
                                    Width="75"
                                    Height="75"
                                    HorizontalAlignment="Left"
                                    Source="ms-appx:///AppRT/Exported/imageres_149.ico" />
                                <TextBlock
                                    Margin="0,15,0,0"
                                    FontSize="20"
                                    Text="Get Started" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    FontSize="11"
                                    Opacity="0.7"
                                    Text="See a short guide on how to install and use Rebound 11.&#x0a;"
                                    TextWrapping="WrapWholeWords" />
                                <FontIcon
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Right"
                                    FontSize="15"
                                    Glyph="" />
                            </StackPanel>
                            <interactivity:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="Click">
                                    <behaviors:NavigateToUriAction NavigateUri="https://www.youtube.com/watch?v=tJ8AnfZP4EU" />
                                </core:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </Button>
                        <Button
                            Width="225"
                            Height="225"
                            HorizontalContentAlignment="Stretch"
                            CornerRadius="8">
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top">
                                <Image
                                    Width="75"
                                    Height="75"
                                    HorizontalAlignment="Left"
                                    Source="/Assets/AppIcons/logo-winui.png" />
                                <TextBlock
                                    Margin="0,15,0,0"
                                    FontSize="20"
                                    Text="WinUI 3 apps" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    FontSize="11"
                                    Opacity="0.7"
                                    Text="Rebound 11 uses WinUI 3 apps instead of .msstyles files to make Windows 11 truly consistent."
                                    TextWrapping="WrapWholeWords" />
                                <FontIcon
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Right"
                                    FontSize="15"
                                    Glyph=""
                                    Opacity="0" />
                            </StackPanel>
                        </Button>
                        <Button
                            Width="225"
                            Height="225"
                            HorizontalContentAlignment="Stretch"
                            CornerRadius="8">
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top">
                                <FontIcon
                                    Width="75"
                                    Height="75"
                                    HorizontalAlignment="Left"
                                    FontSize="60"
                                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                    Glyph="" />
                                <TextBlock
                                    Margin="0,15,0,0"
                                    FontSize="20"
                                    Text="Windows updates" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    FontSize="11"
                                    Opacity="0.7"
                                    Text="Rebound 11 does not block Windows updates.&#x0a;"
                                    TextWrapping="WrapWholeWords" />
                                <FontIcon
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Right"
                                    FontSize="15"
                                    Glyph=""
                                    Opacity="0" />
                            </StackPanel>
                        </Button>
                        <Button
                            Width="225"
                            Height="225"
                            HorizontalContentAlignment="Stretch"
                            CornerRadius="8">
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top">
                                <Grid>
                                    <FontIcon
                                        Width="75"
                                        Height="75"
                                        HorizontalAlignment="Left"
                                        FontSize="60"
                                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                        Glyph="" />
                                    <TextBlock
                                        Margin="0,0,105,0"
                                        HorizontalAlignment="Right"
                                        FontSize="25"
                                        Text="✨" />
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        FontSize="25"
                                        Text="✨" />
                                </Grid>
                                <TextBlock
                                    Margin="0,15,0,0"
                                    FontSize="20"
                                    Text="Rebound 11 updates" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    FontSize="11"
                                    Opacity="0.7"
                                    Text="All Rebound 11 updates are done through the Rebound Hub.&#x0a;"
                                    TextWrapping="WrapWholeWords" />
                                <FontIcon
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Right"
                                    FontSize="15"
                                    Glyph=""
                                    Opacity="0" />
                            </StackPanel>
                        </Button>
                        <Button
                            Width="225"
                            Height="225"
                            HorizontalContentAlignment="Stretch"
                            CornerRadius="8">
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top">
                                <BitmapIcon
                                    Width="75"
                                    Height="75"
                                    HorizontalAlignment="Left"
                                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                    UriSource="/Assets/AppIcons/GitHub_Invertocat_Logo.svg.png" />
                                <TextBlock
                                    Margin="0,15,0,0"
                                    FontSize="20"
                                    Text="GitHub" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    FontSize="11"
                                    Opacity="0.7"
                                    Text="See the project details on GitHub.&#x0a;&#x0a; "
                                    TextWrapping="WrapWholeWords" />
                                <FontIcon
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Right"
                                    FontSize="15"
                                    Glyph="" />
                            </StackPanel>
                            <interactivity:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="Click">
                                    <behaviors:NavigateToUriAction NavigateUri="https://github.com/IviriusCommunity/Rebound" />
                                </core:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
                <InfoBar
                    x:Name="UpdateBar"
                    Title="A new update for Rebound 11 is available!"
                    Margin="0,0,0,25"
                    Severity="Warning">
                    <InfoBar.ActionButton>
                        <Button Content="Download">
                            <interactivity:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="Click">
                                    <behaviors:NavigateToUriAction NavigateUri="https://ivirius.vercel.app/rebound11" />
                                </core:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </Button>
                    </InfoBar.ActionButton>
                </InfoBar>
                <Grid x:Name="Rebound11IsInstalledGrid">
                    <FontIcon
                        Width="90"
                        Height="90"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="75"
                        FontWeight="Black"
                        Glyph="">
                        <FontIcon.Foreground>
                            <LinearGradientBrush>
                                <GradientStop Color="#1493df" />
                                <GradientStop Offset="1" Color="#0669bc" />
                            </LinearGradientBrush>
                        </FontIcon.Foreground>
                    </FontIcon>
                    <Border
                        Width="40"
                        Height="40"
                        Margin="50,40,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        CornerRadius="25">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#56b60e" />
                                <GradientStop Offset="1" Color="#107c10" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <FontIcon
                            FontWeight="ExtraBlack"
                            Foreground="White"
                            Glyph="" />
                    </Border>
                    <TextBlock
                        Margin="110,20,0,0"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Rebound 11 is installed." />
                    <TextBlock
                        Margin="110,45,0,0"
                        Opacity="0.5"
                        Text="v0.0.3 ALPHA" />
                    <StackPanel
                        Margin="0,30,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            HorizontalAlignment="Right"
                            Click="Button_Click_2"
                            ToolTipService.ToolTip="Uninstall Rebound 11 apps and files.">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Image
                                    x:Name="Admin5"
                                    Width="16"
                                    Source="ms-appx:///AppRT/Exported/imageres_78.ico" />
                                <TextBlock Text="Uninstall" />
                            </StackPanel>
                        </Button>
                        <Button
                            HorizontalAlignment="Right"
                            Click="Button_Click_3"
                            ToolTipService.ToolTip="Uninstall Rebound 11 apps, files, and associated apps (for example: Files App).">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Image
                                    x:Name="Admin6"
                                    Width="16"
                                    Source="ms-appx:///AppRT/Exported/imageres_78.ico" />
                                <TextBlock Text="Full Uninstall" />
                            </StackPanel>
                        </Button>
                        <Button
                            HorizontalAlignment="Right"
                            Click="Button_Click_1"
                            Style="{ThemeResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Image
                                    x:Name="Admin1"
                                    Width="16"
                                    Source="ms-appx:///AppRT/Exported/imageres_78.ico" />
                                <TextBlock Text="Patch or Update" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel Margin="0,125,0,0" Spacing="8">
                        <InfoBar
                            Title="If you just downloaded a new version of Rebound Hub, please update Rebound 11 as well."
                            IsClosable="False"
                            IsOpen="True"
                            Severity="Informational" />
                        <SettingsControls:SettingsCard Header="Windows Update" IsClickEnabled="True">
                            <SettingsControls:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="" />
                            </SettingsControls:SettingsCard.HeaderIcon>
                        </SettingsControls:SettingsCard>
                        <SettingsControls:SettingsCard
                            Click="SettingsCard_Click"
                            Header="Winver"
                            IsClickEnabled="True">
                            <SettingsControls:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="" />
                            </SettingsControls:SettingsCard.HeaderIcon>
                        </SettingsControls:SettingsCard>
                    </StackPanel>
                </Grid>
                <Grid x:Name="Rebound11IsNotInstalledGrid">
                    <FontIcon
                        Width="90"
                        Height="90"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="75"
                        FontWeight="Black"
                        Glyph="">
                        <FontIcon.Foreground>
                            <LinearGradientBrush>
                                <GradientStop Color="#1493df" />
                                <GradientStop Offset="1" Color="#0669bc" />
                            </LinearGradientBrush>
                        </FontIcon.Foreground>
                    </FontIcon>
                    <Border
                        Width="40"
                        Height="40"
                        Margin="50,40,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        CornerRadius="25">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#ea6322" />
                                <GradientStop Offset="1" Color="#c13408" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <FontIcon
                            Margin="1,1,-1,-1"
                            FontWeight="ExtraBlack"
                            Foreground="White"
                            Glyph="" />
                    </Border>
                    <TextBlock
                        Margin="110,20,0,0"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Rebound 11 is not installed." />
                    <TextBlock
                        Margin="110,45,0,0"
                        Opacity="0.5"
                        Text="You can install Rebound 11 here." />
                    <StackPanel
                        Margin="0,30,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            HorizontalAlignment="Right"
                            Click="Button_Click_1"
                            Style="{ThemeResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Image
                                    x:Name="Admin3"
                                    Width="16"
                                    Source="ms-appx:///AppRT/Exported/imageres_78.ico" />
                                <TextBlock Text="Install" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid x:Name="Rebound11IsInstallingGrid">
                    <FontIcon
                        Width="90"
                        Height="90"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="75"
                        FontWeight="Black"
                        Glyph="">
                        <FontIcon.Foreground>
                            <LinearGradientBrush>
                                <GradientStop Color="#1493df" />
                                <GradientStop Offset="1" Color="#0669bc" />
                            </LinearGradientBrush>
                        </FontIcon.Foreground>
                    </FontIcon>
                    <Border
                        Width="40"
                        Height="40"
                        Margin="50,40,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        CornerRadius="25">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#fedc00" />
                                <GradientStop Offset="1" Color="#fdbb01" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <FontIcon
                            Margin="1,-1,-1,1"
                            FontSize="35"
                            Foreground="Black"
                            Glyph="" />
                    </Border>
                    <TextBlock
                        Margin="110,20,0,0"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Configure Rebound 11 Installation" />
                    <TextBlock
                        Margin="110,45,0,0"
                        Opacity="0.5"
                        Text="Choose the apps you would like to install." />
                    <StackPanel
                        Margin="0,30,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            HorizontalAlignment="Right"
                            Click="Button_Click"
                            Style="{ThemeResource AccentButtonStyle}">
                            <TextBlock Text="Install Rebound 11" />
                        </Button>
                    </StackPanel>
                    <StackPanel Margin="0,125,0,0" Spacing="8">
                        <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Installation templates" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.Column="0"
                                Padding="12"
                                HorizontalAlignment="Stretch"
                                Content="☁️ Lightweight"
                                FontSize="20"
                                IsEnabled="False" />
                            <Button
                                Grid.Column="2"
                                Padding="12"
                                HorizontalAlignment="Stretch"
                                Content="✨ Recommended"
                                FontSize="20"
                                IsEnabled="False" />
                            <Button
                                Grid.Column="4"
                                Padding="12"
                                HorizontalAlignment="Stretch"
                                Content="⚙️ Full"
                                FontSize="20"
                                IsEnabled="False" />
                        </Grid>
                        <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Items" />
                        <StackPanel Spacing="12">
                            <Expander
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Header="Common"
                                IsExpanded="True">
                                <StackPanel>
                                    <CheckBox
                                        x:Name="FilesCheck"
                                        Content="File Explorer (Files - 3rd party)"
                                        IsChecked="True"
                                        IsEnabled="False" />
                                    <InfoBar
                                        Title="Files will not be uninstalled by Rebound Hub and you will have to uninstall it manually."
                                        Margin="0,8"
                                        IsClosable="False" />
                                    <CheckBox
                                        Content="Remote Desktop"
                                        IsChecked="True"
                                        IsEnabled="False" />
                                    <CheckBox
                                        x:Name="RunCheck"
                                        Content="Run"
                                        IsChecked="True" />
                                    <CheckBox
                                        Content="Steps Recorder"
                                        IsChecked="True"
                                        IsEnabled="False" />
                                    <CheckBox
                                        x:Name="WinverCheck"
                                        Content="Winver"
                                        IsChecked="True" />
                                    <RadioButtons
                                        Margin="0,15,0,0"
                                        Header="WordPad"
                                        IsEnabled="False"
                                        SelectedIndex="2">
                                        <RadioButton Content="Keep original" />
                                        <RadioButton Content="Ivirius Text Editor (partial launch support)" />
                                        <RadioButton Content="Ivirius Text Editor Plus (recommended)" />
                                    </RadioButtons>
                                    <InfoBar
                                        x:Name="ivrpluswarning"
                                        Title="You must have a valid copy of Ivirius Text Editor installed on your PC to set it as the default Rebound 11 WordPad replacement. Consider purchasing Ivirius Text Editor Plus and installing this option later if you haven't already."
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Stretch"
                                        IsClosable="False"
                                        IsOpen="True"
                                        Severity="Warning" />
                                </StackPanel>
                            </Expander>
                            <Expander
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Header="Productivity">
                                <StackPanel>
                                    <CheckBox
                                        Content="Character Map"
                                        IsChecked="True"
                                        IsEnabled="False" />
                                    <CheckBox
                                        Content="Mobility Center (All devices)"
                                        IsChecked="True"
                                        IsEnabled="False" />
                                    <CheckBox
                                        x:Name="OSKCheck"
                                        Content="On-screen keyboard"
                                        IsChecked="True" />
                                    <CheckBox
                                        Content="Presentation Settings (All devices)"
                                        IsChecked="True"
                                        IsEnabled="False" />
                                    <CheckBox
                                        Content="Sticky Keys and Filter keys"
                                        IsChecked="True"
                                        IsEnabled="False" />
                                    <CheckBox
                                        Content="Volume Mixer (sndvol.exe)"
                                        IsChecked="True"
                                        IsEnabled="False" />
                                </StackPanel>
                            </Expander>
                            <Expander
                                HorizontalAlignment="Stretch"
