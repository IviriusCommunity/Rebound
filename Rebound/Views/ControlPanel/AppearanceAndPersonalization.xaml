                                                    Width="50"
                                                    Height="15"
                                                    Margin="20"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Background="#00BBFF"
                                                    CornerRadius="4" />
                                            </Grid>
                                        </Button>
                                        <Button
                                            Padding="8"
                                            ToolTipService.ToolTip="Light - Cyan"
                                            Tag="CyanLight"
                                            Click="ApplyThemeClick">
                                            <Grid RequestedTheme="Light">
