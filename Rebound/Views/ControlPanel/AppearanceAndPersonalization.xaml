                                                    VerticalAlignment="Bottom"
                                                    Background="#CC88EE"
                                                    CornerRadius="4" />
                                            </Grid>
                                        </Button>
                                        <Button
                                            Padding="8"
                                            ToolTipService.ToolTip="Light - Crimson"
                                            Tag="CrimsonLight"
                                            Click="ApplyThemeClick">
                                            <Grid RequestedTheme="Light">
                                                <Image
                                                    Width="250"
                                                    Height="150"
                                                    Source="/Assets/Wallpapers/WallpaperLightCrimson.png"
                                                    Stretch="UniformToFill" />
                                                <Border
                                                    Width="125"
                                                    Height="100"
                                                    Margin="10"
