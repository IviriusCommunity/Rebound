        <ContentDialog x:Name="PleaseWaitDialog" Title="Please wait">
            <Grid>
                <ProgressRing IsIndeterminate="True" Width="50" Height="50" HorizontalAlignment="Center"/>
            </Grid>
        </ContentDialog>
    </Grid>
</Page>
