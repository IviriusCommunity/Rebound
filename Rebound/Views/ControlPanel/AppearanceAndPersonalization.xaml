                                        <Button
                                            Padding="8"
                                            ToolTipService.ToolTip="Light - Blue"
                                            Tag="BlueLight"
                                            Click="ApplyThemeClick">
                                            <Grid RequestedTheme="Light">
                                                <Image
                                                    Width="250"
                                                    Height="150"
                                                    Source="/Assets/Wallpapers/WallpaperLightBlue.png"
                                                    Stretch="UniformToFill"/>
                                                <Border
                                                    Width="125"
                                                    Height="100"
                                                    Margin="10"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
                                                    CornerRadius="4" />
                                                <StackPanel
                                                    Width="100"
                                                    Margin="0,0,22,72"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Spacing="10">
                                                    <Border
                                                        Height="1"
                                                        HorizontalAlignment="Stretch"
                                                        Background="{ThemeResource TextFillColorPrimary}" />
                                                    <Border
                                                        Height="1"
                                                        HorizontalAlignment="Stretch"
                                                        Background="{ThemeResource TextFillColorPrimary}" />
                                                    <Border
                                                        Width="75"
                                                        Height="1"
                                                        HorizontalAlignment="Left"
                                                        Background="{ThemeResource TextFillColorPrimary}" />
                                                </StackPanel>
                                                <Border
                                                    Width="50"
                                                    Height="15"
                                                    Margin="20"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Background="#0066BB"
                                                    CornerRadius="4" />
                                            </Grid>
                                        </Button>
