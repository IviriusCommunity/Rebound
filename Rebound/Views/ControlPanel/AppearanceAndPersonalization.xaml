                                                    <Border
                                                        Height="1"
                                                        HorizontalAlignment="Stretch"
                                                        Background="{ThemeResource TextFillColorPrimary}" />
                                                    <Border
                                                        Width="75"
                                                        Height="1"
                                                        HorizontalAlignment="Left"
                                                        Background="{ThemeResource TextFillColorPrimary}" />
                                                </StackPanel>
                                                <Border
                                                    Width="50"
                                                    Height="15"
                                                    Margin="20"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Background="#00DDEE"
                                                    CornerRadius="4" />
                                            </Grid>
                                        </Button>
                                        <Button
                                            Padding="8"
                                            ToolTipService.ToolTip="Light - Purple"
                                            Tag="PurpleLight"
                                            Click="ApplyThemeClick">
                                            <Grid RequestedTheme="Light">
                                                <Image
                                                    Width="250"
                                                    Height="150"
                                                    Source="/Assets/Wallpapers/WallpaperLightPurple.png"
                                                    Stretch="UniformToFill" />
                                                <Border
                                                    Width="125"
                                                    Height="100"
                                                    Margin="10"
