                                    <ContentPresenter
                                        x:Name="ContentPresenter"
                                        Padding="{TemplateBinding Padding}"
                                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                        AutomationProperties.AccessibilityView="Raw"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                        ContentTransitions="{TemplateBinding ContentTransitions}"
                                        CornerRadius="4" />
                                    <FontIcon
                                        FontSize="11"
                                        Glyph="&#xE922;"
                                        Opacity="0" />
                                    <Grid x:Name="SmallIconParent">
                                        <Grid.RenderTransform>
                                            <TranslateTransform x:Name="SmallIconTransform" X="4" Y="3" />
                                        </Grid.RenderTransform>
                                        <Border
                                            x:Name="SmallIcon"
                                            Width="9"
                                            Height="9"
                                            Margin="0,-8,6,0"
                                            BorderBrush="{StaticResource TextFillColorPrimaryBrush}"
                                            BorderThickness="0,1,1,0"
                                            CornerRadius="1"
                                            Opacity="0" />
                                    </Grid>
                                    <Border
                                        x:Name="Icon"
                                        Width="11"
                                        Height="11"
                                        BorderBrush="{StaticResource TextFillColorPrimaryBrush}"
                                        BorderThickness="1"
                                        CornerRadius="1">
                                        <Border.RenderTransform>
                                            <TranslateTransform x:Name="IconTransform" X="0" Y="0" />
                                        </Border.RenderTransform>
                                    </Border>
                                    <ToolkitControls:DropShadowPanel
                                        x:Name="Glow"
                                        Grid.Row="0"
                                        Margin="2,0,2,2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        CornerRadius="2"
                                        ShadowOpacity="0.93"
                                        Color="#BBFFBB">
                                        <Grid
                                            x:Name="Pipe"
                                            Width="0.1"
                                            Height="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            CornerRadius="2">
                                            <Grid.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Offset="0.0" Color="#BBFFBB" />
                                                    <GradientStop Offset="0.5" Color="#11BB11" />
                                                    <GradientStop Offset="1.0" Color="#BBFFBB" />
                                                </LinearGradientBrush>
                                            </Grid.Background>
